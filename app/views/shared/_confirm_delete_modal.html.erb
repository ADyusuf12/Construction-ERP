<div id="confirm-delete-modal"
     class="hidden fixed inset-0 flex items-center justify-center z-50"
     aria-labelledby="modal-title"
     role="dialog"
     aria-modal="true"
     data-confirm-delete-target="modal">
  <!-- Overlay -->
  <div class="absolute inset-0 bg-black/40 backdrop-blur-md"
       data-action="click->confirm-delete#close"></div>
  <!-- Modal card -->
  <div class="relative bg-hamzis-white/30 dark:bg-hamzis-black/30
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6
              text-center max-w-sm w-full">
    <h2 class="text-lg font-bold text-hamzis-brown dark:text-hamzis-copper mb-4" id="modal-title">
      <%= title %>
    </h2>
    <p class="text-sm mb-6 text-hamzis-black dark:text-hamzis-white">
      <%= message %>
    </p>
    <div class="flex justify-center gap-4">
      <%= button_to "Delete", confirm_path, method: :delete,
            class: "px-4 py-2 rounded bg-red-600 text-white hover:bg-red-800 transition" %>
      <button type="button"
              data-action="click->confirm-delete#close"
        class="px-4 py-2 rounded bg-hamzis-brown text-hamzis-white hover:bg-hamzis-copper transition">
        Cancel
      </button>
    </div>
  </div>
</div>

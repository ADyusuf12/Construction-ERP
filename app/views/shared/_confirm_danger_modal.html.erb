<div class="hidden fixed inset-0 z-[100] flex items-center justify-center p-6" data-confirm-modal-target="modal" data-variant="danger">
  <%# Faded Backdrop: Page remains visible but darkened/slightly softened %>
  <div class="absolute inset-0 bg-brand-black/25 backdrop-blur-[2px]" data-action="click->confirm-modal#close"></div>
  <%# Industrial Glass Modal %>
  <div class="relative bg-white/40 dark:bg-black/40 backdrop-blur-xl border border-white/30 dark:border-red-600/30 rounded-2xl shadow-2xl overflow-hidden max-w-[300px] w-full z-10 box-border">
    <%# Thin Warning Indicator %>
    <div class="h-1 w-full bg-red-600 shadow-[0_0_10px_rgba(220,38,38,0.5)]"></div>
    <div class="p-5">
      <div class="flex items-center gap-3 mb-5">
        <div class="w-8 h-8 rounded-lg bg-red-600/10 border border-red-600/30 flex items-center justify-center">
          <svg class="w-4 h-4 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
            <path d="M12 9v3.75m0 3.75h.007v.008H12v-.008z" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </div>
        <h2 class="text-[11px] font-black uppercase tracking-[0.2em] text-brand-secondary dark:text-white" data-modal-title>System Alert</h2>
      </div>
      <%# Translucent message well %>
      <div class="bg-black/5 dark:bg-white/5 border border-white/10 rounded-xl p-4 mb-5">
        <p class="text-[10px] font-bold uppercase tracking-wide leading-relaxed text-brand-secondary dark:text-brand-primary opacity-90" data-modal-message>
          Awaiting command...
        </p>
      </div>
      <%# Action Buttons %>
      <div class="flex flex-col gap-2">
        <form method="post" action="" data-turbo="true" class="m-0">
          <input type="hidden" name="_method" value="delete">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <button type="submit"
                  class="w-full py-3 rounded-xl bg-red-600 text-white font-black uppercase tracking-widest text-[9px] hover:bg-red-700 hover:shadow-lg transition-all active:scale-95">
            Confirm Execution
          </button>
        </form>
        <button type="button"
                data-action="click->confirm-modal#close"
          class="w-full py-3 rounded-xl bg-white/5 dark:bg-black/20 text-brand-secondary dark:text-brand-primary text-[9px] font-black uppercase tracking-widest border border-white/10 hover:bg-white/10 transition-colors">
          Abort
        </button>
      </div>
    </div>
    <%# Technical Tag %>
    <div class="py-2 px-5 border-t border-white/10 flex justify-end">
      <span class="text-[6px] font-mono uppercase opacity-40 tracking-widest"></span>
    </div>
  </div>
</div>
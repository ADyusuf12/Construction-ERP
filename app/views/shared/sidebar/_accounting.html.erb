<% if user_signed_in? && (
      policy(Accounting::Transaction).index? ||
      policy(Accounting::SalaryBatch).index? ||
      policy(Accounting::Salary).index? ||
      policy(Accounting::Deduction).index?
    ) %>
<div class="space-y-3">
  <!-- Section Header -->
  <span class="sidebar-label block px-3 py-1 text-xs font-semibold tracking-wider uppercase border-b border-hamzis-brown/30 text-hamzis-textLight dark:text-hamzis-textDark" data-sidebar-target="label">
    Accounting
  </span>
  <div class="ml-2 space-y-2">
    <!-- Transactions -->
    <% if policy(Accounting::Transaction).index? %>
      <button type="button"
              class="flex justify-between items-center w-full px-3 py-2 rounded-lg bg-hamzis-brown/20 hover:bg-gradient-to-r hover:from-hamzis-copper hover:to-hamzis-brown transition-all duration-300 shadow-sm"
              onclick="document.getElementById('transactions-dropdown').classList.toggle('hidden')">
        <span class="flex items-center">
          <!-- Refined icon: credit card / ledger -->
          <svg class="w-5 h-5 mr-2 opacity-80" xmlns="http://www.w3.org/2000/svg" fill="none"
               viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M3 7h18M3 11h18M3 15h10" />
          </svg>
          <span class="sidebar-label font-medium text-hamzis-textLight dark:text-hamzis-textDark" data-sidebar-target="label">
            Transactions
          </span>
        </span>
        <svg class="w-4 h-4 transform transition-transform opacity-70" id="transactions-chevron"
             xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>
      <div id="transactions-dropdown" class="ml-4 space-y-1 hidden">
        <%= link_to accounting_transactions_path,
      class: "flex items-center px-3 py-2 rounded-lg transition-all duration-300 #{current_page?(accounting_transactions_path) ? 'bg-gradient-to-r from-hamzis-copper to-hamzis-brown shadow-md' : 'hover:bg-gradient-to-r hover:from-hamzis-copper hover:to-hamzis-brown'}" do %>
          <span class="sidebar-label text-hamzis-textLight dark:text-hamzis-textDark" data-sidebar-target="label">
            All Transactions
          </span>
        <% end %>
        <% if policy(Accounting::Transaction).create? %>
          <%= link_to new_accounting_transaction_path,
        class: "flex items-center px-3 py-2 rounded-lg transition-all duration-300 #{current_page?(new_accounting_transaction_path) ? 'bg-gradient-to-r from-hamzis-copper to-hamzis-brown shadow-md' : 'hover:bg-gradient-to-r hover:from-hamzis-copper hover:to-hamzis-brown'}" do %>
            <span class="sidebar-label text-hamzis-textLight dark:text-hamzis-textDark" data-sidebar-target="label">
              New Transaction
            </span>
          <% end %>
        <% end %>
      </div>
    <% end %>
    <!-- Expenses -->
    <button type="button"
        class="flex justify-between items-center w-full px-3 py-2 rounded-lg bg-hamzis-brown/20 hover:bg-gradient-to-r hover:from-hamzis-copper hover:to-hamzis-brown transition-all duration-300 shadow-sm"
        onclick="document.getElementById('expenses-dropdown').classList.toggle('hidden')">
      <span class="flex items-center">
        <!-- Icon: receipt / bill -->
        <svg class="w-5 h-5 mr-2 opacity-80" xmlns="http://www.w3.org/2000/svg" fill="none"
         viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M9 17v-2h6v2H9zm-4 4h14a2 2 0 002-2V5a2 2 0 00-2-2H7l-2 2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <span class="sidebar-label font-medium text-hamzis-textLight dark:text-hamzis-textDark" data-sidebar-target="label">
          Expenses
        </span>
      </span>
      <svg class="w-4 h-4 transform transition-transform opacity-70" id="expenses-chevron"
       xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
    </button>
    <div id="expenses-dropdown" class="ml-4 space-y-1 hidden">
      <%= link_to project_expenses_path,
      class: "flex items-center px-3 py-2 rounded-lg transition-all duration-300 #{current_page?(project_expenses_path) ? 'bg-gradient-to-r from-hamzis-copper to-hamzis-brown shadow-md' : 'hover:bg-gradient-to-r hover:from-hamzis-copper hover:to-hamzis-brown'}" do %>
        <span class="sidebar-label text-hamzis-textLight dark:text-hamzis-textDark" data-sidebar-target="label">
          All Expenses
        </span>
      <% end %>
      <%= link_to new_project_expense_path,
      class: "flex items-center px-3 py-2 rounded-lg transition-all duration-300 #{current_page?(new_project_expense_path) ? 'bg-gradient-to-r from-hamzis-copper to-hamzis-brown shadow-md' : 'hover:bg-gradient-to-r hover:from-hamzis-copper hover:to-hamzis-brown'}" do %>
        <span class="sidebar-label text-hamzis-textLight dark:text-hamzis-textDark" data-sidebar-target="label">
          New Expense
        </span>
      <% end %>
    </div>
    <!-- Salary Batches -->
    <% if policy(Accounting::SalaryBatch).index? %>
      <button type="button"
              class="flex justify-between items-center w-full px-3 py-2 rounded-lg bg-hamzis-brown/20 hover:bg-gradient-to-r hover:from-hamzis-copper hover:to-hamzis-brown transition-all duration-300 shadow-sm"
              onclick="document.getElementById('salary-batches-dropdown').classList.toggle('hidden')">
        <span class="flex items-center">
          <!-- Refined icon: stacked layers -->
          <svg class="w-5 h-5 mr-2 opacity-80" xmlns="http://www.w3.org/2000/svg" fill="none"
               viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M12 3l8 4-8 4-8-4 8-4zm0 8l8 4-8 4-8-4 8-4zm0 8l8 4-8 4-8-4 8-4z" />
          </svg>
          <span class="sidebar-label font-medium text-hamzis-textLight dark:text-hamzis-textDark" data-sidebar-target="label">
            Salary Batches
          </span>
        </span>
        <svg class="w-4 h-4 transform transition-transform opacity-70" id="salary-batches-chevron"
             xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>
      <div id="salary-batches-dropdown" class="ml-4 space-y-1 hidden">
        <%= link_to accounting_salary_batches_path,
      class: "flex items-center px-3 py-2 rounded-lg transition-all duration-300 #{current_page?(accounting_salary_batches_path) ? 'bg-gradient-to-r from-hamzis-copper to-hamzis-brown shadow-md' : 'hover:bg-gradient-to-r hover:from-hamzis-copper hover:to-hamzis-brown'}" do %>
          <span class="sidebar-label text-hamzis-textLight dark:text-hamzis-textDark" data-sidebar-target="label">
            All Batches
          </span>
        <% end %>
        <% if policy(Accounting::SalaryBatch).create? %>
          <%= link_to new_accounting_salary_batch_path,
        class: "flex items-center px-3 py-2 rounded-lg transition-all duration-300 #{current_page?(new_accounting_salary_batch_path) ? 'bg-gradient-to-r from-hamzis-copper to-hamzis-brown shadow-md' : 'hover:bg-gradient-to-r hover:from-hamzis-copper hover:to-hamzis-brown'}" do %>
            <span class="sidebar-label text-hamzis-textLight dark:text-hamzis-textDark" data-sidebar-target="label">
              New Batch
            </span>
          <% end %>
        <% end %>
      </div>
    <% end %>
    <!-- Salaries -->
    <% if policy(Accounting::Salary).index? %>
      <%= link_to accounting_salaries_path,
          class: "flex items-center px-3 py-2 rounded-lg transition-all duration-300 #{current_page?(accounting_salaries_path) ? 'bg-gradient-to-r from-hamzis-copper to-hamzis-brown shadow-md' : 'hover:bg-gradient-to-r hover:from-hamzis-copper hover:to-hamzis-brown'}" do %>
        <!-- Refined icon: wallet/money -->
        <svg class="w-5 h-5 mr-2 opacity-80" xmlns="http://www.w3.org/2000/svg" fill="none"
             viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 6h16M4 10h16M4 14h10a2 2 0 002-2V6a2 2 0 00-2-2H4a2 2 0 00-2 2v6a2 2 0 002 2z" />
        </svg>
        <span class="sidebar-label text-hamzis-textLight dark:text-hamzis-textDark" data-sidebar-target="label"> Salaries </span>
      <% end %>
    <% end %>
    <!-- Deductions -->
    <% if policy(Accounting::Deduction).index? %>
      <%= link_to accounting_deductions_path,
          class: "flex items-center px-3 py-2 rounded-lg transition-all duration-300 #{current_page?(accounting_deductions_path) ? 'bg-gradient-to-r from-hamzis-copper to-hamzis-brown shadow-md' : 'hover:bg-gradient-to-r hover:from-hamzis-copper hover:to-hamzis-brown'}" do %>
        <!-- Refined icon: minus circle -->
        <svg class="w-5 h-5 mr-2 opacity-80" xmlns="http://www.w3.org/2000/svg" fill="none"
             viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 9v6m9-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="sidebar-label text-hamzis-textLight dark:text-hamzis-textDark" data-sidebar-target="label"> Deductions </span>
      <% end %>
    <% end %>
  </div>
</div>
<% end %>

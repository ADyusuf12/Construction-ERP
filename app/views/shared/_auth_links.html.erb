<!-- Auth / Profile -->
<div class="px-4 py-6 border-t border-hamzis-brown/20">
  <% if user_signed_in? %>
    <% if current_user.employee && policy(current_user.employee).show? %>
      <%= link_to hr_employee_path(current_user.employee),
            class: "flex items-center w-full px-3 py-2 mb-2 rounded bg-hamzis-black/20 hover:bg-hamzis-copper transition-colors" do %>
        <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A9 9 0 1118.879 6.196 9 9 0 015.121 17.804z" />
        </svg>
        Profile
      <% end %>
    <% end %>
    <%= button_to "Logout", destroy_user_session_path, method: :delete,
          form: { class: "inline" },
          class: "w-full px-3 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition-colors" %>
  <% else %>
    <%= link_to "Login", new_user_session_path,
          class: "w-full block px-3 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition-colors" %>
  <% end %>
</div>
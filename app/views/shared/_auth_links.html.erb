<!-- Auth Links -->
<div class="px-4 py-6 border-t border-hamzis-brown/30 backdrop-blur-lg">
  <% if user_signed_in? %>
    <!-- Logout -->
    <%= button_to destroy_user_session_path, method: :delete,
          form: { class: "inline" },
          class: "flex items-center w-full px-3 py-2 rounded-lg bg-gradient-to-r from-hamzis-copper to-hamzis-brown
                 text-hamzis-white hover:from-hamzis-black hover:to-hamzis-copper
                 transition-all duration-300 shadow-md font-semibold" do %>
      <svg class="w-5 h-5 mr-2 opacity-80" xmlns="http://www.w3.org/2000/svg" fill="none"
           viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M6 18L18 6M6 6l12 12" />
      </svg>
      <span class="sidebar-label text-hamzis-white" data-sidebar-target="label">Logout</span>
    <% end %>
  <% else %>
    <!-- Login -->
    <%= link_to new_user_session_path,
          class: "flex items-center w-full px-3 py-2 rounded-lg bg-gradient-to-r from-hamzis-copper to-hamzis-brown
                 text-hamzis-white hover:from-hamzis-black hover:to-hamzis-copper
                 transition-all duration-300 shadow-md font-semibold text-center" do %>
      <svg class="w-5 h-5 mr-2 opacity-80" xmlns="http://www.w3.org/2000/svg" fill="none"
           viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M15 12a3 3 0 11-6 0 3 3 0 016 0zM12 14v7m0-7H5m7 0h7" />
      </svg>
      <span class="sidebar-label text-hamzis-white" data-sidebar-target="label">Login</span>
    <% end %>
  <% end %>
</div>

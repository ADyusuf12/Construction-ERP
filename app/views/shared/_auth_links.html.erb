<!-- Auth Links -->
<div class="px-4 py-6 border-t border-hamzis-brown/10 dark:border-hamzis-copper/10 bg-hamzis-brown/5 dark:bg-hamzis-copper/5">
  <% if user_signed_in? %>
    <!-- Admin Panel (System Governance) -->
    <% if current_user.role_admin? %>
      <%= link_to admin_users_path,
            class: "flex items-center w-full mb-3 px-4 py-2.5 rounded-xl border border-hamzis-brown/20 bg-hamzis-brown text-white shadow-lg hover:bg-white hover:text-hamzis-brown transition-all duration-500 active:scale-95" do %>
        <svg class="w-4 h-4 mr-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
        </svg>
        <span class="text-[11px] font-black uppercase tracking-[0.2em]">Admin Panel</span>
      <% end %>
    <% end %>
    <!-- Logout (System Termination) -->
    <%= button_to destroy_user_session_path, method: :delete,
          form: { class: "block w-full" },
          class: "flex items-center w-full px-4 py-2.5 rounded-xl border border-red-600/20 bg-red-600/10 text-red-600 shadow-sm hover:bg-red-600 hover:text-white transition-all duration-500 active:scale-95 group" do %>
      <svg class="w-4 h-4 mr-3 opacity-70 group-hover:opacity-100" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
      </svg>
      <span class="text-[11px] font-black uppercase tracking-[0.2em]">Logout</span>
    <% end %>
  <% else %>
    <!-- Login (Access Request) -->
    <%= link_to new_user_session_path,
          class: "flex items-center w-full px-4 py-2.5 rounded-xl border border-hamzis-copper/20 bg-hamzis-copper text-white shadow-lg hover:bg-white hover:text-hamzis-brown transition-all duration-500 active:scale-95" do %>
      <svg class="w-4 h-4 mr-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
      </svg>
      <span class="text-[11px] font-black uppercase tracking-[0.2em]">Login</span>
    <% end %>
  <% end %>
</div>

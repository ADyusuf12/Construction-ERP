<div class="fixed top-6 right-6 z-[100] flex flex-col gap-3 w-full max-w-sm pointer-events-none">
  <% flash.each do |key, value| %>
    <%
      is_notice = key == "notice" || key == "success"
      bg_style = is_notice ? "bg-hamzis-copper/20 border-hamzis-copper/40 text-hamzis-brown dark:text-hamzis-copper"
                           : "bg-red-500/10 border-red-500/30 text-red-600 dark:text-red-400"
      icon_path = is_notice ? "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                            : "M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
    %>
    <div
      class="pointer-events-auto flex items-start gap-4 p-4 rounded-2xl border backdrop-blur-xl shadow-2xl transition-all duration-500 translate-x-0 <%= bg_style %>"
      data-controller="flash"
      data-flash-target="message"
    >
      <!-- Icon -->
      <div class="shrink-0">
        <svg xmlns="http://www.w3.org" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= icon_path %>" />
        </svg>
      </div>

      <!-- Content -->
      <div class="flex-1 pt-0.5">
        <p class="text-xs font-black uppercase tracking-widest opacity-60 mb-1">
          <%= is_notice ? "Success" : "Attention Required" %>
        </p>
            <p class="text-sm font-semibold leading-relaxed">
              <%= value %>
            </p>
          </div>
          <!-- Close Action -->
          <button
        type="button"
        class="shrink-0 opacity-50 hover:opacity-100 transition-opacity"
        data-action="click->flash#dismiss"
            >
            <svg xmlns="http://www.w3.org" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      <% end %>
    </div>

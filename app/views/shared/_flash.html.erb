<% flash.each do |key, value| %>
  <%# Decide color scheme based on flash type %>
  <% bg_color = case key
      when "notice" then "bg-green-800/30 border-green-500 text-green-400"
      else "bg-red-800/30 border-red-500 text-red-400"
    end %>
  <div
    class="relative p-4 mb-4 rounded-lg text-sm backdrop-blur-md shadow-lg transition-opacity duration-500 <%= bg_color %>"
    data-controller="flash"
    data-flash-target="message"
    data-flash-key="<%= key %>"
  >
    <span class="block"><%= value %></span>
    <!-- Close button -->
    <button
      type="button"
      class="absolute top-2 right-2 text-white/70 hover:text-white"
      data-action="click->flash#dismiss"
      >
      âœ•
    </button>
  </div>
<% end %>

<div class="hidden fixed inset-0 z-[100] flex items-center justify-center p-6" data-confirm-modal-target="modal" data-variant="success">
  <%# Faded Backdrop: Keeps the underlying ERP data visible but slightly darkened %>
  <div class="absolute inset-0 bg-brand-black/25 backdrop-blur-[2px]" data-action="click->confirm-modal#close"></div>
  <%# Industrial Glass Modal Container %>
  <div class="relative bg-white/40 dark:bg-black/40 backdrop-blur-xl border border-white/30 dark:border-green-600/30 rounded-2xl shadow-2xl overflow-hidden max-w-[300px] w-full z-10 box-border">
    <%# Neon Status Bar %>
    <div class="h-1 w-full bg-green-600 shadow-[0_0_10px_rgba(34,197,94,0.5)]"></div>
    <div class="p-5">
      <%# Header Section %>
      <div class="flex items-center gap-3 mb-5">
        <div class="w-8 h-8 rounded-lg bg-green-600/10 border border-green-600/30 flex items-center justify-center">
          <svg class="w-4 h-4 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
            <path d="M5 13l4 4L19 7" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </div>
        <div>
          <h2 class="text-[11px] font-black uppercase tracking-[0.2em] text-brand-secondary dark:text-white leading-none" data-modal-title>System Confirm</h2>
          <span class="text-[7px] font-bold uppercase opacity-40 tracking-widest mt-1 block">Validation Required</span>
        </div>
      </div>
      <%# Translucent Message Well %>
      <div class="bg-black/5 dark:bg-white/5 border border-white/10 rounded-xl p-4 mb-5">
        <p class="text-[10px] font-bold uppercase tracking-wide leading-relaxed text-brand-secondary dark:text-brand-primary opacity-90" data-modal-message>
          Executing verified process...
        </p>
      </div>
      <%# Action Block %>
      <div class="flex flex-col gap-2">
        <form method="post" action="" data-turbo="true" class="m-0">
          <input type="hidden" name="_method" value="patch">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <button type="submit"
                  class="w-full py-3 rounded-xl bg-green-600 text-white font-black uppercase tracking-widest text-[9px] hover:bg-green-700 hover:shadow-lg transition-all active:scale-95 flex items-center justify-center gap-2">
            <span>Commit Changes</span>
            <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </button>
        </form>
        <button type="button"
                data-action="click->confirm-modal#close"
          class="w-full py-3 rounded-xl bg-white/5 dark:bg-black/20 text-brand-secondary dark:text-brand-primary text-[9px] font-black uppercase tracking-widest border border-white/10 hover:bg-white/10 transition-colors">
          Decline
        </button>
      </div>
    </div>
    <%# Technical Meta Footer %>
    <div class="py-2 px-5 border-t border-white/10 flex justify-between items-center opacity-30">
      <span class="text-[6px] font-mono uppercase tracking-widest">Op_Verified</span>
      <span class="text-[6px] font-mono uppercase tracking-widest">Node: <%= SecureRandom.hex(2).upcase %></span>
    </div>
  </div>
</div>
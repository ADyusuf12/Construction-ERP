<%= form_with(model: @client, scope: :client, local: true, class: "space-y-6 hr-form") do |f| %>
  <% if @client.errors.any? %>
    <div class="p-4 rounded bg-hamzis-copper text-hamzis-white">
      <h3 class="font-semibold"><%= pluralize(@client.errors.count, "error") %> prevented saving:</h3>
      <ul class="list-disc ml-6 mt-2 text-sm">
        <% @client.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- Client details card -->
    <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 border rounded-xl p-5 shadow-sm">
      <h4 class="text-sm font-semibold text-hamzis-brown dark:text-hamzis-copper mb-3">Client Details</h4>
      <div class="space-y-3">
        <div>
          <%= f.label :user_id, "Link to Hamzis User", class: "block text-xs font-medium text-hamzis-brown dark:text-hamzis-copper" %>
          <%= f.collection_select :user_id,
        User.where(role: :client).where.missing(:client),
        :id, :email,
        { include_blank: "Select a user to link this client to" },
        class: "w-full px-5 py-1 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
        </div>
        <%= f.label :name, "Client Name", class: "block text-xs font-medium text-hamzis-brown dark:text-hamzis-copper" %>
        <%= f.text_field :name, class: "w-full px-5 py-1 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
        <%= f.label :company, "Company", class: "block text-xs font-medium text-hamzis-brown dark:text-hamzis-copper" %>
        <%= f.text_field :company, class: "w-full px-5 py-1 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
        <%= f.label :email, "Email", class: "block text-xs font-medium text-hamzis-brown dark:text-hamzis-copper" %>
        <%= f.email_field :email, class: "w-full px-5 py-1 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
        <%= f.label :phone, "Phone", class: "block text-xs font-medium text-hamzis-brown dark:text-hamzis-copper" %>
        <%= f.telephone_field :phone, class: "w-full px-5 py-1 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
        <%= f.label :address, "Address", class: "block text-xs font-medium text-hamzis-brown dark:text-hamzis-copper" %>
        <%= f.text_area :address, rows: 2, class: "w-full px-5 py-1 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
        <%= f.label :notes, "Notes", class: "block text-xs font-medium text-hamzis-brown dark:text-hamzis-copper" %>
        <%= f.text_area :notes, rows: 3, class: "w-full px-5 py-1 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
      </div>
    </div>
  </div>
  <!-- Actions -->
  <div class="flex flex-col sm:flex-row gap-3 mt-2">
    <%= f.submit (@client.persisted? ? "Update Client" : "Create Client"),
          class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition-colors w-full sm:w-auto" %>
    <%= link_to "Cancel", business_clients_path,
          class: "px-4 py-2 rounded bg-hamzis-brown text-hamzis-white hover:bg-hamzis-copper transition w-full sm:w-auto" %>
  </div>
<% end %>

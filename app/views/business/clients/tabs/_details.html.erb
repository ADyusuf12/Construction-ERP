<% if current_user.role_client? %>
  <!-- Simplified details for client users -->
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6">
    <h3 class="text-xl font-bold mb-4">My Details</h3>
    <ul class="space-y-2 text-sm">
      <li><span class="font-medium">Name:</span> <%= client.name %></li>
      <li><span class="font-medium">Company:</span> <%= client.company %></li>
      <% if client.email.present? %>
        <li><span class="font-medium">Email:</span> <%= client.email %></li>
      <% end %>
      <% if client.phone.present? %>
        <li><span class="font-medium">Phone:</span> <%= client.phone %></li>
      <% end %>
    </ul>
  </div>
<% else %>
  <!-- Full details for internal staff -->
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6">
    <h3 class="text-xl font-bold mb-4">Client Details</h3>
    <ul class="space-y-2 text-sm">
      <li><span class="font-medium">Name:</span> <%= client.name %></li>
      <li><span class="font-medium">Company:</span> <%= client.company %></li>
      <li><span class="font-medium">Email:</span> <%= client.email %></li>
      <li><span class="font-medium">Phone:</span> <%= client.phone %></li>
      <li><span class="font-medium">Address:</span> <%= client.address %></li>
      <li><span class="font-medium">Notes:</span> <%= client.notes %></li>
      <% if client.user.present? %>
        <li><span class="font-medium">Linked Account:</span> <%= client.user.email %></li>
      <% else %>
        <li><span class="font-medium">Linked Account:</span> None</li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="flex-1 flex flex-col items-center justify-center w-full min-h-0 py-12
            bg-gradient-to-br from-hamzis-white via-hamzis-copper/10 to-hamzis-brown/20
            dark:from-hamzis-black dark:via-hamzis-brown/30 dark:to-hamzis-copper/20">
  <div class="flex w-full max-w-6xl items-center justify-center px-4">
    <div class="hidden md:flex md:w-1/2 items-center justify-center p-12">
      <div class="text-center space-y-6">
        <img src="<%= asset_path('hamzis-logo.svg') %>" alt="Hamzis Logo" class="mx-auto w-40 h-40 object-contain opacity-90" />
        <h1 class="text-4xl font-extrabold text-hamzis-brown dark:text-hamzis-copper">Hamzis Systems</h1>
        <p class="text-lg text-hamzis-brown/70 dark:text-hamzis-copper/70">Reset your password securely</p>
      </div>
    </div>
    <div class="flex w-full md:w-1/2 items-center justify-center">
      <div class="w-full max-w-md bg-hamzis-white/40 dark:bg-hamzis-black/40 backdrop-blur-md rounded-2xl shadow-xl p-8 sm:p-10 border border-white/20">
        <div class="md:hidden text-center mb-6">
          <img src="<%= asset_path('hamzis-logo.svg') %>" alt="Hamzis Logo" class="mx-auto w-16 h-16 object-contain mb-2" />
          <h2 class="text-xl font-bold text-hamzis-brown dark:text-hamzis-copper">Hamzis Systems</h2>
        </div>
        <h2 class="text-2xl font-bold text-center mb-1 text-hamzis-brown dark:text-hamzis-copper hidden md:block">Forgot Password?</h2>
        <p class="text-center text-sm text-hamzis-brown/70 dark:text-hamzis-copper/70 mb-6">Enter your email to receive instructions</p>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <% if resource.errors.any? %>
            <div class="mb-4 p-3 rounded bg-red-500/10 border border-red-500/50 text-red-600 text-xs">
              <%= render "devise/shared/error_messages", resource: resource %>
            </div>
          <% end %>
          <div class="mb-6">
            <%= f.label :email, "Email Address", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
                  class: "w-full px-4 py-3 rounded-lg border border-hamzis-brown/30 bg-white/50 dark:bg-black/20 text-gray-900 dark:text-hamzis-copper focus:ring-2 focus:ring-hamzis-copper transition" %>
          </div>
          <div class="mb-6">
            <%= f.submit "Send reset instructions", class: "w-full px-4 py-3 rounded-lg bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition-all font-semibold shadow-md active:scale-95 cursor-pointer" %>
          </div>
        <% end %>
        <div class="text-center text-sm text-hamzis-brown/70 dark:text-hamzis-copper/70"><%= render "devise/shared/links" %></div>
      </div>
    </div>
  </div>
</div>

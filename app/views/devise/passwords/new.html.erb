  
<div class="flex-1 flex flex-col items-center justify-center w-full min-h-0 py-12
            bg-gradient-to-br from-brand-white via-brand-primary/10 to-brand-secondary/20
            dark:from-brand-black dark:via-brand-secondary/30 dark:to-brand-primary/20">
  <div class="flex w-full max-w-6xl items-center justify-center px-4">
    <div class="hidden md:flex md:w-1/2 items-center justify-center p-12">
      <div class="text-center space-y-6">
        <img src="<%= asset_path('company-logo.svg') %>" alt="Logo" class="mx-auto w-40 h-40 object-contain opacity-90" />
        <h1 class="text-4xl font-extrabold text-brand-secondary dark:text-brand-primary">Earmark Systems</h1>
        <p class="text-lg text-brand-secondary/70 dark:text-brand-primary/70">Reset your password securely</p>
      </div>
    </div>
    <div class="flex w-full md:w-1/2 items-center justify-center">
      <div class="w-full max-w-md bg-brand-white/40 dark:bg-brand-black/40 backdrop-blur-md rounded-2xl shadow-xl p-8 sm:p-10 border border-white/20">
        <div class="md:hidden text-center mb-6">
          <img src="<%= asset_path('company-logo.svg') %>" alt="Logo" class="mx-auto w-16 h-16 object-contain mb-2" />
          <h2 class="text-xl font-bold text-brand-secondary dark:text-brand-primary">Earmark Systems</h2>
        </div>
        <h2 class="text-2xl font-bold text-center mb-1 text-brand-secondary dark:text-brand-primary hidden md:block">Forgot Password?</h2>
        <p class="text-center text-sm text-brand-secondary/70 dark:text-brand-primary/70 mb-6">Enter your email to receive instructions</p>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <% if resource.errors.any? %>
            <div class="mb-4 p-3 rounded bg-red-500/10 border border-red-500/50 text-red-600 text-xs">
              <%= render "devise/shared/error_messages", resource: resource %>
            </div>
          <% end %>
          <div class="mb-6">
            <%= f.label :email, "Email Address", class: "block text-sm font-medium mb-1 text-brand-secondary dark:text-brand-primary" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
                  class: "w-full px-4 py-3 rounded-lg border border-brand-secondary/30 bg-white/50 dark:bg-black/20 text-gray-900 dark:text-brand-primary focus:ring-2 focus:ring-brand-primary transition" %>
          </div>
          <div class="mb-6">
            <%= f.submit "Send reset instructions", class: "w-full px-4 py-3 rounded-lg bg-brand-primary text-brand-white hover:bg-brand-black transition-all font-semibold shadow-md active:scale-95 cursor-pointer" %>
          </div>
        <% end %>
        <div class="text-center text-sm text-brand-secondary/70 dark:text-brand-primary/70"><%= render "devise/shared/links" %></div>
      </div>
    </div>
  </div>
</div>
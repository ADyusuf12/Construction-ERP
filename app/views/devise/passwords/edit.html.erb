<div class="flex-1 flex flex-col items-center justify-center w-full min-h-0 py-12
            bg-gradient-to-br from-hamzis-white via-hamzis-copper/10 to-hamzis-brown/20
            dark:from-hamzis-black dark:via-hamzis-brown/30 dark:to-hamzis-copper/20">
  <div class="flex w-full max-w-6xl items-center justify-center px-4">
    <div class="hidden md:flex md:w-1/2 items-center justify-center p-12">
      <div class="text-center space-y-6">
        <img src="<%= asset_path('hamzis-logo.svg') %>" alt="Hamzis Logo" class="mx-auto w-40 h-40 object-contain opacity-90" />
        <h1 class="text-4xl font-extrabold text-hamzis-brown dark:text-hamzis-copper">Hamzis Systems</h1>
        <p class="text-lg text-hamzis-brown/70 dark:text-hamzis-copper/70">Securely manage your projects</p>
      </div>
    </div>
    <div class="flex w-full md:w-1/2 items-center justify-center">
      <div class="w-full max-w-md bg-hamzis-white/40 dark:bg-hamzis-black/40 backdrop-blur-md rounded-2xl shadow-xl p-8 sm:p-10 border border-white/20">
        <div class="md:hidden text-center mb-6">
          <img src="<%= asset_path('hamzis-logo.svg') %>" alt="Hamzis Logo" class="mx-auto w-16 h-16 object-contain mb-2" />
          <h2 class="text-xl font-bold text-hamzis-brown dark:text-hamzis-copper">Hamzis Systems</h2>
        </div>
        <h2 class="text-2xl font-bold text-center mb-1 text-hamzis-brown dark:text-hamzis-copper hidden md:block">Update Password</h2>
        <p class="text-center text-sm text-hamzis-brown/70 dark:text-hamzis-copper/70 mb-6">Enter a new password to continue</p>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <% if resource.errors.any? %>
            <div class="mb-4 p-3 rounded bg-red-500/10 border border-red-500/50 text-red-600 text-xs">
              <%= render "devise/shared/error_messages", resource: resource %>
            </div>
          <% end %>
          <%= f.hidden_field :reset_password_token %>
          <div class="mb-5" data-controller="password-visibility">
            <%= f.label :password, "New Password", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
            <% if @minimum_password_length %>
              <p class="text-[10px] uppercase tracking-wider text-hamzis-brown/50 dark:text-hamzis-copper/50 mb-2">Min. <%= @minimum_password_length %> characters</p>
            <% end %>
            <div class="relative">
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", required: true, data: { password_visibility_target: "input" },
                    class: "w-full px-4 py-3 pr-12 rounded-lg border border-hamzis-brown/30 bg-white/50 dark:bg-black/20 text-gray-900 dark:text-hamzis-copper focus:ring-2 focus:ring-hamzis-copper transition" %>
              <button type="button" data-action="password-visibility#toggle" class="absolute right-3 top-1/2 -translate-y-1/2 text-hamzis-brown/40 dark:text-hamzis-copper/40 hover:text-hamzis-copper focus:outline-none">
                <span data-password-visibility-target="icon"><svg xmlns="http://www.w3.org" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2.062 12.348a1 1 0 0 1 0-.696 10.75 10.75 0 0 1 19.876 0 1 1 0 0 1 0 .696 10.75 10.75 0 0 1-19.876 0z"/><circle cx="12" cy="12" r="3"/></svg></span>
              </button>
            </div>
          </div>
          <div class="mb-6" data-controller="password-visibility">
            <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
            <div class="relative">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, data: { password_visibility_target: "input" },
                    class: "w-full px-4 py-3 pr-12 rounded-lg border border-hamzis-brown/30 bg-white/50 dark:bg-black/20 text-gray-900 dark:text-hamzis-copper focus:ring-2 focus:ring-hamzis-copper transition" %>
              <button type="button" data-action="password-visibility#toggle" class="absolute right-3 top-1/2 -translate-y-1/2 text-hamzis-brown/40 dark:text-hamzis-copper/40 hover:text-hamzis-copper focus:outline-none">
                <span data-password-visibility-target="icon"><svg xmlns="http://www.w3.org" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2.062 12.348a1 1 0 0 1 0-.696 10.75 10.75 0 0 1 19.876 0 1 1 0 0 1 0 .696 10.75 10.75 0 0 1-19.876 0z"/><circle cx="12" cy="12" r="3"/></svg></span>
              </button>
            </div>
          </div>
          <div class="mb-6">
            <%= f.submit "Change my password", class: "w-full px-4 py-3 rounded-lg bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition-all font-semibold shadow-md active:scale-95 cursor-pointer" %>
          </div>
        <% end %>
        <div class="text-center text-sm text-hamzis-brown/70 dark:text-hamzis-copper/70"><%= render "devise/shared/links" %></div>
      </div>
    </div>
  </div>
</div>

<div class="flex-1 flex flex-col items-center justify-center w-full min-h-0 py-12
            bg-gradient-to-br from-hamzis-white via-hamzis-copper/10 to-hamzis-brown/20
            dark:from-hamzis-black dark:via-hamzis-brown/30 dark:to-hamzis-copper/20">
  <div class="flex w-full max-w-6xl items-center justify-center px-4">
    <div class="hidden md:flex md:w-1/2 items-center justify-center p-12">
      <div class="text-center space-y-6">
        <img src="<%= asset_path('hamzis-logo.svg') %>" alt="Hamzis Logo" class="mx-auto w-40 h-40 object-contain opacity-90" />
        <h1 class="text-4xl font-extrabold text-hamzis-brown dark:text-hamzis-copper">Hamzis Systems</h1>
        <p class="text-lg text-hamzis-brown/70 dark:text-hamzis-copper/70">Crafting Homes For Clients' Comfort</p>
      </div>
    </div>
    <div class="flex w-full md:w-1/2 items-center justify-center">
      <div class="w-full max-w-md bg-hamzis-white/40 dark:bg-hamzis-black/40 backdrop-blur-md rounded-2xl shadow-xl p-8 sm:p-10 border border-white/20">
        <div class="md:hidden text-center mb-6">
          <img src="<%= asset_path('hamzis-logo.svg') %>" alt="Hamzis Logo" class="mx-auto w-16 h-16 object-contain mb-2" />
          <h2 class="text-xl font-bold text-hamzis-brown dark:text-hamzis-copper">Hamzis Systems</h2>
        </div>
        <h2 class="text-2xl font-bold text-center mb-1 text-hamzis-brown dark:text-hamzis-copper hidden md:block">Welcome Back</h2>
        <p class="text-center text-sm text-hamzis-brown/70 dark:text-hamzis-copper/70 mb-6">Log in to continue</p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-4">
            <%= f.label :email, "Email Address", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
                  class: "w-full px-4 py-3 rounded-lg border border-hamzis-brown/30 bg-white/50 dark:bg-black/20 text-gray-900 dark:text-hamzis-copper focus:ring-2 focus:ring-hamzis-copper transition" %>
          </div>
          <div class="mb-5" data-controller="password-visibility">
            <%= f.label :password, "Password", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
            <div class="relative">
              <%= f.password_field :password, autocomplete: "current-password", required: true,
                    data: { password_visibility_target: "input" },
                    class: "w-full px-4 py-3 pr-12 rounded-lg border border-hamzis-brown/30 bg-white/50 dark:bg-black/20 text-gray-900 dark:text-hamzis-copper focus:ring-2 focus:ring-hamzis-copper transition" %>
              <button type="button" data-action="password-visibility#toggle" class="absolute right-3 top-1/2 -translate-y-1/2 text-hamzis-brown/40 dark:text-hamzis-copper/40 hover:text-hamzis-copper focus:outline-none">
                <span data-password-visibility-target="icon">
                  <svg xmlns="http://www.w3.org" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2.062 12.348a1 1 0 0 1 0-.696 10.75 10.75 0 0 1 19.876 0 1 1 0 0 1 0 .696 10.75 10.75 0 0 1-19.876 0z"/><circle cx="12" cy="12" r="3"/></svg>
                </span>
              </button>
            </div>
          </div>
          <div class="flex items-center justify-between mb-6">
            <% if devise_mapping.rememberable? %>
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "rounded border-hamzis-brown/30 text-hamzis-copper focus:ring-hamzis-copper" %>
                <%= f.label :remember_me, "Remember", class: "ml-2 text-sm text-hamzis-brown dark:text-hamzis-copper" %>
              </div>
            <% end %>
          </div>
          <div class="mb-6">
            <%= f.submit "Log in", class: "w-full px-4 py-3 rounded-lg bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition-all font-semibold shadow-md active:scale-95" %>
          </div>
        <% end %>
        <div class="text-center text-sm text-hamzis-brown/70 dark:text-hamzis-copper/70"><%= render "devise/shared/links" %></div>
      </div>
    </div>
  </div>
</div>

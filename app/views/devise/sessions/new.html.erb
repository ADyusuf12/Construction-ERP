<div class="flex min-h-screen bg-gradient-to-br from-hamzis-white via-hamzis-copper/10 to-hamzis-brown/20 dark:from-hamzis-black dark:via-hamzis-brown/30 dark:to-hamzis-copper/20">
  <!-- Left brand panel -->
  <div class="hidden md:flex md:w-1/2 items-center justify-center p-12">
    <div class="text-center space-y-6">
      <!-- Logo + tagline -->
      <img src="<%= asset_path('hamzis-logo.svg') %>" alt="Hamzis Logo"
           class="mx-auto w-40 h-40 object-contain opacity-90" />
      <h1 class="text-4xl font-extrabold text-hamzis-brown dark:text-hamzis-copper mt-6">Hamzis Systems</h1>
      <p class="text-lg text-hamzis-brown/70 dark:text-hamzis-copper/70">Crafting Homes For Clients' Comfort</p>
    </div>
  </div>
  <!-- Right login form -->
  <div class="flex w-full md:w-1/2 items-center justify-center p-8">
    <div class="w-full max-w-md bg-hamzis-white/40 dark:bg-hamzis-black/40 backdrop-blur-md rounded-2xl shadow-xl p-10">
      <h2 class="text-2xl font-bold text-center mb-2 text-hamzis-brown dark:text-hamzis-copper">Welcome Back</h2>
      <p class="text-center text-sm text-hamzis-brown/70 dark:text-hamzis-copper/70 mb-6">Log in to continue</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-5">
          <%= f.label :email, "Email Address", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "w-full px-4 py-3 rounded-lg border border-hamzis-brown/30
                        bg-transparent text-gray-900 dark:text-hamzis-copper
                        focus:ring-2 focus:ring-hamzis-copper focus:border-hamzis-copper transition" %>
        </div>
        <div class="mb-5">
          <%= f.label :password, "Password", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
          <%= f.password_field :password, autocomplete: "current-password",
                class: "w-full px-4 py-3 rounded-lg border border-hamzis-brown/30
                        bg-transparent text-gray-900 dark:text-hamzis-copper
                        focus:ring-2 focus:ring-hamzis-copper focus:border-hamzis-copper transition" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center mb-5">
            <%= f.check_box :remember_me, class: "mr-2 rounded border-hamzis-brown/30 text-hamzis-copper focus:ring-hamzis-copper" %>
            <%= f.label :remember_me, "Remember me", class: "text-sm text-hamzis-brown dark:text-hamzis-copper" %>
          </div>
        <% end %>
        <div class="mb-6">
          <%= f.submit "Log in",
                class: "w-full px-4 py-3 rounded-lg bg-hamzis-copper text-hamzis-white
                        hover:bg-hamzis-black hover:text-hamzis-white
                        transition-colors font-semibold shadow-md" %>
        </div>
      <% end %>
      <div class="text-center text-sm text-hamzis-brown/70 dark:text-hamzis-copper/70">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

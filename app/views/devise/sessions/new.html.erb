<div class="flex items-center justify-center min-h-screen bg-hamzis-white dark:bg-hamzis-black">
  <div class="w-full max-w-md bg-hamzis-white/30 dark:bg-hamzis-black/30
              backdrop-blur-md rounded-xl shadow-md p-8">
    <h2 class="text-2xl font-bold text-center mb-6">Log in to Hamzis Systems</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-3 py-2 rounded border border-hamzis-brown/30
                      bg-hamzis-white dark:bg-hamzis-black
                      focus:ring-2 focus:ring-hamzis-copper" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full px-3 py-2 rounded border border-hamzis-brown/30
                      bg-hamzis-white dark:bg-hamzis-black
                      focus:ring-2 focus:ring-hamzis-copper" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center mb-4">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-sm" %>
        </div>
      <% end %>
      <div class="mb-6">
        <%= f.submit "Log in",
              class: "w-full px-4 py-2 rounded bg-hamzis-copper text-hamzis-white
                      hover:bg-hamzis-black hover:text-hamzis-white
                      dark:bg-hamzis-brown transition-colors font-semibold" %>
      </div>
    <% end %>
    <div class="text-center text-sm">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

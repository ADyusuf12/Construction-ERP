<%= form_with(model: project, local: true, class: "space-y-4") do |form| %>
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6 space-y-4">
    <div>
      <%= form.label :name, class: "block font-medium mb-1" %>
      <%= form.text_field :name, class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <div>
      <%= form.label :description, class: "block font-medium mb-1" %>
      <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <div>
      <%= form.label :status, class: "block font-medium mb-1" %>
      <%= form.select :status, Project.statuses.keys.map { |s| [s.titleize, s] },
                      {}, class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <div>
      <%= form.label :deadline, class: "block font-medium mb-1" %>
      <%= form.date_field :deadline, class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <div>
      <%= form.label :budget, class: "block font-medium mb-1" %>
      <%= form.text_field :budget, class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <div>
      <%= form.label :progress, class: "block font-medium mb-1" %>
      <%= form.number_field :progress, in: 0..100, class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <div class="flex gap-2">
      <%= form.submit "Save", class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition" %>
      <%= link_to "Cancel", projects_path, class: "px-4 py-2 rounded bg-hamzis-brown text-hamzis-white hover:bg-hamzis-copper transition" %>
    </div>
  </div>
<% end %>

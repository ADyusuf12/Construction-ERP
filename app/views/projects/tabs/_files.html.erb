<h3 class="text-xl font-bold mb-4">Project Files</h3>
<% if project.project_files.any? %>
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% project.project_files.each do |pf| %>
      <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 rounded-xl shadow-sm p-4 flex flex-col gap-2">
        <!-- Title -->
        <% if pf.title.present? %>
          <span class="inline-block px-2 py-1 text-xs font-semibold rounded-full
                       bg-hamzis-copper/20 text-hamzis-copper mb-2">
            <%= pf.title %>
          </span>
        <% end %>
        <!-- File preview -->
        <% if pf.file.attached? %>
          <% if pf.file.image? %>
            <%= image_tag pf.file.variant(resize_to_limit: [400, 300]),
                  class: "rounded-lg shadow-md hover:scale-105 transition-transform" %>
          <% else %>
            <div class="flex items-center gap-2 p-2 rounded bg-gray-100 dark:bg-gray-800">
              <% ext = File.extname(pf.file.filename.to_s).delete(".") %>
              <span class="w-8 h-8 flex items-center justify-center
                           bg-hamzis-copper/20 text-xs font-bold rounded">
                <%= ext.upcase %>
              </span>
              <span class="text-sm font-medium truncate"><%= pf.file.filename.to_s %></span>
            </div>
          <% end %>
          <!-- Download button -->
          <%= link_to rails_blob_path(pf.file, disposition: "attachment"),
                class: "flex items-center gap-1 px-2 py-1 rounded bg-hamzis-copper text-white text-xs hover:bg-hamzis-black transition",
                title: "Download file" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V4" />
            </svg>
            <span>Download</span>
          <% end %>
        <% end %>
        <!-- Description -->
        <% if pf.description.present? %>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-auto"><%= pf.description %></p>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-sm text-gray-500">No files uploaded for this project yet.</p>
<% end %>

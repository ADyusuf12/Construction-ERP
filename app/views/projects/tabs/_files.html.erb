<div class="flex items-center justify-between mb-8">
  <div class="flex items-center gap-3">
    <div class="p-2.5 rounded-xl bg-hamzis-brown text-white dark:bg-hamzis-copper/20 dark:text-hamzis-copper shadow-lg">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
    </div>
    <h3 class="text-xl font-black text-hamzis-brown dark:text-hamzis-copper uppercase tracking-tighter">Document Vault</h3>
  </div>
  <span class="text-[10px] font-black uppercase tracking-[0.2em] text-hamzis-brown/40 dark:text-hamzis-copper/40">
    <%= pluralize(project.project_files.count, "Active Attachment") %>
  </span>
</div>
<% if project.project_files.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% project.project_files.each do |pf| %>
      <div class="group bg-hamzis-white/30 dark:bg-hamzis-black/30 border border-hamzis-brown/10 rounded-2xl shadow-xl backdrop-blur-md p-5 flex flex-col gap-4 hover:border-hamzis-copper/50 transition-all duration-500">
        <!-- File Header: Title & Type -->
        <div class="flex items-start justify-between gap-2">
          <div class="flex flex-col">
            <span class="text-[10px] font-black uppercase tracking-widest text-hamzis-copper mb-1">
              <%= pf.title.present? ? pf.title : "Unlabeled Asset" %>
            </span>
            <% if pf.file.attached? %>
              <span class="text-[9px] font-mono text-hamzis-brown/40 dark:text-white/20 uppercase">
                <%= number_to_human_size(pf.file.byte_size) %> â€¢ <%= pf.file.content_type.split('/').last %>
              </span>
            <% end %>
          </div>
          <% if pf.file.attached? %>
            <%= link_to rails_blob_path(pf.file, disposition: "attachment"),
                  class: "p-2 rounded-lg bg-hamzis-copper/10 text-hamzis-copper hover:bg-hamzis-copper hover:text-white transition-all shadow-sm",
                  title: "Download Technical Asset" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V4" />
              </svg>
            <% end %>
          <% end %>
        </div>
        <!-- Visual Preview / Icon -->
        <div class="relative rounded-xl overflow-hidden bg-black/5 dark:bg-black/20 border border-white/5 aspect-video flex items-center justify-center">
          <% if pf.file.attached? %>
            <% if pf.file.image? %>
              <%= image_tag pf.file.variant(resize_to_limit: [600, 400]),
                    class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" %>
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity flex items-end p-3">
                <span class="text-[8px] font-bold text-white uppercase tracking-widest">View Full Resolution</span>
              </div>
            <% else %>
              <div class="flex flex-col items-center gap-2">
                <% ext = File.extname(pf.file.filename.to_s).delete(".") %>
                <div class="w-12 h-12 flex items-center justify-center bg-hamzis-brown/90 dark:bg-hamzis-copper/20 rounded-xl border border-white/10 shadow-2xl">
                  <span class="text-xs font-black text-white dark:text-hamzis-copper uppercase"><%= ext %></span>
                </div>
                <span class="text-[10px] font-medium text-hamzis-brown/60 dark:text-white/40 px-4 text-center truncate w-full">
                  <%= pf.file.filename.to_s %>
                </span>
              </div>
            <% end %>
          <% end %>
        </div>
        <!-- Footer: Description -->
        <% if pf.description.present? %>
          <div class="mt-auto pt-4 border-t border-hamzis-brown/5">
            <p class="text-xs text-hamzis-brown/60 dark:text-gray-400 leading-relaxed italic">
              "<%= pf.description %>"
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-20 bg-hamzis-brown/5 rounded-2xl border border-dashed border-hamzis-brown/20">
    <p class="text-[10px] font-black uppercase tracking-[0.2em] text-hamzis-brown/40 dark:text-hamzis-copper/40">Repository Empty</p>
    <p class="text-xs text-hamzis-brown/30 italic mt-1">Awaiting architectural uploads or site documentation.</p>
  </div>
<% end %>

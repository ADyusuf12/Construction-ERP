<div class="overflow-hidden bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md border border-hamzis-brown/20 rounded-2xl shadow-2xl">
  <% if projects.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full text-left border-separate border-spacing-0">
        <thead>
          <tr class="bg-hamzis-brown/90 dark:bg-hamzis-copper/10">
            <% ["Site Designation", "Deployment Data", "Current Phase", "Progress Gauge", "Actions"].each do |head| %>
              <th class="px-6 py-4 text-[10px] font-black uppercase tracking-[0.2em] text-hamzis-copper border-b border-hamzis-copper/20">
                <%= head %>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody class="divide-y divide-hamzis-brown/10 dark:divide-hamzis-copper/10">
          <% projects.each_with_index do |project, index| %>
            <%= render "projects/project_row", project: project %>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-20">
      <h3 class="text-xl font-black text-hamzis-brown dark:text-hamzis-copper uppercase tracking-tighter italic">No Operational Sites</h3>
      <%= link_to "Begin Project Initialization", new_project_path, class: "mt-4 inline-block text-[10px] font-bold uppercase tracking-widest text-hamzis-copper hover:text-white transition" %>
    </div>
  <% end %>
</div>

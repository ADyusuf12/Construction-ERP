<div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md border border-hamzis-brown/20 rounded-2xl shadow-2xl p-8 mb-10 relative overflow-hidden">
  <!-- Subtle Header Accent -->
  <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-hamzis-copper/40 to-transparent"></div>
  <div class="flex flex-col md:flex-row justify-between items-start gap-6">
    <div class="flex-1">
      <div class="flex items-center gap-3 mb-2">
        <span class="px-2 py-0.5 rounded bg-hamzis-copper/10 border border-hamzis-copper/20 text-[9px] font-black uppercase tracking-[0.2em] text-hamzis-copper">
          Site Profile: <%= project.id %>
        </span>
        <span class="inline-flex items-center gap-1.5 text-[9px] font-black uppercase tracking-widest text-hamzis-brown/50 dark:text-hamzis-copper/50">
          <span class="h-1 w-1 rounded-full bg-hamzis-copper"></span>
          <%= project.status.humanize %>
        </span>
      </div>
      <h2 class="text-4xl font-black text-hamzis-brown dark:text-white uppercase tracking-tighter italic mb-4">
        <%= project.name %>
      </h2>
      <p class="text-sm text-hamzis-brown/70 dark:text-hamzis-textDark/70 leading-relaxed max-w-2xl italic border-l-2 border-hamzis-copper/30 pl-4">
        <%= project.description %>
      </p>
    </div>
    <!-- Quick Actions -->
    <div class="flex flex-wrap md:flex-nowrap gap-3">
      <%= link_to edit_project_path(project),
          class: "flex items-center gap-2 px-5 py-2.5 rounded-xl bg-hamzis-copper text-white text-[10px] font-black uppercase tracking-widest shadow-lg hover:bg-hamzis-black transition-all active:scale-95" do %>
        <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
        Modify
      <% end %>
      <%= link_to projects_path,
          class: "flex items-center gap-2 px-5 py-2.5 rounded-xl bg-hamzis-brown/10 text-hamzis-brown dark:text-hamzis-copper border border-hamzis-brown/20 text-[10px] font-black uppercase tracking-widest hover:bg-hamzis-brown hover:text-white transition-all" do %>
        <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
        Exit to Registry
      <% end %>
      <% if policy(project).destroy? %>
        <%= button_to "#",
            class: "p-2.5 rounded-xl bg-red-500/10 text-red-600 border border-red-500/20 hover:bg-red-600 hover:text-white transition-all cursor-pointer",
            form: {
              "data-action" => "click->confirm-delete#open",
              "data-confirm-delete-title-param" => "Decommission Site?",
              "data-confirm-delete-message-param" => "This will permanently remove '#{project.name}' from the operational registry.",
              "data-confirm-delete-confirm-path-param" => project_path(project)
            } do %>
          <svg xmlns="http://www.w3.org" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
        <% end %>
      <% end %>
    </div>
  </div>
  <!-- Detailed Specs Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 mt-10 pt-8 border-t border-hamzis-brown/10">
    <div>
      <p class="text-[9px] font-black uppercase tracking-[0.2em] text-hamzis-copper mb-2">Stakeholder</p>
      <p class="text-sm font-bold text-hamzis-brown dark:text-white uppercase tracking-tight"><%= project.client.name %></p>
    </div>
    <div>
      <p class="text-[9px] font-black uppercase tracking-[0.2em] text-hamzis-copper mb-2">Operational Site</p>
      <p class="text-sm font-bold text-hamzis-brown dark:text-white truncate"><%= project.location.presence || "FIELD LOCATION" %></p>
      <p class="text-[10px] text-hamzis-brown/50 dark:text-hamzis-copper/50 italic mt-0.5"><%= project.address.presence %></p>
    </div>
    <div>
      <p class="text-[9px] font-black uppercase tracking-[0.2em] text-hamzis-copper mb-2">Delivery Deadline</p>
      <p class="text-sm font-black text-hamzis-brown dark:text-white font-mono tracking-tighter">
        <%= project.deadline&.strftime("%d.%m.%Y") || "--.--.--" %>
      </p>
    </div>
    <div>
      <p class="text-[9px] font-black uppercase tracking-[0.2em] text-hamzis-copper mb-2">Allocated Budget</p>
      <p class="text-sm font-black text-hamzis-brown dark:text-white font-mono">
        â‚¦<%= number_with_delimiter(number_with_precision(project.budget, precision: 0)) %>
      </p>
    </div>
  </div>
  <!-- Progress Bar Integration -->
  <div class="mt-10">
    <div class="flex items-center justify-between mb-2">
      <p class="text-[9px] font-black uppercase tracking-[0.2em] text-hamzis-copper">Deployment Progress</p>
      <p class="text-xs font-black text-hamzis-brown dark:text-hamzis-copper"><%= project.progress %>%</p>
    </div>
    <%= render "projects/progress_bar", project: project %>
  </div>
</div>

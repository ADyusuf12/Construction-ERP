<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
  <% [
    { label: "Active Sites", count: projects.count, icon: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4", color: "copper" },
    { label: "Approaching Deadline", count: Project.due_soon.count, icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z", color: "yellow-500" },
    { label: "Breached Schedule", count: Project.overdue.count, icon: "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z", color: "red-500" }
  ].each do |stat| %>
    <div class="bg-brand-white/30 dark:bg-brand-black/30 border border-brand-secondary/10 dark:border-brand-primary/10 rounded-2xl p-6 backdrop-blur-md shadow-xl relative overflow-hidden group">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-[10px] font-black uppercase tracking-[0.2em] text-brand-secondary/50 dark:text-brand-primary/50 mb-1"><%= stat[:label] %></p>
          <p class="text-4xl font-black text-brand-secondary dark:text-white"><%= stat[:count] %></p>
        </div>
        <div class="p-3 rounded-xl bg-brand-<%= stat[:color] %>/10 text-brand-<%= stat[:color] %>">
          <svg xmlns="http://www.w3.org" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= stat[:icon] %>" />
                </svg>
            </div>
        </div>
        <div class="absolute bottom-0 left-0 w-full h-1 bg-brand-<%= stat[:color] %>/20">
              <div class="h-full bg-brand-<%= stat[:color] %>" style="width: 30%"></div>
              <%# Subtle accent decoration %>
            </div>
          </div>
        <% end %>
      </div>
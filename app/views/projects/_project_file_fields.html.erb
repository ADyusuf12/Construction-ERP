<div class="project-file-block space-y-2 border rounded p-3 mb-3 bg-hamzis-white/20 dark:bg-hamzis-black/20">
  <div class="flex justify-between items-start gap-3">
    <div class="flex-1">
      <div class="mb-2">
        <%= f.label :category, "File Type", class: "block text-xs font-medium text-hamzis-brown dark:text-hamzis-copper" %>
        <%= f.select :category, ProjectFile.categories.keys.map { |c| [c.humanize, c] }, {prompt: "Select a file type"},
        class: "w-full px-5 py-1 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper"%>
      </div>
      <div class="mb-2">
        <%= f.label :files, "Upload Files", class: "block text-xs font-medium text-hamzis-brown dark:text-hamzis-copper" %>
        <%= f.file_field :files, multiple: true, class: "w-full px-5 py-1 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
      </div>
      <div>
        <%= f.label :description, "Description (optional)", class: "block text-xs font-medium text-hamzis-brown dark:text-hamzis-copper" %>
        <%= f.text_field :description, class: "w-full px-5 py-4 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
      </div>
    </div>
    <div class="flex-shrink-0 ml-3">
      <% if f.object.persisted? %>
        <%= f.check_box :_destroy, class: "hidden destroy-checkbox" %>
        <button type="button" data-action="click->project-files#markDestroy" class="mark-destroy-btn text-xs text-red-600">Remove</button>
      <% else %>
        <button type="button" data-action="click->project-files#removeNew" class="remove-new-file-btn text-xs text-red-600">Remove</button>
      <% end %>
    </div>
  </div>
</div>

<div class="overflow-x-auto bg-hamzis-white/30 dark:bg-hamzis-black/30 rounded-xl p-6">
  <% if project.tasks.any? %>
    <table class="min-w-full text-sm text-left">
      <%= render "tasks/task_table_header", show_details: true %>
      <tbody>
        <% project.tasks.each do |task| %>
          <%= render "tasks/task_row", task: task, show_details: true %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center text-sm">No tasks yet.</p>
  <% end %>
</div>

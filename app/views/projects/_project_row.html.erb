<tr id="<%= dom_id(project) %>" class="group hover:bg-white/50 dark:hover:bg-brand-primary/5 transition-all duration-300">
    <td class="px-6 py-4">
        <div class="text-sm font-black text-brand-secondary dark:text-white tracking-tight uppercase"><%= project.name %></div>
        <div class="text-[10px] text-brand-secondary/50 dark:text-brand-primary/50 italic"><%= truncate(project.description, length: 45) %></div>
    </td>
    <td class="px-6 py-4">
        <div class="text-[10px] font-bold uppercase tracking-widest text-brand-secondary/70 dark:text-brand-primary/70 mb-1">Target Date</div>
        <div class="text-xs font-mono text-brand-secondary dark:text-brand-primary"><%= project.deadline&.strftime("%d.%m.%Y") || "N/A" %></div>
    </td>
    <td class="px-6 py-4">
        <% status_style = project.status_ongoing? ? 'text-blue-500 bg-blue-500/10 border-blue-500/20' : 'text-green-500 bg-green-500/10 border-green-500/20' %>
        <span class="inline-flex items-center px-2 py-0.5 rounded border text-[9px] font-black uppercase tracking-widest <%= status_style %>">
            <%= project.status.humanize %>
        </span>
    </td>
    <td class="px-6 py-4">
        <div class="flex items-center gap-3 min-w-[120px]">
            <div class="flex-1 h-1.5 bg-brand-secondary/10 dark:bg-white/5 rounded-full overflow-hidden">
                <div class="h-full bg-brand-primary transition-all duration-1000 shadow-[0_0_10px_rgba(180,131,104,0.5)]" style="width: <%= project.progress %>%"></div>
            </div>
            <span class="text-[10px] font-black text-brand-secondary dark:text-brand-primary"><%= project.progress %>%</span>
        </div>
    </td>
    <td class="px-6 py-4">
        <div class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
            <%= link_to project_path(project), class: "p-2 rounded-lg bg-brand-primary text-white hover:scale-110 transition shadow-lg" do %>
            <svg xmlns="http://www.w3.org" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            <% end %>
            <%= link_to edit_project_path(project), class: "p-2 rounded-lg bg-brand-secondary text-white hover:scale-110 transition shadow-lg" do %>
            <svg xmlns="http://www.w3.org" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                <path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            <% end %>
        </div>
    </td>
</tr>
<div class="overflow-x-auto bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
            border border-hamzis-brown/20 rounded-xl shadow-lg p-6">
  <% if salary_batches.any? %>
    <table class="min-w-full text-sm text-left">
      <thead>
        <tr class="text-hamzis-brown dark:text-hamzis-copper border-b border-hamzis-brown/20">
          <th class="px-4 py-2">Name</th>
          <th class="px-4 py-2">Period</th>
          <th class="px-4 py-2">Status</th>
          <th class="px-4 py-2">Total Net Pay</th>
          <th class="px-4 py-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "accounting/salary_batches/batch_row",
                   collection: salary_batches,
                   as: :batch %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-6">
      <p class="text-lg font-semibold text-hamzis-brown dark:text-hamzis-copper">No salary batches yet</p>
      <p class="text-sm mt-2">Start by creating your first payroll batch.</p>
      <div class="mt-4">
        <%= link_to "âž• New Salary Batch", new_accounting_salary_batch_path,
            class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition" %>
      </div>
    </div>
  <% end %>
</div>

<div class="overflow-hidden bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md border border-hamzis-brown/20 rounded-2xl shadow-2xl p-6">
  <% if salary_batches.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full text-left border-separate border-spacing-0">
        <%= render "accounting/salary_batches/batch_table_header" %>
        <tbody class="divide-y divide-hamzis-brown/10 dark:divide-hamzis-copper/10">
          <% salary_batches.each_with_index do |batch, index| %>
            <%= render "accounting/salary_batches/batch_row",
                       batch: batch,
                       row_class: index.even? ? "bg-hamzis-brown/5 dark:bg-hamzis-copper/5" : "" %>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-20">
      <h3 class="text-xl font-black text-hamzis-brown dark:text-hamzis-copper uppercase tracking-tighter italic opacity-50">Zero Batch Records</h3>
      <p class="text-[10px] text-white/30 mt-2 uppercase tracking-widest italic">Awaiting payroll aggregation protocol.</p>
    </div>
  <% end %>
</div>

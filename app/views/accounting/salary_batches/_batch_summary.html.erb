<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-10">
  <% [
    { label: "Archived Batches", count: salary_batches.count, color: "copper" },
    { label: "Processed Cycles", count: salary_batches.status_processed.count, color: "blue-500" },
    { label: "Settled / Paid", count: salary_batches.status_paid.count, color: "green-500" },
    { label: "Total Capital Outflow", count: number_to_currency(salary_batches.status_paid.sum(&:total_net_pay), unit: "â‚¦"), color: "brand-primary" }
  ].each do |stat| %>
    <div class="bg-brand-white/30 dark:bg-brand-black/30 border border-brand-secondary/10 rounded-2xl p-6 backdrop-blur-md shadow-xl relative overflow-hidden group">
      <div class="absolute top-0 left-0 w-1 h-full bg-brand-<%= stat[:color] %>"></div>
      <p class="text-[9px] font-black uppercase tracking-[0.2em] text-brand-secondary/50 dark:text-brand-primary/50 mb-1"><%= stat[:label] %></p>
      <p class="text-3xl font-black text-brand-secondary dark:text-white"><%= stat[:count] %></p>
    </div>
  <% end %>
</div>
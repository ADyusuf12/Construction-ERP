<%= form_with(model: @salary_batch, local: true, class: "space-y-6") do |f| %>
  <% if @salary_batch.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded">
      <h2 class="font-bold mb-2"><%= pluralize(@salary_batch.errors.count, "error") %> prevented this salary batch from being saved:</h2>
      <ul class="list-disc pl-5">
        <% @salary_batch.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- Name -->
  <div>
    <%= f.label :name, class: "block text-sm font-medium mb-1" %>
    <%= f.text_field :name, class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" %>
  </div>
  <!-- Period Start -->
  <div>
    <%= f.label :period_start, "Period Start", class: "block text-sm font-medium mb-1" %>
    <%= f.date_select :period_start, class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" %>
  </div>
  <!-- Period End -->
  <div>
    <%= f.label :period_end, "Period End", class: "block text-sm font-medium mb-1" %>
    <%= f.date_select :period_end, class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" %>
  </div>
  <!-- Status -->
  <div>
    <%= f.label :status, class: "block text-sm font-medium mb-1" %>
    <%= f.select :status, Accounting::SalaryBatch.statuses.keys.map { |s| [s.humanize, s] },
          {}, { class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" } %>
  </div>
  <!-- Submit -->
  <div class="flex justify-end">
    <%= f.submit class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition" %>
  </div>
<% end %>

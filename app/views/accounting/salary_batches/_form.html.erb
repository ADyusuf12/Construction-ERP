<%= form_with(model: @salary_batch, local: true, class: "space-y-6 hr-form") do |f| %>
  <% if @salary_batch.errors.any? %>
    <div class="p-4 rounded bg-hamzis-copper text-hamzis-white">
      <h3 class="font-semibold"><%= pluralize(@salary_batch.errors.count, "error") %> prevented saving:</h3>
      <ul class="list-disc ml-6 mt-2 text-sm">
        <% @salary_batch.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border rounded-xl shadow-lg p-6 space-y-4">
    <!-- Name -->
    <div>
      <%= f.label :name, "Batch Name", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.text_field :name,
            class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                    focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <!-- Period Start -->
    <div>
      <%= f.label :period_start, "Period Start", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.date_select :period_start,
            {}, { class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                      focus:ring-hamzis-copper focus:border-hamzis-copper" } %>
    </div>
    <!-- Period End -->
    <div>
      <%= f.label :period_end, "Period End", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.date_select :period_end,
            {}, { class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                      focus:ring-hamzis-copper focus:border-hamzis-copper" } %>
    </div>
    <!-- Status -->
    <div>
      <%= f.label :status, "Status", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.select :status,
            Accounting::SalaryBatch.statuses.keys.map { |s| [s.humanize, s] },
            {}, { class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                      focus:ring-hamzis-copper focus:border-hamzis-copper" } %>
    </div>
    <!-- Actions -->
    <div class="flex flex-col sm:flex-row gap-3 mt-2">
      <%= f.submit (@salary_batch.persisted? ? "Update Salary Batch" : "Create Salary Batch"),
            class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition-colors w-full sm:w-auto" %>
      <%= link_to "Cancel", accounting_salary_batches_path,
            class: "px-4 py-2 rounded bg-hamzis-brown text-hamzis-white hover:bg-hamzis-copper transition w-full sm:w-auto" %>
    </div>
  </div>
<% end %>

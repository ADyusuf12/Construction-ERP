<%= form_with(model: @salary_batch, local: true, class: "space-y-6 hr-form") do |f| %>
<%# Enhanced Red Error Block %>
<% if @salary_batch.errors.any? %>
<div class="p-4 mb-6 rounded-2xl bg-red-500/10 border border-red-500/30 text-red-600 dark:text-red-400 backdrop-blur-md">
    <div class="flex items-center gap-2 mb-2">
        <svg xmlns="http://www.w3.org" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        <h3 class="font-bold uppercase tracking-widest text-xs">Initialization Failed</h3>
    </div>
    <ul class="list-disc ml-6 text-xs space-y-1 opacity-90">
        <% @salary_batch.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- LEFT: Batch Parameters -->
    <div class="lg:col-span-2 space-y-6">
        <div class="bg-brand-white/30 dark:bg-brand-black/30 border border-brand-secondary/20 rounded-2xl p-6 shadow-xl backdrop-blur-sm">
            <div class="flex items-center gap-2 mb-6">
                <div class="p-2 rounded-lg bg-brand-primary/10 text-brand-primary">
                    <svg xmlns="http://www.w3.org" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    </svg>
                </div>
                <h4 class="text-sm font-black uppercase tracking-widest text-brand-secondary dark:text-brand-primary">Operational Parameters</h4>
            </div>
            <div class="space-y-6">
                <div>
                    <%= f.label :name, "Batch Designation", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
                    <%= f.text_field :name, placeholder: "e.g., February 2024 Operations Cycle",
                  class: "w-full px-4 py-3 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-white focus:ring-2 focus:ring-brand-primary outline-none transition font-medium" %>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <div>
                        <%= f.label :period_start, "Cycle Start Date", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
                        <%= f.date_field :period_start, class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary outline-none transition" %>
                    </div>
                    <div>
                        <%= f.label :period_end, "Cycle End Date", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
                        <%= f.date_field :period_end, class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary outline-none transition" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- RIGHT: Processing Rail -->
    <div class="lg:col-span-1 space-y-6">
        <div class="bg-brand-secondary/90 dark:bg-brand-primary/10 border border-brand-primary/30 rounded-2xl p-6 shadow-2xl sticky top-6">
            <h4 class="text-xs font-black uppercase tracking-[0.2em] text-brand-primary mb-6 border-b border-brand-primary/20 pb-4 text-center">Batch Execution</h4>
            <div class="space-y-6">
                <div>
                    <%= f.label :status, "Cycle Status", class: "block text-[9px] font-bold uppercase tracking-[0.2em] text-brand-primary/70 mb-1" %>
                    <%= f.select :status, Accounting::SalaryBatch.statuses.keys.map { |s| [s.humanize, s] }, {},
                  { class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary outline-none transition" } %>
                </div>
                <div class="p-4 rounded-xl bg-black/30 border border-white/5">
                    <div class="flex items-center gap-2 mb-2">
                        <div class="w-1.5 h-1.5 rounded-full bg-brand-primary animate-pulse"></div>
                        <p class="text-[8px] font-bold uppercase tracking-widest text-brand-primary">System Advisory</p>
                    </div>
                    <p class="text-[10px] text-white/40 italic leading-relaxed">
                        Once initialized, this batch will aggregate all active salary mappings for the defined period.
                    </p>
                </div>
                <div class="pt-4">
                    <%= f.submit (@salary_batch.persisted? ? "Modify Batch" : "Initialize Batch"),
                  class: "w-full py-4 rounded-xl bg-brand-primary text-white font-black uppercase tracking-widest text-[11px] shadow-lg hover:bg-white hover:text-brand-secondary transition-all duration-500 active:scale-95 cursor-pointer" %>
                    <%= link_to "Cancel Batch", accounting_salary_batches_path,
                  class: "block w-full mt-4 text-center text-[10px] font-bold uppercase tracking-widest text-white/40 hover:text-red-400 transition" %>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>
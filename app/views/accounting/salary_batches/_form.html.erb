<%= form_with(model: @salary_batch, local: true, class: "space-y-6 hr-form") do |f| %>
  <% if @salary_batch.errors.any? %>
    <%# ... Error block stays the same ... %>
  <% end %>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2 space-y-6">
      <div class="bg-brand-white/30 dark:bg-brand-black/30 border border-brand-secondary/20 rounded-2xl p-6 shadow-xl backdrop-blur-sm">
        <div class="flex items-center gap-2 mb-6">
          <div class="p-2 rounded-lg bg-brand-primary/10 text-brand-primary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </div>
          <h4 class="text-sm font-black uppercase tracking-widest text-brand-secondary dark:text-brand-primary">Operational Parameters</h4>
        </div>
        <div class="space-y-6">
          <div>
            <%= f.label :name, "Batch Designation", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
            <%= f.text_field :name, placeholder: "e.g., February 2026 Operations Cycle",
                class: "w-full px-4 py-3 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-white focus:ring-2 focus:ring-brand-primary outline-none transition font-medium" %>
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
              <%= f.label :period_start, "Cycle Start Date", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
              <%= f.date_field :period_start, class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary outline-none transition" %>
            </div>
            <div>
              <%= f.label :period_end, "Cycle End Date", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
              <%= f.date_field :period_end, class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary outline-none transition" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="lg:col-span-1 space-y-6">
      <div class="bg-brand-secondary/90 dark:bg-brand-primary/10 border border-brand-primary/30 rounded-2xl p-6 shadow-2xl sticky top-6">
        <h4 class="text-xs font-black uppercase tracking-[0.2em] text-brand-primary mb-6 border-b border-brand-primary/20 pb-4 text-center">Batch Execution</h4>
        <div class="space-y-6">
          <% if @salary_batch.persisted? %>
            <div>
              <label class="block text-[9px] font-bold uppercase tracking-[0.2em] text-brand-primary/70 mb-1">Current Lifecycle Status</label>
              <div class="px-4 py-2 rounded-lg bg-white/10 border border-white/10 text-[10px] font-black uppercase tracking-widest text-brand-primary inline-block">
                <%= @salary_batch.status.humanize %>
              </div>
            </div>
          <% end %>
          <div class="p-4 rounded-xl bg-black/30 border border-white/5">
            <div class="flex items-center gap-2 mb-2">
              <div class="w-1.5 h-1.5 rounded-full bg-brand-primary <%= 'animate-pulse' unless @salary_batch.status_paid? %>"></div>
              <p class="text-[8px] font-bold uppercase tracking-widest text-brand-primary">System Advisory</p>
            </div>
            <p class="text-[10px] text-white/40 italic leading-relaxed">
              <%= @salary_batch.persisted? ? "Modifying dates will not alter already generated salary records. Use the Review screen for individual adjustments." : "Upon initialization, the system will automatically generate salary mappings for all currently active staff members." %>
            </p>
          </div>
          <div class="pt-4">
            <%# Disable buttons if the batch is already finalized/paid to prevent tampering %>
            <%= f.submit (@salary_batch.persisted? ? "Update Metadata" : "Initialize Batch"),
                disabled: @salary_batch.status_paid?,
                class: "w-full py-4 rounded-xl bg-brand-primary text-white font-black uppercase tracking-widest text-[11px] shadow-lg hover:bg-white hover:text-brand-secondary transition-all duration-500 active:scale-95 cursor-pointer disabled:opacity-50 disabled:cursor-not-allowed" %>
            <%= link_to "Abort Operation", accounting_salary_batches_path,
                class: "block w-full mt-4 text-center text-[10px] font-bold uppercase tracking-widest text-white/40 hover:text-red-400 transition" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
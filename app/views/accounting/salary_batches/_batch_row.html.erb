<%# app/views/accounting/salary_batches/_batch_row.html.erb %>
<%
  # Fallback for Turbo Streams: if row_class is nil,
  # we use a stable odd/even check based on the ID
  # or simply keep it transparent to inherit the hover state.
  safe_row_class = local_assigns[:row_class] || ""
%>
<tr id="<%= dom_id(batch) %>"
    class="<%= safe_row_class %> group hover:bg-white/40 dark:hover:bg-brand-black/40 transition-all duration-500 border-b border-brand-secondary/5 dark:border-brand-primary/5">
  <td class="px-6 py-4">
    <span class="text-sm font-black text-brand-secondary dark:text-white uppercase tracking-tight">
      <%= batch.name %>
    </span>
  </td>
  <td class="px-6 py-4">
    <span class="text-[10px] font-bold uppercase tracking-widest text-brand-secondary/60 dark:text-brand-primary/60 italic">
      <%= batch.period_label %>
    </span>
  </td>
  <td class="px-6 py-4">
    <% status_style = case
               when batch.status_paid? then 'text-green-500 bg-green-500/10 border-green-500/20'
               when batch.status_processed? then 'text-blue-500 bg-blue-500/10 border-blue-500/20'
               else 'text-yellow-500 bg-yellow-500/10 border-yellow-500/20'
               end
        %>
    <span class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded border text-[9px] font-black uppercase tracking-[0.15em] <%= status_style %> transition-all duration-700">
      <div class="w-1 h-1 rounded-full bg-current <%= 'animate-pulse' unless batch.status_paid? %>"></div>
      <%= batch.status.humanize %>
    </span>
  </td>
  <td class="px-6 py-4">
    <span class="text-sm font-mono font-black text-brand-secondary dark:text-brand-primary">
      <%= number_to_currency(batch.total_net_pay, unit: "â‚¦") %>
    </span>
  </td>
  <td class="px-6 py-4">
    <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-all duration-300">
      <% if policy(batch).mark_paid? && (batch.status_pending? || batch.status_processed?) %>
        <%= button_to mark_paid_accounting_salary_batch_path(batch),
                    method: :patch,
                    form: { data: { turbo_confirm: "Authorize Full Batch Settlement?" } },
                    class: "p-2 rounded-lg bg-green-600 text-white hover:scale-110 active:scale-95 transition shadow-lg",
                    title: "Mark Paid" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
          </svg>
        <% end %>
      <% end %>
      <%= link_to accounting_salary_batch_path(batch),
                class: "p-2 rounded-lg bg-brand-primary text-white hover:scale-110 transition shadow-lg",
                title: "Review Details" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
      <% end %>
    </div>
  </td>
</tr>
<%= form_with(model: @salary, local: true, class: "space-y-6") do |f| %>
  <% if @salary.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded">
      <h2 class="font-bold mb-2"><%= pluralize(@salary.errors.count, "error") %> prevented this salary from being saved:</h2>
      <ul class="list-disc pl-5">
        <% @salary.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- Employee -->
  <div>
    <%= f.label :employee_id, "Employee", class: "block text-sm font-medium mb-1" %>
    <%= f.collection_select :employee_id, Hr::Employee.all, :id, :full_name,
          { prompt: "Select an employee" },
          { class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" } %>
  </div>
  <!-- Base Pay -->
  <div>
    <%= f.label :base_pay, class: "block text-sm font-medium mb-1" %>
    <%= f.number_field :base_pay, step: "0.01", class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" %>
  </div>
  <!-- Allowances -->
  <div>
    <%= f.label :allowances, class: "block text-sm font-medium mb-1" %>
    <%= f.number_field :allowances, step: "0.01", class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" %>
  </div>
  <!-- Status -->
  <div>
    <%= f.label :status, class: "block text-sm font-medium mb-1" %>
    <%= f.select :status, Accounting::Salary.statuses.keys.map { |s| [s.humanize, s] },
          {}, { class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" } %>
  </div>
  <!-- Submit -->
  <div class="flex justify-end">
    <%= f.submit class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition" %>
  </div>
<% end %>

<tr id="<%= dom_id(salary) %>" class="<%= row_class %> group hover:bg-white/40 dark:hover:bg-hamzis-black/40 transition-all duration-300">
  <td class="px-6 py-4">
    <span class="text-sm font-black text-hamzis-brown dark:text-white uppercase tracking-tight">
      <%= salary.employee.full_name %>
    </span>
  </td>
  <td class="px-6 py-4 text-center border-r border-hamzis-brown/5">
    <span class="text-xs font-mono font-bold text-hamzis-brown/70 dark:text-hamzis-copper/70">
      <%= number_to_currency(salary.base_pay, unit: "₦") %>
    </span>
  </td>
  <td class="px-6 py-4 text-center border-r border-hamzis-brown/5">
    <span class="text-xs font-mono font-bold text-green-600/70">
      +<%= number_to_currency(salary.allowances, unit: "₦") %>
    </span>
  </td>
  <td class="px-6 py-4 text-center border-r border-hamzis-brown/5">
    <span class="text-xs font-mono font-bold text-red-500/70">
      -<%= number_to_currency(salary.total_deductions, unit: "₦") %>
    </span>
  </td>
  <td class="px-6 py-4 text-center bg-hamzis-copper/5">
    <span class="text-sm font-mono font-black text-hamzis-brown dark:text-white">
      <%= number_to_currency(salary.net_pay, unit: "₦") %>
    </span>
  </td>
  <td class="px-6 py-4">
    <% status_style = salary.status_paid? ? 'text-green-500 bg-green-500/10 border-green-500/20' : 'text-yellow-500 bg-yellow-500/10 border-yellow-500/20' %>
    <span class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded border text-[9px] font-black uppercase tracking-[0.15em] <%= status_style %>">
      <div class="w-1 h-1 rounded-full bg-current <%= 'animate-pulse' if salary.status_pending? %>"></div>
      <%= salary.status.humanize %>
    </span>
  </td>
  <td class="px-6 py-4">
    <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
      <%= link_to accounting_salary_path(salary), class: "p-2 rounded-lg bg-hamzis-copper text-white hover:scale-110 transition shadow-lg", title: "View Paycheck" do %>
        <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
      <% end %>
      <%= link_to edit_accounting_salary_path(salary), class: "p-2 rounded-lg bg-hamzis-brown text-white hover:scale-110 transition shadow-lg", title: "Adjust Payroll" do %>
        <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
      <% end %>
    </div>
  </td>
</tr>

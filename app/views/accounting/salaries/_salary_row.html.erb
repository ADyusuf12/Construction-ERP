<tr id="<%= dom_id(salary) %>" class="<%= row_class %> group hover:bg-white/40 dark:hover:bg-brand-black/40 transition-all duration-300">
  <td class="px-6 py-4">
    <div class="flex flex-col">
      <span class="text-sm font-black text-brand-secondary dark:text-white uppercase tracking-tight">
        <%= salary.employee.full_name %>
      </span>
      <span class="text-[9px] text-brand-secondary/40 uppercase font-bold tracking-widest">
        ID: <%= salary.employee.staff_id %>
      </span>
    </div>
  </td>
  <td class="px-6 py-4 text-center border-r border-brand-secondary/5">
    <span class="text-xs font-mono font-bold text-brand-secondary/70 dark:text-brand-primary/70">
      <%= number_to_currency(salary.base_pay, unit: "₦") %>
    </span>
  </td>
  <td class="px-6 py-4 text-center border-r border-brand-secondary/5">
    <span class="text-xs font-mono font-bold text-green-600/70">
      <%= number_to_currency(salary.allowances, unit: "₦") %>
    </span>
  </td>
  <td class="px-6 py-4 text-center border-r border-brand-secondary/5">
    <span class="text-xs font-mono font-bold text-red-500/70">
      <%= number_to_currency(salary.deductions_total, unit: "₦") %>
    </span>
  </td>
  <td class="px-6 py-4 text-center bg-brand-primary/5">
    <span class="text-sm font-mono font-black text-brand-secondary dark:text-white">
      <%= number_to_currency(salary.net_pay, unit: "₦") %>
    </span>
  </td>
  <td class="px-6 py-4">
    <% status_style = salary.status_paid? ? 'text-green-500 bg-green-500/10 border-green-500/20' : 'text-yellow-500 bg-yellow-500/10 border-yellow-500/20' %>
    <span class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded border text-[9px] font-black uppercase tracking-[0.15em] <%= status_style %>">
      <div class="w-1 h-1 rounded-full bg-current <%= 'animate-pulse' if salary.status_pending? %>"></div>
      <%= salary.status.humanize %>
    </span>
  </td>
  <td class="px-6 py-4">
    <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
      <%# Link to the Monthly Batch %>
      <%= link_to accounting_salary_batch_path(salary.batch), class: "p-2 rounded-lg bg-brand-secondary/20 text-brand-secondary dark:text-white hover:bg-brand-secondary hover:text-white transition shadow-sm", title: "View Parent Batch" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
      <% end %>
      <%= link_to accounting_salary_path(salary), class: "p-2 rounded-lg bg-brand-primary text-white hover:scale-110 transition shadow-lg", title: "View Details" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
          <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
      <% end %>
      <%= link_to edit_accounting_salary_path(salary), class: "p-2 rounded-lg bg-brand-secondary text-white hover:scale-110 transition shadow-lg", title: "Adjust Pay" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
          <path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
      <% end %>
    </div>
  </td>
</tr>
<div class="overflow-x-auto bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
            border border-hamzis-brown/20 rounded-xl shadow-lg p-6">
  <% if salaries.any? %>
    <table class="min-w-full text-sm text-left">
      <thead>
        <tr class="text-hamzis-brown dark:text-hamzis-copper border-b border-hamzis-brown/20">
          <th class="px-4 py-2">Employee</th>
          <th class="px-4 py-2">Base Pay</th>
          <th class="px-4 py-2">Allowances</th>
          <th class="px-4 py-2">Deductions</th>
          <th class="px-4 py-2">Net Pay</th>
          <th class="px-4 py-2">Status</th>
          <th class="px-4 py-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "accounting/salaries/salary_row",
                   collection: salaries,
                   as: :salary %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-6">
      <p class="text-lg font-semibold text-hamzis-brown dark:text-hamzis-copper">No salaries yet</p>
      <p class="text-sm mt-2">Start by creating your first salary record.</p>
      <div class="mt-4">
        <%= link_to "âž• New Salary", new_accounting_salary_path,
            class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition" %>
      </div>
    </div>
  <% end %>
</div>

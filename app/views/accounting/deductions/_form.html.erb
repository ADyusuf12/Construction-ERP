<%= form_with(model: @deduction, local: true, class: "space-y-6") do |f| %>
  <% if @deduction.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded">
      <h2 class="font-bold mb-2"><%= pluralize(@deduction.errors.count, "error") %> prevented this deduction from being saved:</h2>
      <ul class="list-disc pl-5">
        <% @deduction.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- Employee -->
  <div>
    <%= f.label :employee_id, "Employee", class: "block font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
    <%= f.collection_select :employee_id, Hr::Employee.all, :id, :full_name,
          { prompt: "Select an employee" },
          { class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" } %>
  </div>
  <!-- Deduction Type -->
  <div>
    <%= f.label :deduction_type, "Type", class: "block font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
    <%= f.select :deduction_type, Accounting::Deduction.deduction_types.keys.map { |t| [t.humanize, t] },
          {}, { class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" } %>
  </div>
  <!-- Amount -->
  <div>
    <%= f.label :amount, class: "block font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
    <%= f.text_field :amount, class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" %>
  </div>
  <!-- Notes -->
  <div>
    <%= f.label :notes, "Notes (optional)", class: "block font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
    <%= f.text_area :notes, rows: 3, class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" %>
  </div>
  <!-- Submit -->
  <div class="flex justify-end">
    <%= f.submit class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition" %>
  </div>
<% end %>

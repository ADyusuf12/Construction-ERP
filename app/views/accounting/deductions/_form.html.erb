<%= form_with(model: @deduction, local: true, class: "space-y-6 hr-form") do |f| %>
  <%# Enhanced Red Error Block %>
  <% if @deduction.errors.any? %>
    <div class="p-4 mb-6 rounded-2xl bg-red-500/10 border border-red-500/30 text-red-600 dark:text-red-400 backdrop-blur-md">
      <div class="flex items-center gap-2 mb-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        <h3 class="font-bold uppercase tracking-widest text-xs">Correction Required</h3>
      </div>
      <ul class="list-disc ml-6 text-xs space-y-1 opacity-90">
        <% @deduction.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2 space-y-6">
      <div class="bg-brand-white/30 dark:bg-brand-black/30 border border-brand-secondary/20 rounded-2xl p-6 shadow-xl backdrop-blur-sm">
        <div class="flex items-center gap-2 mb-6">
          <div class="p-2 rounded-lg bg-brand-primary/10 text-brand-primary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h4 class="text-sm font-black uppercase tracking-widest text-brand-secondary dark:text-brand-primary">Deduction Scope</h4>
        </div>
        <div class="space-y-5">
          <div>
            <%= f.label :salary_id, "Target Paycheck (Active Batch)", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
            <%# This helper maps the deduction to a Salary record while showing the Employee name to the user %>
            <%= f.collection_select :salary_id,
                        Accounting::Salary.joins(:batch).where.not(accounting_salary_batches: { status: :paid }).includes(:employee),
                        :id, ->(s) { "#{s.employee.full_name} — #{s.batch.name} (Base: #{number_to_currency(s.base_pay, unit: '₦')})" },
                        { prompt: "Select target paycheck..." },
                        { class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary outline-none transition" } %>
          </div>
          <div>
            <%= f.label :notes, "Audit Justification", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
            <%= f.text_area :notes, rows: 5, placeholder: "Provide technical or policy-based reasoning for this deduction...",
                        class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-white focus:ring-2 focus:ring-brand-primary outline-none transition" %>
          </div>
        </div>
      </div>
    </div>
    <div class="lg:col-span-1 space-y-6">
      <div class="bg-brand-secondary/90 dark:bg-brand-primary/10 border border-brand-primary/30 rounded-2xl p-6 shadow-2xl sticky top-6">
        <h4 class="text-xs font-black uppercase tracking-[0.2em] text-brand-primary mb-6 border-b border-brand-primary/20 pb-4 text-center">Settlement Info</h4>
        <div class="space-y-6">
          <div>
            <%= f.label :amount, "Debit Amount", class: "block text-[9px] font-bold uppercase tracking-[0.2em] text-brand-primary/70 mb-1" %>
            <div class="relative">
              <span class="absolute left-4 top-1/2 -translate-y-1/2 text-white/40 font-bold text-xs">₦</span>
              <%= f.number_field :amount, step: 0.01, class: "w-full pl-8 pr-4 py-3 bg-black/20 border border-white/10 rounded-xl text-xl font-black text-white focus:ring-1 focus:ring-brand-primary outline-none transition" %>
            </div>
          </div>
          <div>
            <%= f.label :deduction_type, "Policy Type", class: "block text-[9px] font-bold uppercase tracking-[0.2em] text-brand-primary/70 mb-1" %>
            <%= f.select :deduction_type, Accounting::Deduction.deduction_types.keys.map { |t| [t.humanize, t] }, {},
                        { class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary outline-none transition" } %>
          </div>
          <div class="pt-4">
            <%= f.submit (@deduction.persisted? ? "Confirm Updates" : "Save Deduction"),
                        class: "w-full py-4 rounded-xl bg-brand-primary text-white font-black uppercase tracking-widest text-[11px] shadow-lg hover:bg-white hover:text-brand-secondary transition-all duration-500 active:scale-95 cursor-pointer" %>
            <%= link_to "Cancel", accounting_deductions_path,
                        class: "block w-full mt-4 text-center text-[10px] font-bold uppercase tracking-widest text-white/40 hover:text-red-400 transition" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
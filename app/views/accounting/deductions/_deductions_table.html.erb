<div class="overflow-hidden bg-brand-white/30 dark:bg-brand-black/30 backdrop-blur-md border border-brand-secondary/20 rounded-2xl shadow-2xl p-6">
    <% if deductions.any? %>
    <div class="overflow-x-auto">
        <table class="min-w-full text-left border-separate border-spacing-0">
            <%= render "accounting/deductions/deduction_table_header" %>
            <tbody class="divide-y divide-brand-secondary/10 dark:divide-brand-primary/10">
                <% deductions.each_with_index do |deduction, index| %>
                <%= render "accounting/deductions/deduction_row",
                       deduction: deduction,
                       row_class: index.even? ? "bg-brand-secondary/5 dark:bg-brand-primary/5" : "" %>
                <% end %>
            </tbody>
        </table>
    </div>
    <% else %>
    <div class="text-center py-20">
        <h3 class="text-xl font-black text-brand-secondary dark:text-brand-primary uppercase tracking-tighter italic opacity-50">Zero Debits Logged</h3>
        <p class="text-[10px] text-white/30 mt-2 uppercase tracking-widest italic">Awaiting fiscal adjustment protocols.</p>
    </div>
    <% end %>
</div>
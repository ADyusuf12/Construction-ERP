<% content_for :title, "Deduction Details" %>
<h1 class="text-2xl font-bold text-hamzis-brown dark:text-hamzis-copper mb-6">
  Deduction: <%= @deduction.deduction_type.humanize %>
</h1>
<div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
            border border-hamzis-brown/20 rounded-xl shadow-lg p-6 space-y-4">
  <p><span class="font-semibold">Employee:</span> <%= @deduction.salary.employee.full_name %></p>
  <p><span class="font-semibold">Deduction Type:</span> <%= @deduction.deduction_type.humanize %></p>
  <p><span class="font-semibold">Amount:</span> <%= number_to_currency(@deduction.amount, unit: "₦") %></p>
  <% if @deduction.notes.present? %>
    <p><span class="font-semibold">Notes:</span> <%= @deduction.notes %></p>
  <% end %>
</div>
<div class="mt-6 flex gap-2">
  <%= link_to "Edit", edit_accounting_deduction_path(@deduction),
      class: "px-3 py-1 rounded bg-hamzis-brown text-hamzis-white hover:bg-hamzis-copper transition" %>
  <%= link_to "← Back to Deductions", accounting_deductions_path,
      class: "px-3 py-1 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition" %>
  <% if policy(@deduction).destroy? %>
    <%= button_to "Delete", "#",
        class: "px-3 py-1 rounded bg-red-600 text-white hover:bg-red-800 transition",
        form: {
          "data-action" => "click->confirm-delete#open",
          "data-confirm-delete-title-param" => "Delete Deduction?",
          "data-confirm-delete-message-param" => "Are you sure you want to delete this deduction? This action cannot be undone.",
          "data-confirm-delete-confirm-path-param" => accounting_deduction_path(@deduction)
        } %>
  <% end %>
</div>

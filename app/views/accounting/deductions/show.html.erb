<% content_for :title, "Deduction: #{@deduction.deduction_type.humanize} | Personnel Accounting" %>
<div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md border border-hamzis-brown/20 rounded-2xl shadow-2xl p-8 mb-10 relative overflow-hidden animate-fade-in">
  <div class="absolute top-0 left-0 w-full h-1 bg-red-500 opacity-40"></div>
  <div class="flex flex-col md:flex-row justify-between items-start gap-6">
    <div class="flex-1">
      <div class="flex items-center gap-3 mb-2">
        <span class="px-2 py-0.5 rounded bg-red-500/10 border border-red-500/20 text-[9px] font-black uppercase tracking-[0.2em] text-red-600">
          Payroll Deduction
        </span>
        <span class="text-[9px] font-black uppercase tracking-widest text-hamzis-brown/50 dark:text-hamzis-copper/50">
          Ref: DE-<%= @deduction.id %>
        </span>
      </div>
      <h2 class="text-3xl font-black text-hamzis-brown dark:text-white uppercase tracking-tighter italic mb-4">
        <%= @deduction.deduction_type.humanize %>
      </h2>
      <% if @deduction.notes.present? %>
        <p class="text-sm text-hamzis-brown/70 dark:text-white/70 leading-relaxed max-w-2xl italic border-l-2 border-red-500/30 pl-4">
          <%= @deduction.notes %>
        </p>
      <% end %>
    </div>
    <div class="flex flex-wrap md:flex-nowrap gap-3">
      <%= link_to edit_accounting_deduction_path(@deduction),
          class: "flex items-center gap-2 px-5 py-2.5 rounded-xl bg-hamzis-copper text-white text-[10px] font-black uppercase tracking-widest shadow-lg hover:bg-hamzis-black transition-all" do %>
        Modify Deduction
      <% end %>
      <%= link_to accounting_deductions_path,
          class: "flex items-center gap-2 px-5 py-2.5 rounded-xl bg-hamzis-brown/10 text-hamzis-brown dark:text-white border border-hamzis-brown/20 text-[10px] font-black uppercase tracking-widest hover:bg-hamzis-brown hover:text-white transition-all" do %>
        Back to List
      <% end %>
      <% if policy(@deduction).destroy? %>
        <%= button_to "#",
            class: "p-2.5 rounded-xl bg-red-500/10 text-red-600 border border-red-500/20 hover:bg-red-600 hover:text-white transition-all cursor-pointer",
            form: {
              "data-action" => "click->confirm-delete#open",
              "data-confirm-delete-title-param" => "Remove Deduction?",
              "data-confirm-delete-message-param" => "Are you sure you want to delete this deduction entry for #{@deduction.salary.employee.full_name}?",
              "data-confirm-delete-confirm-path-param" => accounting_deduction_path(@deduction)
            } do %>
          <svg xmlns="http://www.w3.org" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-10 pt-8 border-t border-hamzis-brown/10">
    <div>
      <p class="text-[9px] font-black uppercase tracking-[0.2em] text-hamzis-copper mb-2">Affected Employee</p>
      <p class="text-sm font-bold text-hamzis-brown dark:text-white uppercase tracking-tight">
        <%= @deduction.salary.employee.full_name %>
      </p>
    </div>
    <div>
      <p class="text-[9px] font-black uppercase tracking-[0.2em] text-hamzis-copper mb-2">Debit Amount</p>
      <p class="text-xl font-black text-red-600 font-mono tracking-tighter">
        - <%= number_to_currency(@deduction.amount, unit: "â‚¦") %>
      </p>
    </div>
    <div>
      <p class="text-[9px] font-black uppercase tracking-[0.2em] text-hamzis-copper mb-2">Associated Payroll</p>
      <%= link_to "View Salary Record", accounting_salary_path(@deduction.salary), class: "text-sm font-bold text-hamzis-brown dark:text-white hover:text-hamzis-copper underline decoration-hamzis-copper/30 transition-colors" %>
    </div>
  </div>
</div>
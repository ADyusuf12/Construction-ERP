<h2 class="text-2xl font-bold mb-6">Deductions</h2>
<!-- Dashboard Summary -->
<div class="grid md:grid-cols-3 gap-6 mb-8">
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6 text-center">
    <p class="text-sm font-medium text-hamzis-brown dark:text-hamzis-copper">Total Deductions</p>
    <p class="text-2xl font-bold"><%= @deductions.count %></p>
  </div>
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6 text-center">
    <p class="text-sm font-medium text-hamzis-brown dark:text-hamzis-copper">Total Amount</p>
    <p class="text-2xl font-bold"><%= number_to_currency(@deductions.sum(:amount), unit: "₦") %></p>
  </div>
</div>
<!-- New Deduction Button -->
<div class="mb-6 flex justify-end">
  <%= link_to "➕ New Deduction", new_accounting_deduction_path,
      class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition" %>
</div>
<!-- Deductions Table -->
<%= render "accounting/deductions/deductions_table", deductions: @deductions %>

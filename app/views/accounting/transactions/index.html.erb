<h2 class="text-2xl font-bold mb-6">Transactions</h2>
<!-- Dashboard Summary -->
<div class="grid md:grid-cols-3 gap-6 mb-8">
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6 text-center">
    <p class="text-sm font-medium text-hamzis-brown dark:text-hamzis-copper">Total Invoices</p>
    <p class="text-2xl font-bold"><%= @total_invoices %></p>
  </div>
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6 text-center">
    <p class="text-sm font-medium text-hamzis-brown dark:text-hamzis-copper">Total Receipts</p>
    <p class="text-2xl font-bold"><%= @total_receipts %></p>
  </div>
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6 text-center">
    <p class="text-sm font-medium text-hamzis-brown dark:text-hamzis-copper">Outstanding</p>
    <p class="text-2xl font-bold"><%= @outsanding %></p>
  </div>
</div>
<!-- New Transaction Button -->
<div class="mb-6 flex justify-end">
  <%= link_to "➕ New Transaction", new_accounting_transaction_path,
      class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition" %>
</div>
<!-- Transactions Table -->
<div class="overflow-x-auto bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
            border border-hamzis-brown/20 rounded-xl shadow-lg p-6">
  <% if @transactions.any? %>
    <table class="min-w-full text-sm text-left">
      <thead>
        <tr class="text-hamzis-brown dark:text-hamzis-copper border-b border-hamzis-brown/20">
          <th class="px-4 py-2">Date</th>
          <th class="px-4 py-2">Project</th>
          <th class="px-4 py-2">Description</th>
          <th class="px-4 py-2">Type</th>
          <th class="px-4 py-2">Amount</th>
          <th class="px-4 py-2">Status</th>
          <th class="px-4 py-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "accounting/transactions/transaction_row",
                   collection: @transactions,
                   as: :t,
                   locals: { show_project: true } %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-6">
      <p class="text-lg font-semibold text-hamzis-brown dark:text-hamzis-copper">No transactions yet</p>
      <p class="text-sm mt-2">Start by recording your first invoice or receipt.</p>
      <div class="mt-4">
        <%= link_to "➕ New Transaction", new_accounting_transaction_path,
            class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition" %>
      </div>
    </div>
  <% end %>
</div>

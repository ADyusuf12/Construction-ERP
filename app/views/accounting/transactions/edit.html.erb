      <h1 class="text-3xl font-black tracking-tighter text-hamzis-brown dark:text-hamzis-copper">Adjust Entry</h1>
      <p class="text-sm text-hamzis-brown/60 dark:text-hamzis-copper/60 italic">Modifying transaction record <%= @transaction.reference || "ID: #{@transaction.id}" %></p>
    </div>
  </div>
</div>
<%= render "form", transaction: @transaction %>

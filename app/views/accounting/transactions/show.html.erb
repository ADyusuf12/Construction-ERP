<% content_for :title, "Transaction Details" %>
<h1 class="text-2xl font-bold text-hamzis-brown dark:text-hamzis-copper mb-6">
  Transaction: <%= @transaction.description %>
</h1>
<div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
            border border-hamzis-brown/20 rounded-xl shadow-lg p-6 space-y-4">
  <p><span class="font-semibold">Project:</span> <%= @transaction.project.name %></p>
  <p><span class="font-semibold">Date:</span> <%= @transaction.date.strftime("%B %d, %Y") %></p>
  <p><span class="font-semibold">Type:</span> <%= @transaction.transaction_type.humanize %></p>
  <p><span class="font-semibold">Amount:</span> <%= number_to_currency(@transaction.amount, unit: "₦") %></p>
  <p><span class="font-semibold">Status:</span>
    <span class="px-2 py-1 rounded
      <%= @transaction.status_paid? ? 'bg-green-600 text-white' : 'bg-hamzis-copper text-hamzis-white' %>">
      <%= @transaction.status.humanize %>
    </span>
  </p>
  <% if @transaction.reference.present? %>
    <p><span class="font-semibold">Reference:</span> <%= @transaction.reference %></p>
  <% end %>
  <% if @transaction.notes.present? %>
    <p><span class="font-semibold">Notes:</span> <%= @transaction.notes %></p>
  <% end %>
</div>
<div class="mt-6 flex gap-2">
  <%= link_to "Edit", edit_accounting_transaction_path(@transaction),
      class: "px-3 py-1 rounded bg-hamzis-brown text-hamzis-white hover:bg-hamzis-copper transition" %>
  <%= link_to "← Back to Transactions", accounting_transactions_path,
      class: "px-3 py-1 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition" %>
  <% if policy(@transaction).destroy? %>
    <%= button_to "Delete", "#",
        class: "px-3 py-1 rounded bg-red-600 text-white hover:bg-red-800 transition",
        form: {
          "data-action" => "click->confirm-delete#open",
          "data-confirm-delete-title-param" => "Delete Transaction?",
          "data-confirm-delete-message-param" => "Are you sure you want to delete this #{@transaction.transaction_type}? This action cannot be undone.",
          "data-confirm-delete-confirm-path-param" => accounting_transaction_path(@transaction)
        } %>
  <% end %>
</div>

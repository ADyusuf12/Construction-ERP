<%= form_with(model: @transaction, local: true, class: "space-y-6") do |f| %>
  <% if @transaction.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded">
      <h2 class="font-bold mb-2"><%= pluralize(@transaction.errors.count, "error") %> prevented this transaction from being saved:</h2>
      <ul class="list-disc pl-5">
        <% @transaction.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- Project -->
  <div>
    <%= f.label :project_id, "Project", class: "block text-sm font-medium mb-1" %>
    <%= f.collection_select :project_id, Project.all, :id, :name,
          { prompt: "Select a project" },
          { class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" } %>
  </div>
  <!-- Date -->
  <div>
    <%= f.label :date, class: "block text-sm font-medium mb-1" %>
    <%= f.date_select :date, class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" %>
  </div>
  <!-- Description -->
  <div>
    <%= f.label :description, class: "block text-sm font-medium mb-1" %>
    <%= f.text_field :description, class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" %>
  </div>
  <!-- Amount -->
  <div>
    <%= f.label :amount, class: "block text-sm font-medium mb-1" %>
    <%= f.number_field :amount, step: "0.01", class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" %>
  </div>
  <!-- Type -->
  <div>
    <%= f.label :transaction_type, "Type", class: "block text-sm font-medium mb-1" %>
    <%= f.select :transaction_type, Accounting::Transaction.transaction_types.keys.map { |t| [t.humanize, t] },
          {}, { class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" } %>
  </div>
  <!-- Status -->
  <div>
    <%= f.label :status, class: "block text-sm font-medium mb-1" %>
    <%= f.select :status, Accounting::Transaction.statuses.keys.map { |s| [s.humanize, s] },
          {}, { class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" } %>
  </div>
  <!-- Reference -->
  <div>
    <%= f.label :reference, "Reference (optional)", class: "block text-sm font-medium mb-1" %>
    <%= f.text_field :reference, class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" %>
  </div>
  <!-- Notes -->
  <div>
    <%= f.label :notes, "Notes (optional)", class: "block text-sm font-medium mb-1" %>
    <%= f.text_area :notes, rows: 3, class: "w-full px-3 py-2 border rounded focus:ring-hamzis-copper focus:border-hamzis-copper" %>
  </div>
  <!-- Submit -->
  <div class="flex justify-end">
    <%= f.submit class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition" %>
  </div>
<% end %>

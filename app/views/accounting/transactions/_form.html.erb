<%= form_with(model: @transaction, local: true, class: "space-y-6 hr-form") do |f| %>
  <% if @transaction.errors.any? %>
    <div class="p-4 rounded bg-hamzis-copper text-hamzis-white">
      <h3 class="font-semibold"><%= pluralize(@transaction.errors.count, "error") %> prevented saving:</h3>
      <ul class="list-disc ml-6 mt-2 text-sm">
        <% @transaction.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6 space-y-4">
    <!-- Date -->
    <div>
      <%= f.label :date, "Date", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.date_field :date,
            class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                    focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <!-- Description -->
    <div>
      <%= f.label :description, "Description", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.text_field :description,
            class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                    focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <!-- Amount -->
    <div>
      <%= f.label :amount, "Amount", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.text_field :amount,
            class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                    focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <!-- Type -->
    <div>
      <%= f.label :transaction_type, "Type", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.select :transaction_type,
            Accounting::Transaction.transaction_types.keys.map { |t| [t.humanize, t] },
            {}, { class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                      focus:ring-hamzis-copper focus:border-hamzis-copper" } %>
    </div>
    <!-- Status -->
    <div>
      <%= f.label :status, "Status", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.select :status,
            Accounting::Transaction.statuses.keys.map { |s| [s.humanize, s] },
            {}, { class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                      focus:ring-hamzis-copper focus:border-hamzis-copper" } %>
    </div>
    <!-- Reference -->
    <div>
      <%= f.label :reference, "Reference (optional)", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.text_field :reference,
            class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                    focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <!-- Notes -->
    <div>
      <%= f.label :notes, "Notes (optional)", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.text_area :notes, rows: 3,
            class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                    focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <!-- Actions -->
    <div class="flex flex-col sm:flex-row gap-3 mt-2">
      <%= f.submit (@transaction.persisted? ? "Update Transaction" : "Create Transaction"),
            class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition-colors w-full sm:w-auto" %>
      <%= link_to "Cancel", accounting_transactions_path,
            class: "px-4 py-2 rounded bg-hamzis-brown text-hamzis-white hover:bg-hamzis-copper transition w-full sm:w-auto" %>
    </div>
  </div>
<% end %>

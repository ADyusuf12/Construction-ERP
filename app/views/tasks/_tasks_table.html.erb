<%# app/views/tasks/_task_table.html.erb %>
<div class="overflow-x-auto bg-brand-white/30 dark:bg-brand-black/30 backdrop-blur-md border border-brand-secondary/20 rounded-2xl shadow-xl p-6">
  <%# FIX: Use the 'tasks' variable passed from the loop %>
  <% current_tasks = local_assigns[:tasks] || project.tasks %>
  <% if current_tasks.any? %>
    <table class="min-w-full text-sm text-left border-separate border-spacing-0">
      <%= render "tasks/task_table_header", show_details: true %>
      <tbody class="divide-y divide-brand-secondary/10 dark:divide-brand-primary/10">
        <% current_tasks.each_with_index do |task, index| %>
          <%= render "tasks/task_row",
                         task: task,
                         show_details: true,
                         row_class: index.even? ? "bg-brand-secondary/5 dark:bg-brand-primary/5" : "" %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-12">
      <p class="text-lg font-black uppercase tracking-tighter text-brand-secondary dark:text-brand-primary">No Site Directives</p>
      <p class="text-xs text-brand-secondary/50 dark:text-brand-primary/50 italic mt-1 mb-6">This site currently has no logged tasks.</p>
      <%= link_to "âž• Add Task to Site", new_project_task_path(project), class: "px-6 py-2 rounded-xl bg-brand-primary text-white font-bold uppercase tracking-widest text-[10px] hover:bg-brand-black transition" %>
    </div>
  <% end %>
</div>
<% content_for :title, "Update Assignment | Earmark Systems" %>
<div class="mb-8">
  <nav class="flex items-center gap-2 text-[10px] font-bold uppercase tracking-widest text-brand-secondary/50 dark:text-brand-primary/50 mb-2">
    <%= link_to "Project Tasks", (@project ? project_tasks_path(@project) : tasks_path), class: "hover:text-brand-primary transition-colors" %>
    <svg xmlns="http://www.w3.org" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7" />
    </svg>
    <%= link_to @task.title, (@project ? project_task_path(@project, @task) : task_path(@task)), class: "hover:text-brand-primary transition-colors" %>
    <svg xmlns="http://www.w3.org" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7" />
    </svg>
    <span class="text-brand-primary">Workflow Update</span>
  </nav>
  <div class="flex items-center gap-3">
    <div class="p-3 rounded-2xl bg-brand-secondary text-white shadow-lg dark:bg-brand-primary/20 dark:text-brand-primary">
      <svg xmlns="http://www.w3.org" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
      </svg>
    </div>
    <div>
      <h1 class="text-3xl font-black tracking-tighter text-brand-secondary dark:text-brand-primary truncate max-w-md">Update Task</h1>
      <p class="text-sm text-brand-secondary/60 dark:text-brand-primary/60">Modifying timelines and responsibilities for <%= @task.title %>.</p>
    </div>
  </div>
</div>
<%= render "form", project: @project, task: @task %>
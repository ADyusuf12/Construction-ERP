<div class="grid md:grid-cols-4 gap-6 mb-8">
  <!-- Total Tasks -->
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6 text-center">
    <p class="text-sm font-medium text-hamzis-brown dark:text-hamzis-copper">Total Tasks</p>
    <p class="text-2xl font-bold"><%= tasks.count %></p>
  </div>
  <!-- Pending -->
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6 text-center">
    <p class="text-sm font-medium text-hamzis-brown dark:text-hamzis-copper">Pending</p>
    <p class="text-2xl font-bold"><%= tasks.status_pending.count %></p>
  </div>
  <!-- In Progress -->
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6 text-center">
    <p class="text-sm font-medium text-hamzis-brown dark:text-hamzis-copper">In Progress</p>
    <p class="text-2xl font-bold"><%= tasks.status_in_progress.count %></p>
  </div>
  <!-- Done -->
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6 text-center">
    <p class="text-sm font-medium text-hamzis-brown dark:text-hamzis-copper">Done</p>
    <p class="text-2xl font-bold"><%= tasks.status_done.count %></p>
  </div>
</div>

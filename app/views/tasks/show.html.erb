<% content_for :title, "#{@task.title} | Task Directive" %>
<div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md border border-hamzis-brown/20 rounded-2xl shadow-2xl p-8 mb-10 relative overflow-hidden animate-fade-in">
  <!-- Status Progress Accent -->
  <% status_color = @task.status == 'completed' ? 'bg-green-500' : 'bg-hamzis-copper' %>
  <div class="absolute top-0 left-0 w-full h-1 <%= status_color %> opacity-40"></div>
  <div class="flex flex-col md:flex-row justify-between items-start gap-6">
    <div class="flex-1">
      <div class="flex items-center gap-3 mb-2">
        <span class="px-2 py-0.5 rounded bg-hamzis-copper/10 border border-hamzis-copper/20 text-[9px] font-black uppercase tracking-[0.2em] text-hamzis-copper">
          Work Order #<%= @task.id %>
        </span>
        <span class="inline-flex items-center gap-1.5 text-[9px] font-black uppercase tracking-widest text-hamzis-brown/50 dark:text-hamzis-copper/50">
          <span class="h-1.5 w-1.5 rounded-full <%= status_color %> <%= 'animate-pulse' unless @task.status == 'completed' %>"></span>
          <%= @task.status.humanize %>
        </span>
      </div>
      <h2 class="text-3xl font-black text-hamzis-brown dark:text-white uppercase tracking-tighter italic mb-4">
        <%= @task.title %>
      </h2>
      <% if @task.details.present? %>
        <p class="text-sm text-hamzis-brown/70 dark:text-hamzis-textDark/70 leading-relaxed max-w-2xl italic border-l-2 border-hamzis-copper/30 pl-4">
          <%= @task.details %>
        </p>
      <% end %>
    </div>
    <!-- Toolbar -->
    <div class="flex flex-wrap md:flex-nowrap gap-3">
      <%= link_to edit_project_task_path(@project, @task),
          class: "flex items-center gap-2 px-5 py-2.5 rounded-xl bg-hamzis-copper text-white text-[10px] font-black uppercase tracking-widest shadow-lg hover:bg-hamzis-black transition-all active:scale-95" do %>
        Edit Directive
      <% end %>
      <%= link_to project_tasks_path(@project),
          class: "flex items-center gap-2 px-5 py-2.5 rounded-xl bg-hamzis-brown/10 text-hamzis-brown dark:text-hamzis-copper border border-hamzis-brown/20 text-[10px] font-black uppercase tracking-widest hover:bg-hamzis-brown hover:text-white transition-all" do %>
        Back to Queue
      <% end %>
      <% if policy(@task).destroy? %>
        <%= button_to "#",
            class: "p-2.5 rounded-xl bg-red-500/10 text-red-600 border border-red-500/20 hover:bg-red-600 hover:text-white transition-all cursor-pointer",
            form: {
              "data-action" => "click->confirm-delete#open",
              "data-confirm-delete-title-param" => "Delete Task?",
              "data-confirm-delete-message-param" => "Are you sure you want to delete '#{@task.title}'?",
              "data-confirm-delete-confirm-path-param" => project_task_path(@project, @task)
            } do %>
          <svg xmlns="http://www.w3.org" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
        <% end %>
      <% end %>
    </div>
  </div>
  <!-- Technical Context Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-10 pt-8 border-t border-hamzis-brown/10">
    <div>
      <p class="text-[9px] font-black uppercase tracking-[0.2em] text-hamzis-copper mb-2">Deployment Site</p>
      <%= link_to @project.name, project_path(@project), class: "text-sm font-bold text-hamzis-brown dark:text-white uppercase tracking-tight hover:text-hamzis-copper transition-colors" %>
    </div>
    <div>
      <p class="text-[9px] font-black uppercase tracking-[0.2em] text-hamzis-copper mb-2">Target Deadline</p>
      <p class="text-sm font-black text-hamzis-brown dark:text-white font-mono tracking-tighter">
        <%= @task.due_date&.strftime("%d.%m.%Y") || "NOT SCHEDULED" %>
      </p>
    </div>
    <%# REFACTORED SECTION: Now pulling from Employees through Assignments %>
    <div>
      <p class="text-[9px] font-black uppercase tracking-[0.2em] text-hamzis-copper mb-2">Personnel Assignment</p>
      <% if @task.employees.any? %>
        <div class="flex flex-col gap-1.5">
          <% @task.employees.each do |employee| %>
            <%= link_to hr_employee_path(employee), class: "flex items-center gap-2 group" do %>
              <div class="h-5 w-5 rounded bg-hamzis-copper/10 flex items-center justify-center text-[8px] font-black text-hamzis-copper group-hover:bg-hamzis-copper group-hover:text-white transition-all">
                <%= employee.personal_detail&.first_name&.first %>
              </div>
              <span class="text-[11px] font-bold text-hamzis-brown dark:text-white uppercase tracking-tight group-hover:text-hamzis-copper transition-colors">
                <%= employee.full_name %>
              </span>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm font-bold text-hamzis-brown dark:text-white italic opacity-40">Unassigned Personnel</p>
      <% end %>
    </div>
  </div>
</div>

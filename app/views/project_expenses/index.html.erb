<% content_for :title, "Financial Control | Hamzis Systems" %>
<div class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4">
  <div>
    <h1 class="text-4xl font-black tracking-tighter text-hamzis-brown dark:text-hamzis-copper uppercase">
      <% if @project %>
        Site Ledger: <%= @project.name %>
      <% else %>
        Expenditure Ledger
      <% end %>
    </h1>
    <p class="text-sm text-hamzis-brown/60 dark:text-hamzis-copper/60 italic">
      <%= @project ? "Resource utilization and cost tracking for active site deployment." : "Aggregated financial outflows across all operational sites." %>
    </p>
  </div>
  <% new_path = @project ? new_project_project_expense_path(@project) : new_project_expense_path %>
  <%= link_to new_path, class: "flex items-center gap-2 px-6 py-3 rounded-xl bg-hamzis-copper text-white font-black uppercase tracking-widest text-[11px] shadow-lg hover:bg-white hover:text-hamzis-brown transition-all duration-500 active:scale-95 shadow-hamzis-copper/20" do %>
    <svg xmlns="http://www.w3.org" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M12 6v6m0 0v6m0-6h6m-6 0H6" /></svg>
    Log Expenditure
  <% end %>
</div>
<%= render "project_expenses/expenses_summary", expenses: @expenses, project: @project %>
<%= render "project_expenses/expenses_table",
           expenses: @expenses,
           show_project: @project.nil? %>

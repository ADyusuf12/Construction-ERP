<tr id="<%= dom_id(expense) %>" class="<%= row_class %> group hover:bg-white/40 dark:hover:bg-brand-black/40 transition-all duration-300">
    <td class="px-6 py-4 font-mono text-[11px] font-bold text-brand-secondary dark:text-white">
        <%= expense.date.strftime("%d.%m.%Y") %>
    </td>
    <% if show_project %>
    <td class="px-6 py-4">
        <%= link_to expense.project.name, project_path(expense.project),
                  class: "text-[10px] font-black uppercase tracking-widest text-brand-primary hover:text-brand-secondary transition" %>
    </td>
    <% end %>
    <td class="px-6 py-4 text-xs font-bold text-brand-secondary dark:text-brand-primary tracking-tight uppercase">
        <%= expense.description %>
    </td>
    <td class="px-6 py-4">
        <div class="text-sm font-black text-brand-secondary dark:text-white">
            <span class="text-[10px] opacity-40">â‚¦</span><%= number_with_delimiter(number_with_precision(expense.amount, precision: 2)) %>
        </div>
    </td>
    <td class="px-6 py-4">
        <span class="text-[10px] font-mono font-bold text-brand-secondary/40 dark:text-brand-primary/60 tracking-wider">
            <%= expense.reference.presence || "NO-REF" %>
        </span>
    </td>
    <td class="px-6 py-4">
        <div class="flex items-center justify-end gap-2 opacity-20 group-hover:opacity-100 transition-opacity">
            <%= link_to project_project_expense_path(expense.project, expense), class: "p-2 rounded-lg bg-brand-primary text-white hover:scale-110 transition shadow-lg", title: "View Entry" do %>
            <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            <% end %>
            <%= link_to edit_project_project_expense_path(expense.project, expense), class: "p-2 rounded-lg bg-brand-secondary text-white hover:scale-110 transition shadow-lg", title: "Adjust Entry" do %>
            <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                <path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            <% end %>
        </div>
    </td>
</tr>
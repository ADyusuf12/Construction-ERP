<% content_for :title, "New Expense" %>
<h1 class="text-2xl font-bold text-hamzis-brown dark:text-hamzis-copper mb-4">
  New Expense
</h1>
<%= render "form", expense: @expense, project: @project %>
<div class="mt-4">
  <% if @project %>
    <%= link_to "← Back to Project",
        project_path(@project),
        class: "px-3 py-1 rounded bg-hamzis-brown text-white hover:bg-hamzis-copper transition" %>
  <% else %>
    <%= link_to "← Back to Expenses",
        project_expenses_path,
        class: "px-3 py-1 rounded bg-hamzis-brown text-white hover:bg-hamzis-copper transition" %>
  <% end %>
</div>

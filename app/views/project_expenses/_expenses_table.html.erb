<div class="overflow-hidden bg-brand-white/30 dark:bg-brand-black/30 backdrop-blur-md border border-brand-secondary/20 rounded-2xl shadow-2xl p-6">
    <% if expenses.any? %>
    <div class="overflow-x-auto">
        <table class="min-w-full text-left border-separate border-spacing-0">
            <thead>
                <%= render "project_expenses/expenses_header", show_project: show_project %>
            </thead>
            <tbody class="divide-y divide-brand-secondary/10 dark:divide-brand-primary/10">
                <% expenses.each_with_index do |expense, index| %>
                <%= render "project_expenses/expense_row",
                       expense: expense,
                       show_project: show_project,
                       row_class: index.even? ? "bg-brand-secondary/5 dark:bg-brand-primary/5" : "" %>
                <% end %>
            </tbody>
        </table>
    </div>
    <% else %>
    <div class="text-center py-20 bg-black/5 rounded-xl border border-dashed border-brand-secondary/20">
        <h3 class="text-xl font-black text-brand-secondary dark:text-brand-primary uppercase tracking-tighter italic text-opacity-50">No Expenditure Logged</h3>
        <p class="text-[10px] text-white/30 mt-2 uppercase tracking-widest">Financial ledger currently blank.</p>
    </div>
    <% end %>
</div>
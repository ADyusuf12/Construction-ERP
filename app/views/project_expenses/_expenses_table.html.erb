<table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
  <thead>
    <tr class="bg-hamzis-brown/10 dark:bg-hamzis-copper/10 text-hamzis-brown dark:text-hamzis-copper uppercase text-xs tracking-wide">
      <th class="px-4 py-3">Date</th>
      <% if local_assigns[:show_project] %>
        <th class="px-4 py-3">Project</th>
      <% end %>
      <th class="px-4 py-3">Description</th>
      <th class="px-4 py-3">Amount</th>
      <th class="px-4 py-3">Reference</th>
      <th class="px-4 py-3">Actions</th>
    </tr>
  </thead>
  <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
    <% expenses.each_with_index do |expense, index| %>
      <%= render "project_expenses/expense_row",
                 expense: expense,
                 show_project: local_assigns[:show_project],
                 row_class: index.even? ? "bg-hamzis-brown/5 dark:bg-hamzis-copper/5" : "" %>
    <% end %>
  </tbody>
</table>

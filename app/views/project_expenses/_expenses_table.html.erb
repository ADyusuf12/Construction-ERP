<div class="overflow-x-auto bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
            border border-hamzis-brown/20 rounded-xl shadow-lg p-6">
  <% if expenses.any? %>
    <table class="min-w-full text-sm text-left border-collapse">
      <thead>
        <%= render "project_expenses/expenses_header", show_project: show_project %>
      </thead>
      <tbody class="divide-y divide-hamzis-brown/20">
        <% expenses.each_with_index do |expense, index| %>
          <%= render "project_expenses/expense_row",
                     expense: expense,
                     show_project: show_project,
                     row_class: index.even? ? "bg-hamzis-brown/5 dark:bg-hamzis-copper/5" : "" %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-6">
      <p class="text-lg font-semibold text-hamzis-brown dark:text-hamzis-copper">No expenses yet</p>
    </div>
  <% end %>
</div>

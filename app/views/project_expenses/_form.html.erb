<%= form_with(model: (@project ? [@project, @expense] : @expense), local: true, class: "space-y-6") do |f| %>
  <% if @expense.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded">
      <h2 class="font-bold mb-2"><%= pluralize(@expense.errors.count, "error") %> prevented this expense from being saved:</h2>
      <ul class="list-disc pl-5">
        <% @expense.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- Date -->
  <div>
    <%= f.label :date, class: "block text-sm font-medium mb-1" %>
    <%= f.date_field :date, class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
  </div>
  <!-- Project selector (only for global form) -->
  <% unless @project %>
    <div>
      <%= f.label :project_id, "Project", class: "block text-sm font-medium mb-1" %>
      <%= f.collection_select :project_id, Project.all, :id, :name,
            { prompt: "Select a project" },
            class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
  <% end %>
  <!-- Description -->
  <div>
    <%= f.label :description, class: "block text-sm font-medium mb-1" %>
    <%= f.text_field :description, class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
  </div>
  <!-- Amount -->
  <div>
    <%= f.label :amount, class: "block text-sm font-medium mb-1" %>
    <%= f.text_field :amount, class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
  </div>
  <!-- Reference -->
  <div>
    <%= f.label :reference, "Reference (optional)", class: "block text-sm font-medium mb-1" %>
    <%= f.text_field :reference, class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
  </div>
  <!-- Notes -->
  <div>
    <%= f.label :notes, "Notes (optional)", class: "block text-sm font-medium mb-1" %>
    <%= f.text_area :notes, rows: 3, class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper focus:ring-hamzis-copper focus:border-hamzis-copper" %>
  </div>
  <!-- Submit -->
  <div class="flex justify-end">
    <%= f.submit "Save Expense", class: "px-4 py-2 rounded bg-hamzis-copper text-white hover:bg-hamzis-black transition" %>
  </div>
<% end %>

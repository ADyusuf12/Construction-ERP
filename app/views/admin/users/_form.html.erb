<%# Enhanced Red Error Block %>
<% if f.object.errors.any? %>
  <div class="p-4 mb-6 rounded-2xl bg-red-500/10 border border-red-500/30 text-red-600 dark:text-red-400 backdrop-blur-md">
    <div class="flex items-center gap-2 mb-2">
      <svg xmlns="http://www.w3.org" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
      </svg>
      <h3 class="font-bold uppercase tracking-widest text-xs">Provisioning Blocked</h3>
    </div>
    <ul class="list-disc ml-6 text-xs space-y-1 opacity-90">
      <% f.object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <div class="lg:col-span-2">
    <div class="bg-brand-white/30 dark:bg-brand-black/30 border border-brand-secondary/20 rounded-2xl p-6 shadow-xl backdrop-blur-sm h-full">
      <div class="flex items-center gap-2 mb-6">
        <div class="p-2 rounded-lg bg-brand-primary/10 text-brand-primary">
          <svg xmlns="http://www.w3.org" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <h4 class="text-sm font-black uppercase tracking-widest text-brand-secondary dark:text-brand-primary">Identity Parameters</h4>
      </div>
      <div class="space-y-6">
        <div>
          <%= f.label :email, "System Identifier (Email)", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
          <%= f.email_field :email, placeholder: "user@example.com",
                class: "w-full px-4 py-3 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary outline-none transition font-medium" %>
        </div>
        <div class="p-4 rounded-xl border border-brand-primary/10 bg-brand-primary/5">
          <h5 class="text-[9px] font-black uppercase tracking-widest text-brand-primary mb-2">Audit Trace</h5>
          <p class="text-[11px] text-brand-secondary/60 dark:text-brand-primary/50 leading-relaxed italic">
            Unique identification is required for system entry. All actions performed under this identity will be logged to the central security ledger.
          </p>
        </div>
      </div>
    </div>
  </div>
  <!-- RIGHT: Security & Permissions -->
  <div class="lg:col-span-1 space-y-6">
    <div class="bg-brand-secondary/90 dark:bg-brand-primary/10 border border-brand-primary/30 rounded-2xl p-6 shadow-2xl sticky top-6">
      <h4 class="text-xs font-black uppercase tracking-[0.2em] text-brand-primary mb-6 border-b border-brand-primary/20 pb-4 text-center">Clearance Level</h4>
      <div class="space-y-6">
        <div>
          <%= f.label :role, "Access Privilege", class: "block text-[9px] font-bold uppercase tracking-[0.2em] text-brand-primary/70 mb-1" %>
          <%= f.select :role, User.roles.keys.map { |r| [r.humanize.upcase, r] }, { include_blank: "Assign Role..." },
                { class: "w-full px-4 py-2 bg-black/20 border border-white/10 rounded-xl text-xs text-white focus:ring-1 focus:ring-brand-primary outline-none transition cursor-pointer" } %>
        </div>
        <div>
          <%= f.label :password, "Security Key", class: "block text-[9px] font-bold uppercase tracking-[0.2em] text-brand-primary/70 mb-1" %>
          <%= f.password_field :password, placeholder: "••••••••",
                class: "w-full px-4 py-2 bg-black/20 border border-white/10 rounded-xl text-sm text-white focus:ring-1 focus:ring-brand-primary outline-none transition" %>
          <p class="mt-2 text-[8px] text-white/30 uppercase tracking-widest font-bold">Initial credential; reset forced on entry.</p>
        </div>
        <div class="pt-4">
          <%= f.submit (f.object.persisted? ? "Update Credentials" : "Provision User"),
                class: "w-full py-4 rounded-xl bg-brand-primary text-white font-black uppercase tracking-widest text-[11px] shadow-lg hover:bg-white hover:text-brand-secondary transition-all duration-500 active:scale-95 cursor-pointer" %>
          <%= link_to "Abort Provisioning", admin_users_path,
                class: "block w-full mt-4 text-center text-[10px] font-bold uppercase tracking-widest text-white/40 hover:text-red-400 transition" %>
        </div>
      </div>
    </div>
  </div>
</div>
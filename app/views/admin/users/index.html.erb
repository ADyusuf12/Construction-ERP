<% content_for :title, "Access Control | Earmark Systems" %>
<div class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4">
  <div>
    <h1 class="text-4xl font-black tracking-tighter text-brand-secondary dark:text-brand-primary uppercase">System Nodes</h1>
    <p class="text-sm text-brand-secondary/60 dark:text-brand-primary/60 italic">User authentication registry and security role management.</p>
  </div>
  <%= link_to new_admin_user_path, class: "flex items-center gap-2 px-6 py-3 rounded-xl bg-brand-primary text-white font-black uppercase tracking-widest text-[11px] shadow-lg hover:bg-white hover:text-brand-secondary transition-all duration-500 active:scale-95 shadow-brand-primary/20" do %>
    <svg xmlns="http://www.w3.org" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
      <path d="M12 4v16m8-8H4" />
    </svg>
    New User
  <% end %>
</div>
<%= render "admin/users/user_summary", users: @users %>
<div class="overflow-hidden bg-brand-white/30 dark:bg-brand-black/30 backdrop-blur-md border border-brand-secondary/20 rounded-2xl shadow-2xl p-6">
  <div class="overflow-x-auto">
    <table class="min-w-full text-left border-separate border-spacing-0">
      <%= render "admin/users/user_table_header" %>
      <tbody class="divide-y divide-brand-secondary/10 dark:divide-brand-primary/10">
        <% @users.each_with_index do |user, index| %>
          <%= render "admin/users/user_row",
                     user: user,
                     row_class: index.even? ? "bg-brand-secondary/5 dark:bg-brand-primary/5" : "" %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="mt-10 py-6 border-t border-brand-secondary/5 dark:border-brand-primary/10 flex flex-col items-center gap-3">
  <p class="text-[9px] font-black uppercase tracking-[0.3em] text-brand-secondary/30 dark:text-brand-primary/30 italic mb-2"></p>
  <%= paginate @users if defined?(paginate) %>
</div>
<tr id="<%= dom_id(user) %>" class="<%= row_class %> hover:bg-hamzis-white/40 dark:hover:bg-hamzis-black/40 transition">
  <!-- Email -->
  <td class="px-4 py-3 font-semibold"><%= user.email %></td>
  <!-- Role -->
  <td class="px-4 py-3"><%= user.role.humanize %></td>
  <!-- Employee Linked -->
  <td class="px-4 py-3">
    <% if user.employee.present? %>
      <span class="px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">Yes</span>
    <% else %>
      <span class="px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-700">No</span>
    <% end %>
  </td>
  <!-- Client Linked -->
  <td class="px-4 py-3">
    <% if user.client.present? %>
      <span class="px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">Yes</span>
    <% else %>
      <span class="px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-700">No</span>
    <% end %>
  </td>
  <!-- Actions -->
  <td class="px-4 py-3 flex gap-2">
    <%= link_to "View", admin_user_path(user),
    class: "px-3 py-1 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition text-xs" %>
    <%= link_to "Edit", edit_admin_user_path(user),
    class: "px-3 py-1 rounded bg-hamzis-brown text-hamzis-white hover:bg-hamzis-copper transition text-xs" %>
    <%= button_to "Delete", "#",
    class: "px-3 py-1 rounded bg-red-600 text-white hover:bg-red-800 transition text-xs",
    form: {
      "data-action" => "click->confirm-delete#open",
      "data-confirm-delete-title-param" => "Delete User?",
      "data-confirm-delete-message-param" => "Are you sure you want to delete this user? This action cannot be undone.",
      "data-confirm-delete-confirm-path-param" => admin_user_path(user)
    } %>
  </td>
</tr>

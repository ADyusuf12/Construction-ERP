<tr id="<%= dom_id(user) %>" class="<%= row_class %> group hover:bg-white/40 dark:hover:bg-brand-black/40 transition-all duration-300">
    <td class="px-6 py-4">
        <span class="text-sm font-mono font-bold text-brand-secondary dark:text-white tracking-tighter">
            <%= user.email %>
        </span>
    </td>
    <td class="px-6 py-4">
        <span class="text-[9px] font-black uppercase tracking-widest px-2.5 py-1 rounded bg-brand-primary/10 text-brand-primary border border-brand-primary/20">
            <%= user.role.humanize %>
        </span>
    </td>
    <td class="px-6 py-4 text-center">
        <% linked = user.employee.present? %>
        <span class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded border text-[8px] font-black uppercase tracking-widest <%= linked ? 'text-green-500 bg-green-500/10 border-green-500/20' : 'text-red-500 bg-red border-red-500/20 opacity-40' %>">
            <div class="w-1 h-1 rounded-full bg-current"></div>
            <%= linked ? "Yes" : "No" %>
        </span>
    </td>
    <td class="px-6 py-4 text-center">
        <% linked = user.client.present? %>
        <span class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded border text-[8px] font-black uppercase tracking-widest <%= linked ? 'text-green-500 bg-green-500/10 border-green-500/20' : 'text-red-500 bg-red border-red-500/20 opacity-40' %>">
            <div class="w-1 h-1 rounded-full bg-current"></div>
            <%= linked ? "Yes" : "No" %>
        </span>
    </td>
    <td class="px-6 py-4">
        <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
            <%= link_to admin_user_path(user), class: "p-2 rounded-lg bg-brand-primary text-white hover:scale-110 transition shadow-lg", title: "Audit Node" do %>
            <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            <% end %>
            <%= link_to edit_admin_user_path(user), class: "p-2 rounded-lg bg-brand-secondary text-white hover:scale-110 transition shadow-lg", title: "Calibrate Node" do %>
            <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                <path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            <% end %>
            <%= button_to admin_user_path(user), method: :delete, class: "p-2 rounded-lg bg-red-600/10 text-red-600 border border-red-600/20 hover:bg-red-600 hover:text-white transition shadow-sm", title: "Purge Node",
          form: {
            "data-action" => "click->confirm-delete#open",
            "data-confirm-delete-title-param" => "Purge User?",
            "data-confirm-delete-message-param" => "Terminate system access for this node?",
            "data-confirm-delete-confirm-path-param" => admin_user_path(user)
          } do %>
            <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                <path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            <% end %>
        </div>
    </td>
</tr>
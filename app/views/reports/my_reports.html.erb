<div class="space-y-10">
  <%# Intelligence Briefing %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <%
      all_authored = @reports_by_status.values.flatten
      draft_count = @reports_by_status['draft']&.size || 0
      pending_review = @reports_by_status['submitted']&.size || 0
    %>
    <div class="p-6 bg-yellow-500/5 border border-yellow-500/20 rounded-2xl">
      <p class="text-[10px] font-black uppercase tracking-widest text-yellow-600/70 mb-1">Drafts (Requires Action)</p>
      <p class="text-3xl font-black text-yellow-600 leading-none"><%= draft_count %></p>
    </div>
    <div class="p-6 bg-brand-primary/5 border border-brand-primary/20 rounded-2xl">
      <p class="text-[10px] font-black uppercase tracking-widest text-brand-primary/70 mb-1">Awaiting Review</p>
      <div class="flex items-center justify-between">
        <p class="text-3xl font-black text-brand-primary leading-none"><%= pending_review %></p>
        <div class="w-2 h-2 rounded-full bg-brand-primary animate-pulse"></div>
      </div>
    </div>
    <div class="p-6 bg-green-500/5 border border-green-500/20 rounded-2xl">
      <p class="text-[10px] font-black uppercase tracking-widest text-green-600/70 mb-1">Total Finalized</p>
      <p class="text-3xl font-black text-green-600 leading-none"><%= @reports_by_status['reviewed']&.size || 0 %></p>
    </div>
  </div>
  <%# Grouped Report Tables %>
  <div class="space-y-12">
    <% if all_authored.any? %>
      <% ["draft", "submitted", "reviewed"].each do |status| %>
        <% if (reports = @reports_by_status[status]) %>
          <div class="space-y-4">
            <div class="flex items-center gap-3 px-2">
              <span class="text-[11px] font-black uppercase tracking-[0.3em] text-brand-secondary dark:text-white">
                <%= status %> Logs
              </span>
              <div class="h-[1px] flex-grow bg-brand-secondary/10"></div>
            </div>
            <%# Note: show_project is true here because these are from mixed projects %>
            <%= render "reports/reports_table", reports: reports, show_project: true %>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <div class="py-24 text-center border-2 border-dashed border-brand-secondary/10 rounded-3xl">
        <p class="text-[10px] font-black uppercase tracking-widest text-brand-secondary/20 italic">No historical intelligence data found for your profile.</p>
      </div>
    <% end %>
  </div>
</div>
<div class="overflow-x-auto bg-brand-white/30 dark:bg-brand-black/30 backdrop-blur-md border border-brand-secondary/20 rounded-2xl shadow-xl p-6">
    <% if reports.any? %>
    <table class="min-w-full text-sm text-left border-separate border-spacing-0">
        <%# Modular Header Call %>
        <%= render "reports/report_table_header", show_project: show_project %>
        <tbody class="divide-y divide-brand-secondary/10 dark:divide-brand-primary/10">
            <% reports.each_with_index do |report, index| %>
            <%= render "reports/report_row",
                     report: report,
                     show_project: show_project,
                     row_class: index.even? ? "bg-brand-secondary/5 dark:bg-brand-primary/5" : "" %>
            <% end %>
        </tbody>
    </table>
    <% else %>
    <div class="text-center py-12 border border-dashed border-brand-secondary/20 rounded-xl">
        <p class="text-lg font-black uppercase tracking-tighter text-brand-secondary dark:text-brand-primary text-opacity-50">Zero Intelligence Logs</p>
        <p class="text-[10px] text-brand-secondary/40 dark:text-white/20 mt-2 uppercase tracking-widest italic">Awaiting site field data synchronization.</p>
    </div>
    <% end %>
</div>
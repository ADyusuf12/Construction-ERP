<% content_for :title, "Amend Briefing | Hamzis Systems" %>
<div class="mb-8">
    <nav class="flex items-center gap-2 text-[10px] font-bold uppercase tracking-widest text-brand-secondary/50 dark:text-brand-primary/50 mb-2">
        <%= link_to "Intelligence Center", (@project ? project_reports_path(@project) : reports_path), class: "hover:text-brand-primary transition-colors" %>
        <svg xmlns="http://www.w3.org" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-brand-primary">Ammendment</span>
    </nav>
    <div class="flex items-center gap-3">
        <div class="p-3 rounded-2xl bg-brand-secondary text-white shadow-lg dark:bg-brand-primary/20 dark:text-brand-primary">
            <svg xmlns="http://www.w3.org" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
        </div>
        <div>
            <h1 class="text-3xl font-black tracking-tighter text-brand-secondary dark:text-brand-primary truncate max-w-md">
                Edit Report Entry
            </h1>
            <p class="text-sm text-brand-secondary/60 dark:text-brand-primary/60 italic">
                Ammending <%= @report.report_type.titleize %> from <%= @report.report_date.strftime("%B %d, %Y") %>
            </p>
        </div>
    </div>
</div>
<%= render "form", project: @project, report: @report %>
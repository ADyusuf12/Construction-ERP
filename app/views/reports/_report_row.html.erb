<tr id="<%= dom_id(report) %>" class="<%= row_class %> group hover:bg-white/40 dark:hover:bg-hamzis-black/40 transition-all duration-300">
  <!-- Date -->
  <td class="px-6 py-4 font-mono text-[11px] font-bold text-hamzis-brown dark:text-white">
    <%= report.report_date&.strftime("%d.%m.%Y") %>
  </td>
  <!-- Type -->
  <td class="px-6 py-4">
    <span class="text-[10px] font-black uppercase tracking-widest text-hamzis-brown/70 dark:text-hamzis-copper/70">
      <%= report.report_type.titleize %>
    </span>
  </td>
  <!-- Status LED -->
  <td class="px-6 py-4 text-center">
    <% status_style = case
       when report.status_draft? then 'text-yellow-500 bg-yellow-500/10 border-yellow-500/20'
       when report.status_submitted? then 'text-hamzis-copper bg-hamzis-copper/10 border-hamzis-copper/20'
       else 'text-green-500 bg-green-500/10 border-green-500/20'
       end
    %>
    <span class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded border text-[9px] font-black uppercase tracking-[0.15em] <%= status_style %>">
      <div class="w-1 h-1 rounded-full bg-current <%= 'animate-pulse' if report.status_submitted? %>"></div>
      <%= report.status.humanize %>
    </span>
  </td>
  <!-- Author -->
  <td class="px-6 py-4">
    <div class="text-[10px] font-bold text-hamzis-brown/80 dark:text-hamzis-copper uppercase tracking-tight">
      <%= report.user&.employee&.full_name || report.user&.email || "â€”" %>
    </div>
  </td>
  <!-- Project Site -->
  <% if show_project %>
    <td class="px-6 py-4">
      <%= link_to report.project.name, project_path(report.project),
          class: "text-[10px] font-black uppercase tracking-widest text-hamzis-copper hover:text-hamzis-brown transition" %>
    </td>
  <% end %>
  <!-- Summary -->
  <td class="px-6 py-4">
    <p class="text-xs text-hamzis-brown/90 dark:text-hamzis-copper/90 italic max-w-xs truncate">
      <%= report.progress_summary.present? ? report.progress_summary : "No notes recorded." %>
    </p>
  </td>
  <!-- Actions -->
  <td class="px-6 py-4">
    <div class="flex items-center justify-end gap-2 opacity-20 group-hover:opacity-100 transition-opacity">
      <% if policy(report).submit? %>
        <%= button_to submit_project_report_path(report.project, report), method: :patch, class: "p-2 rounded-lg bg-blue-600/10 text-blue-600 border border-blue-600/20 hover:bg-blue-600 hover:text-white transition shadow-sm", title: "Authorize Submission" do %>
          <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M5 13l4 4L19 7" /></svg>
        <% end %>
      <% end %>
      <% if policy(report).review? %>
        <%= button_to review_project_report_path(report.project, report), method: :patch, class: "p-2 rounded-lg bg-green-600/10 text-green-600 border border-green-600/20 hover:bg-green-600 hover:text-white transition shadow-sm", title: "Mark Reviewed" do %>
          <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
        <% end %>
      <% end %>
      <%= link_to project_report_path(report.project, report), class: "p-2 rounded-lg bg-hamzis-copper text-white hover:scale-110 transition shadow-lg" do %>
        <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
      <% end %>
    </div>
  </td>
</tr>

<% content_for :title, "Site Intelligence | Hamzis Systems" %>
<div class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4">
  <div>
    <h1 class="text-4xl font-black tracking-tighter text-hamzis-brown dark:text-hamzis-copper uppercase">
      <% if @project %>
        Site Logs: <%= @project.name %>
      <% else %>
        Intelligence Network
      <% end %>
    </h1>
    <p class="text-sm text-hamzis-brown/60 dark:text-hamzis-copper/60 italic">Architectural documentation and field report aggregation.</p>
  </div>
  <% report_path = @project ? new_project_report_path(@project) : new_report_path %>
  <%= link_to report_path, class: "flex items-center gap-2 px-6 py-3 rounded-xl bg-hamzis-copper text-white font-black uppercase tracking-widest text-[11px] shadow-lg hover:bg-white hover:text-hamzis-brown transition-all duration-500 shadow-hamzis-copper/20" do %>
    <svg xmlns="http://www.w3.org" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M12 4v16m8-8H4" /></svg>
    Generate Report
  <% end %>
</div>
<%= render "reports/dashboard_summary", reports: @reports %>
<%= render "reports/reports_table", reports: @reports, show_project: !@project %>

<div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 shadow rounded-xl p-6">
  <% if @reports.present? %>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @reports.each do |report| %>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow p-4 flex flex-col justify-between">
          <!-- Report Header -->
          <div>
            <h3 class="text-md font-bold text-hamzis-brown dark:text-hamzis-copper">
              <%= report.report_type.to_s.capitalize %> Report
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
              Date: <%= report.report_date.strftime("%b %d, %Y") %>
            </p>
          </div>
          <!-- Status Badge -->
          <div class="mt-4">
            <% case report.status %>
            <% when "submitted" %>
              <span class="px-3 py-1 text-xs rounded-full bg-blue-600 text-white font-semibold">
                Submitted
              </span>
            <% when "review" %>
              <span class="px-3 py-1 text-xs rounded-full bg-yellow-500 text-white font-semibold">
                In Review
              </span>
            <% when "approved" %>
              <span class="px-3 py-1 text-xs rounded-full bg-green-600 text-white font-semibold">
                Approved
              </span>
            <% else %>
              <span class="px-3 py-1 text-xs rounded-full bg-gray-400 text-white font-semibold">
                Draft
              </span>
            <% end %>
          </div>
          <!-- Actions -->
          <div class="mt-4 flex justify-end space-x-2">
            <%= link_to "View", project_report_path(report.project, report),
              class: "px-3 py-1 text-xs rounded bg-hamzis-brown text-white hover:bg-hamzis-copper transition" %>
            <% if policy(report).edit? %>
              <%= link_to "Edit", edit_project_report_path(report.project, report),
                class: "px-3 py-1 text-xs rounded bg-hamzis-copper text-white hover:bg-hamzis-black transition" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-sm text-gray-500 dark:text-gray-400">
      No reports available.
    </p>
  <% end %>
</div>

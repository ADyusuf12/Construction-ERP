<% if policy_scope(ProjectExpense).any? %>
  <div id="expenses-tab" class="tab-content hidden animate-fade-in">
    <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md border border-hamzis-brown/20 rounded-2xl shadow-xl p-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-black text-hamzis-brown dark:text-hamzis-copper uppercase tracking-tight">Recent Expenses</h2>
        <span class="text-[10px] font-bold uppercase tracking-[0.2em] text-hamzis-brown/40 dark:text-hamzis-copper/40">
          Operational Outflow
        </span>
      </div>
      <% if @expenses.any? %>
        <div class="overflow-x-auto custom-scrollbar">
          <table class="min-w-full border-separate border-spacing-0 text-left">
            <thead>
              <tr class="bg-hamzis-brown/90 dark:bg-hamzis-copper/10">
                <% ["Description", "Amount", "Filing Date", "Site Context"].each do |head| %>
                  <th class="px-4 py-3 text-[9px] font-black uppercase tracking-[0.2em] text-hamzis-copper border-b border-hamzis-copper/10 text-left">
                    <%= head %>
                  </th>
                <% end %>
              </tr>
            </thead>
            <tbody class="divide-y divide-hamzis-brown/10 dark:divide-hamzis-copper/10">
              <% @expenses.each do |expense| %>
                <tr id="dash_<%= dom_id(expense) %>" class="group hover:bg-white/40 dark:hover:bg-hamzis-copper/5 transition-all duration-300">
                  <td class="px-4 py-4">
                    <div class="text-xs font-black text-hamzis-brown dark:text-hamzis-textDark uppercase tracking-tight truncate max-w-[200px]">
                      <%= expense.description %>
                    </div>
                  </td>
                  <td class="px-4 py-4">
                    <div class="text-xs font-black text-hamzis-brown dark:text-white font-mono">
                      <%= number_to_currency(expense.amount, unit: "â‚¦", precision: 0) %>
                    </div>
                  </td>
                  <td class="px-4 py-4">
                    <div class="text-[10px] font-mono text-hamzis-brown/80 dark:text-hamzis-copper/80">
                      <%= expense.date.strftime("%d.%m.%y") %>
                    </div>
                  </td>
                  <td class="px-4 py-4">
                    <div class="flex items-center gap-2">
                      <div class="w-1 h-3 bg-red-500/30 rounded-full"></div>
                      <div class="text-[10px] font-bold text-hamzis-brown/60 dark:text-hamzis-textDark/60 uppercase truncate max-w-[160px]">
                        <%= expense.project&.name || "UNASSIGNED" %>
                      </div>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="py-12 text-center border-2 border-dashed border-hamzis-brown/10 rounded-xl">
          <p class="text-[10px] font-bold uppercase tracking-widest text-hamzis-brown/40 dark:text-hamzis-copper/40">No expenses logged in this period</p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

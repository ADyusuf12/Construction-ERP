<% if policy_scope(ProjectExpense).any? %>
  <div id="expenses-tab" class="tab-content hidden">
    <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
                border border-hamzis-brown/20 rounded-xl shadow-lg p-6">
      <h2 class="text-xl font-bold mb-4 text-hamzis-brown dark:text-hamzis-copper">Recent Expenses</h2>
      <% if @expenses.any? %>
        <table class="min-w-full text-sm text-left border-collapse">
          <thead>
            <tr class="bg-hamzis-brown/10 dark:bg-hamzis-copper/10 text-hamzis-brown dark:text-hamzis-copper uppercase text-xs tracking-wide">
              <th class="px-4 py-3">Description</th>
              <th class="px-4 py-3">Amount</th>
              <th class="px-4 py-3">Date</th>
              <th class="px-4 py-3">Project</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-hamzis-brown/20">
            <% @expenses.each_with_index do |expense, index| %>
              <tr id="<%= dom_id(expense) %>" class="<%= index.even? ? 'bg-hamzis-brown/5 dark:bg-hamzis-copper/5' : '' %> hover:bg-hamzis-white/40 dark:hover:bg-hamzis-black/40 transition">
                <td class="px-4 py-3 font-semibold"><%= expense.description %></td>
                <td class="px-4 py-3"><%= number_to_currency(expense.amount, unit: "â‚¦", precision: 0) %></td>
                <td class="px-4 py-3"><%= expense.date.strftime("%b %d, %Y") %></td>
                <td class="px-4 py-3"><%= expense.project&.name || "N/A" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-center py-6 text-sm text-hamzis-brown dark:text-hamzis-copper">No expenses available</p>
      <% end %>
    </div>
  </div>
<% end %>

<% if policy_scope(Report).any? %>
  <div id="reports-tab" class="tab-content hidden">
    <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
                border border-hamzis-brown/20 rounded-xl shadow-lg p-6">
      <h2 class="text-xl font-bold mb-4 text-hamzis-brown dark:text-hamzis-copper">Recent Reports</h2>
      <% if @reports.any? %>
        <table class="min-w-full text-sm text-left border-collapse">
          <thead>
            <tr class="bg-hamzis-brown/10 dark:bg-hamzis-copper/10 text-hamzis-brown dark:text-hamzis-copper uppercase text-xs tracking-wide">
              <th class="px-4 py-3">Type</th>
              <th class="px-4 py-3">Status</th>
              <th class="px-4 py-3">Date</th>
              <th class="px-4 py-3">Project</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-hamzis-brown/20">
            <% @reports.each_with_index do |report, index| %>
              <tr id="<%= dom_id(report) %>" class="<%= index.even? ? 'bg-hamzis-brown/5 dark:bg-hamzis-copper/5' : '' %> hover:bg-hamzis-white/40 dark:hover:bg-hamzis-black/40 transition">
                <td class="px-4 py-3"><%= report.report_type.humanize %></td>
                <td class="px-4 py-3"><%= report.status.humanize %></td>
                <td class="px-4 py-3"><%= report.report_date.strftime("%b %d, %Y") %></td>
                <td class="px-4 py-3"><%= report.project.name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-center py-6 text-sm text-hamzis-brown dark:text-hamzis-copper">No reports available</p>
      <% end %>
    </div>
  </div>
<% end %>

<div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 shadow rounded-xl p-6">
  <% if @tasks.present? %>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @tasks.each do |task| %>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow p-4 flex flex-col justify-between">
          <!-- Task Header -->
          <div>
            <h3 class="text-md font-bold text-hamzis-brown dark:text-hamzis-copper">
              <%= task.title %>
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
              Due: <%= task.due_date ? task.due_date.strftime("%b %d, %Y") : "N/A" %>
            </p>
          </div>
          <!-- Status Badge -->
          <div class="mt-4 flex items-center justify-between">
            <span class="text-xs text-gray-500 dark:text-gray-400">
              Status: <%= task.status.to_s.humanize %>
            </span>
            <% case task.status %>
            <% when "in_progress" %>
              <span class="px-3 py-1 text-xs rounded-full bg-hamzis-copper text-white font-semibold">
                In Progress
              </span>
            <% when "done" %>
              <span class="px-3 py-1 text-xs rounded-full bg-green-600 text-white font-semibold">
                Done
              </span>
            <% else %>
              <span class="px-3 py-1 text-xs rounded-full bg-gray-400 text-white font-semibold">
                Pending
              </span>
            <% end %>
          </div>
          <!-- Actions -->
          <div class="mt-4 flex justify-end space-x-2">
            <%= link_to "View", project_task_path(task.project, task),
              class: "px-3 py-1 text-xs rounded bg-hamzis-brown text-white hover:bg-hamzis-copper transition" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-sm text-gray-500 dark:text-gray-400">
      No tasks available.
    </p>
  <% end %>
</div>

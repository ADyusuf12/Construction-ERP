<div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 shadow rounded-xl p-6">
  <% if @projects.present? %>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @projects.each do |project| %>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow p-4 flex flex-col justify-between">
          <!-- Project Header -->
          <div>
            <h3 class="text-md font-bold text-hamzis-brown dark:text-hamzis-copper">
              <%= project.name %>
            </h3>
            <% if project.deadline.present? %>
              <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                Deadline: <%= project.deadline.strftime("%b %d, %Y") %>
              </p>
            <% end %>
          </div>
          <!-- Progress Bar -->
          <div class="mt-4">
            <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">
              Progress: <%= project.progress || 0 %>%
            </p>
            <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
              <div class="bg-hamzis-copper h-2 rounded-full"
                   style="width: <%= project.progress || 0 %>%"></div>
            </div>
          </div>
          <!-- Actions -->
          <div class="mt-4 flex justify-end space-x-2">
            <%= link_to "View", project_path(project),
              class: "px-3 py-1 text-xs rounded bg-hamzis-brown text-white hover:bg-hamzis-copper transition" %>
            <% if policy(project).edit? %>
              <%= link_to "Edit", edit_project_path(project),
                class: "px-3 py-1 text-xs rounded bg-hamzis-copper text-white hover:bg-hamzis-black transition" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-sm text-gray-500 dark:text-gray-400">
      No projects available.
    </p>
  <% end %>
</div>

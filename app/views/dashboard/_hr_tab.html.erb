<%# app/views/dashboard/_hr_tab.html.erb %>
<div class="space-y-6">
  <%# Optional Section Header to distinguish it as a Dashboard Preview %>
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-xl font-black text-brand-secondary dark:text-brand-primary uppercase tracking-tight">
      <%= (current_user.role_ceo? || current_user.role_admin?) ? "Personnel Request Queue" : "My Leave Registry" %>
    </h2>
    <div class="flex items-center gap-2">
      <span class="h-2 w-2 rounded-full bg-brand-primary animate-pulse"></span>
      <span class="text-[10px] font-bold uppercase tracking-widest text-brand-secondary/40">Live Sync Active</span>
    </div>
  </div>
  <%# REUSING YOUR CORE HR PARTIAL %>
  <%= render "hr/leaves/leave_table",
             leaves: @leaves,
             show_employee: (current_user.role_ceo? || current_user.role_admin? || current_user.role_hr?) %>
</div>
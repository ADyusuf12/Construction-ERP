<header class="flex items-center justify-between mb-8 relative z-50">
  <div>
    <div class="flex items-center gap-2 mb-1">
      <span class="relative flex h-2 w-2">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
        <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
      </span>
      <h1 class="text-3xl font-black tracking-tight text-brand-secondary dark:text-brand-primary uppercase">
        Dashboard
      </h1>
    </div>
    <p class="text-[10px] font-bold uppercase tracking-[0.2em] text-brand-secondary/40 dark:text-brand-primary/40">
      Operational Oversight: <%= current_user.role.humanize %> Mode
    </p>
  </div>
  <div class="flex items-center gap-4">
    <% if current_user.role_ceo? && @pending_leaves_count > 0 %>
      <div class="hidden md:flex flex-col items-end mr-2">
        <span class="text-[9px] font-black uppercase text-red-500 tracking-widest">Pending Action</span>
        <span class="text-xs font-bold text-brand-secondary dark:text-white"><%= @pending_leaves_count %> Leave Requests</span>
      </div>
    <% end %>
    <div class="relative">
      <button id="user-menu-button" class="w-11 h-11 rounded-xl bg-brand-primary text-white flex items-center justify-center font-black text-sm tracking-tighter
                     shadow-lg hover:bg-brand-black transition-all duration-300 cursor-pointer active:scale-95 border border-brand-secondary/10">
        <%= current_user.full_name.to_s.split.map { |n| n[0] }.join.upcase.presence || "U" %>
      </button>
      <div id="user-menu" class="hidden absolute right-0 mt-3 w-52 bg-white dark:bg-brand-black border border-brand-secondary/20 rounded-2xl shadow-2xl overflow-hidden z-50">
        <div class="px-4 py-3 bg-brand-secondary/5 border-b border-brand-secondary/10">
          <p class="text-[10px] font-black uppercase tracking-widest text-brand-secondary/40 dark:text-brand-primary/40">Authorized User</p>
          <p class="text-xs font-bold text-brand-secondary dark:text-white truncate"><%= current_user.full_name %></p>
        </div>
        <ul class="py-1">
          <% if current_user.employee %>
            <li>
              <%= link_to hr_employee_path(current_user.employee),
                    class: "flex items-center gap-3 px-4 py-3 text-[11px] font-bold uppercase tracking-wider text-gray-700 dark:text-gray-300 hover:bg-brand-secondary/10 transition" do %>
                <svg class="w-4 h-4 text-brand-primary" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span>My Profile</span>
              <% end %>
            </li>
          <% end %>
          <li class="border-t border-brand-secondary/5">
            <%= button_to destroy_user_session_path, method: :delete,
                  class: "flex items-center gap-3 w-full text-left px-4 py-3 text-[11px] font-bold uppercase tracking-wider text-red-600 hover:bg-red-50 dark:hover:bg-red-900/10 transition" do %>
              <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              <span>Logout Session</span>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>
<script nonce="<%= content_security_policy_nonce %>">
  (() => {
      const button = document.getElementById("user-menu-button");
      const menu = document.getElementById("user-menu");

      button.addEventListener("click", (e) => {
          e.stopPropagation();
          menu.classList.toggle("hidden");
      });

      document.addEventListener("click", (e) => {
          if (!menu.contains(e.target) && !button.contains(e.target)) {
              menu.classList.add("hidden");
          }
      });
  })();
</script>
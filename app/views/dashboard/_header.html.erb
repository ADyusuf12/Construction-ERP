<%# app/views/dashboard/_header.html.erb %>
<header class="flex items-center justify-between mb-8 relative z-50">
  <div>
    <div class="flex items-center gap-2 mb-1">
      <span class="relative flex h-2 w-2">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
        <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
      </span>
      <h1 class="text-3xl font-black tracking-tight text-brand-secondary dark:text-brand-primary uppercase">
        Dashboard
      </h1>
    </div>
    <p class="text-[10px] font-bold uppercase tracking-[0.2em] text-brand-secondary/40 dark:text-brand-primary/40">
      Operational Oversight: <%= current_user.role.humanize %> Mode
    </p>
  </div>
  <div class="flex items-center gap-4">
    <%# --- Real-time Notification Stream --- %>
    <%= turbo_stream_from "notifications_#{current_user.id}" %>
    <%# --- Pending Action (CEO Logic) --- %>
    <% if current_user.role_ceo? && @pending_leaves_count.to_i > 0 %>
      <div class="hidden md:flex flex-col items-end mr-2">
        <span class="text-[9px] font-black uppercase text-red-500 tracking-widest">Pending Action</span>
        <span class="text-xs font-bold text-brand-secondary dark:text-white"><%= @pending_leaves_count %> Leave Requests</span>
      </div>
    <% end %>
    <%# --- Notification Bell --- %>
    <div class="relative">
      <button id="notification-button" class="w-11 h-11 rounded-xl bg-white dark:bg-brand-black flex items-center justify-center border border-brand-secondary/10 shadow-lg hover:border-brand-primary transition-all duration-300 active:scale-95 group">
        <svg class="w-5 h-5 text-brand-secondary/60 dark:text-brand-primary/60 group-hover:text-brand-primary transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
        </svg>
        <%# This div is the target for Turbo Stream updates %>
        <div id="notifications_count">
          <%= render "dashboard/notifications/unread_dot" %>
        </div>
      </button>
      <%# Notification Dropdown Menu %>
      <div id="notifications-menu" class="hidden absolute right-0 mt-3 w-80 bg-white dark:bg-brand-black border border-brand-secondary/20 rounded-2xl shadow-2xl overflow-hidden z-[60]">
        <div class="px-4 py-3 bg-brand-secondary/5 border-b border-brand-secondary/10 flex justify-between items-center">
          <p class="text-[10px] font-black uppercase tracking-widest text-brand-secondary/40 dark:text-brand-primary/40">Notifications Feed</p>
          <%= button_to mark_all_as_read_notifications_path,
                       method: :post,
                       class: "text-[9px] font-bold text-brand-primary uppercase hover:underline",
                       data: { turbo_frame: "_top" } do %>
            Mark all read
          <% end %>
        </div>
        <div id="notifications_list" class="max-h-[400px] overflow-y-auto">
          <% if current_user.notifications.any? %>
            <%= render partial: "dashboard/notifications/notification", collection: current_user.notifications.recent, as: :notification %>
            <%# "View All" Link - Production Ready Hook %>
            <div class="sticky bottom-0 bg-white dark:bg-brand-black border-t border-brand-secondary/10">
              <%= link_to notifications_path,
            data: { turbo_frame: "modal_content" },
            onclick: "document.getElementById('modal').classList.remove('hidden')",
            class: "block py-3 text-[9px] font-black uppercase text-center text-brand-secondary/40 hover:text-brand-primary transition-colors tracking-widest" do %>
                View Full History
              <% end %>
            </div>
          <% else %>
            <%= render "dashboard/notifications/empty_state" %>
          <% end %>
        </div>
      </div>
    </div>
    <%# --- User Profile Menu --- %>
    <div class="relative">
      <button id="user-menu-button" class="w-11 h-11 rounded-xl bg-brand-primary text-white flex items-center justify-center font-black text-sm tracking-tighter shadow-lg hover:bg-brand-black transition-all duration-300 cursor-pointer active:scale-95 border border-brand-secondary/10">
        <%= current_user.full_name.to_s.split.map { |n| n[0] }.join.upcase.presence || "U" %>
      </button>
      <div id="user-menu" class="hidden absolute right-0 mt-3 w-52 bg-white dark:bg-brand-black border border-brand-secondary/20 rounded-2xl shadow-2xl overflow-hidden z-50">
        <div class="px-4 py-3 bg-brand-secondary/5 border-b border-brand-secondary/10">
          <p class="text-[10px] font-black uppercase tracking-widest text-brand-secondary/40 dark:text-brand-primary/40">Authorized User</p>
          <p class="text-xs font-bold text-brand-secondary dark:text-white truncate"><%= current_user.full_name %></p>
        </div>
        <ul class="py-1">
          <% if current_user.employee %>
            <li>
              <%= link_to hr_employee_path(current_user.employee), class: "flex items-center gap-3 px-4 py-3 text-[11px] font-bold uppercase tracking-wider text-gray-700 dark:text-gray-300 hover:bg-brand-secondary/10 transition" do %>
                <svg class="w-4 h-4 text-brand-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                <span>My Profile</span>
              <% end %>
            </li>
          <% end %>
          <li class="border-t border-brand-secondary/5">
            <%= button_to destroy_user_session_path, method: :delete, class: "flex items-center gap-3 w-full text-left px-4 py-3 text-[11px] font-bold uppercase tracking-wider text-red-600 hover:bg-red-50 dark:hover:bg-red-900/10 transition" do %>
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" /></svg>
              <span>Logout Session</span>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>
<script nonce="<%= content_security_policy_nonce %>">
  (() => {
    const userBtn = document.getElementById("user-menu-button");
    const userMenu = document.getElementById("user-menu");
    const notifBtn = document.getElementById("notification-button");
    const notifMenu = document.getElementById("notifications-menu");
    const notifList = document.getElementById("notifications_list");

    userBtn.addEventListener("click", (e) => {
        e.stopPropagation();
        userMenu.classList.toggle("hidden");
        notifMenu.classList.add("hidden");
    });

    notifBtn.addEventListener("click", (e) => {
        e.stopPropagation();
        notifMenu.classList.toggle("hidden");
        userMenu.classList.add("hidden");
    });

    // Close menu when a notification is clicked
    if (notifList) {
      notifList.addEventListener("click", (e) => {
        if (e.target.closest('a')) {
          notifMenu.classList.add("hidden");
        }
      });
    }

    document.addEventListener("click", (e) => {
        if (!userMenu.contains(e.target) && !userBtn.contains(e.target)) userMenu.classList.add("hidden");
        if (!notifMenu.contains(e.target) && !notifBtn.contains(e.target)) notifMenu.classList.add("hidden");
    });
  })();
</script>
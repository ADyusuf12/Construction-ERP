<div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 shadow rounded-xl p-6">
  <% if expenses.present? %>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% expenses.each do |expense| %>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow p-4 flex flex-col justify-between">
          <!-- Expense Header -->
          <div>
            <h3 class="text-md font-bold text-hamzis-brown dark:text-hamzis-copper">
              <%= expense.description %>
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
              Date: <%= expense.date.strftime("%b %d, %Y") %>
            </p>
            <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
              Project: <%= expense.project.name %>
            </p>
          </div>
          <!-- Amount -->
          <div class="mt-4 flex items-center justify-between">
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
              <%= number_to_currency(expense.amount, unit: "â‚¦") %>
            </span>
          </div>
          <!-- Actions -->
          <div class="mt-4 flex justify-end space-x-2">
            <%= link_to "View", project_project_expense_path(expense.project, expense),
              class: "px-3 py-1 text-xs rounded bg-hamzis-brown text-white hover:bg-hamzis-copper transition" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-sm text-gray-500 dark:text-gray-400">
      No expenses available.
    </p>
  <% end %>
</div>

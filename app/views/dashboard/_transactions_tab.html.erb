<%# app/views/dashboard/_transactions_tab.html.erb %>
<% if policy_scope(Accounting::Transaction).any? %>
  <div class="space-y-6">
    <div class="flex items-center justify-between mb-4">
      <div>
        <h2 class="text-xl font-black text-brand-secondary dark:text-brand-primary uppercase tracking-tight">Recent Ledger</h2>
        <p class="text-[9px] font-bold uppercase tracking-widest text-brand-secondary/40">Financial Audit & Reconciliation Protocol</p>
      </div>
      <div class="flex items-center gap-4">
        <div class="flex flex-col items-end">
          <span class="text-[8px] font-black uppercase tracking-[0.2em] text-brand-secondary/40 dark:text-brand-primary/40">Settlement Accuracy</span>
          <span class="text-xs font-mono font-black text-brand-primary">100.00%</span>
        </div>
      </div>
    </div>
    <div class="overflow-hidden bg-brand-white/30 dark:bg-brand-black/30 backdrop-blur-md border border-brand-secondary/20 rounded-2xl shadow-2xl">
      <% if transactions.any? %>
        <div class="overflow-x-auto custom-scrollbar">
          <table class="min-w-full text-left border-separate border-spacing-0">
            <%# Reusing your Modular Accounting Header %>
            <%= render "accounting/transactions/transactions_table_header" %>
            <tbody class="divide-y divide-brand-secondary/10 dark:divide-brand-primary/10">
              <% transactions.each_with_index do |t, index| %>
                <%# Reusing your rich Transaction Row with 'Mark Paid' logic %>
                <%= render "accounting/transactions/transaction_row",
                           transaction: t,
                           row_class: index.even? ? "bg-brand-secondary/5 dark:bg-brand-primary/5" : "" %>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-20 bg-black/5 rounded-xl border-2 border-dashed border-brand-secondary/10">
          <h3 class="text-xl font-black text-brand-secondary dark:text-brand-primary uppercase tracking-tighter italic opacity-50">Zero Financial Movements</h3>
          <p class="text-[10px] text-white/30 mt-2 uppercase tracking-widest italic">Awaiting transaction entry protocol.</p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
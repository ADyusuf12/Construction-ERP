<%# app/views/dashboard/_tasks_tab.html.erb %>
<div class="space-y-6">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h2 class="text-xl font-black text-brand-secondary dark:text-brand-primary uppercase tracking-tight">Operational Directives</h2>
      <p class="text-[9px] font-bold uppercase tracking-widest text-brand-secondary/40">Real-time Task Progress Across Sites</p>
    </div>
    <div class="flex items-center gap-4">
      <div class="flex items-center gap-1.5">
        <span class="h-2 w-2 rounded-full bg-blue-500 animate-pulse"></span>
        <span class="text-[10px] font-bold uppercase tracking-widest text-brand-secondary/40">Active Phase</span>
      </div>
    </div>
  </div>
  <div class="overflow-hidden bg-brand-white/30 dark:bg-brand-black/30 backdrop-blur-md border border-brand-secondary/20 rounded-2xl shadow-2xl">
    <% if tasks.any? %>
      <div class="overflow-x-auto custom-scrollbar">
        <table class="min-w-full text-left border-separate border-spacing-0">
          <%# Reusing your existing Header Partial %>
          <%= render "tasks/task_table_header", show_project: true %>
          <tbody class="divide-y divide-brand-secondary/10 dark:divide-brand-primary/10">
            <% tasks.each_with_index do |task, index| %>
              <%# Reusing your existing Row Partial %>
              <%= render "tasks/task_row",
                         task: task,
                         show_project: true,
                         row_class: index.even? ? "bg-brand-secondary/5 dark:bg-brand-primary/5" : "" %>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-20 bg-black/5">
        <h3 class="text-xl font-black text-brand-secondary dark:text-brand-primary uppercase tracking-tighter italic opacity-50">Operational Queue Empty</h3>
        <p class="text-[10px] text-white/30 mt-2 uppercase tracking-widest italic">No active directives found in the system registry.</p>
      </div>
    <% end %>
  </div>
</div>
<%# app/views/dashboard/_profile_tab.html.erb %>
<%# REMOVED THE OUTER DIV WITH ID="PROFILE-TAB" %>
<div class="bg-brand-white/30 dark:bg-brand-black/30 backdrop-blur-md border border-brand-secondary/20 rounded-2xl shadow-xl p-8">
  <div class="flex items-center gap-3 mb-8 pb-4 border-b border-brand-secondary/10">
    <div class="p-2.5 rounded-xl bg-brand-primary/10 text-brand-primary">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
    </div>
    <h2 class="text-xl font-black text-brand-secondary dark:text-brand-primary uppercase tracking-tight">Personnel Profile</h2>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="bg-white/40 dark:bg-black/20 border border-brand-secondary/10 rounded-2xl p-6 shadow-sm">
      <h4 class="text-[10px] font-black uppercase tracking-[0.2em] text-brand-secondary/40 dark:text-brand-primary/40 mb-4">Account Credentials</h4>
      <div class="space-y-4">
        <div>
          <p class="text-[9px] font-bold uppercase tracking-widest text-brand-primary mb-1">Email Address</p>
          <p class="text-sm font-bold text-brand-secondary dark:text-white"><%= current_user.email %></p>
        </div>
        <div>
          <p class="text-[9px] font-bold uppercase tracking-widest text-brand-primary mb-1">System Role</p>
          <span class="inline-flex px-2 py-0.5 rounded bg-brand-secondary/10 text-brand-secondary dark:text-brand-primary text-[10px] font-black uppercase tracking-tighter">
            <%= current_user.role.upcase %>
          </span>
        </div>
      </div>
    </div>
    <% if @employee %>
      <div class="bg-white/40 dark:bg-black/20 border border-brand-secondary/10 rounded-2xl p-6 shadow-sm">
        <h4 class="text-[10px] font-black uppercase tracking-[0.2em] text-brand-secondary/40 dark:text-brand-primary/40 mb-4">HR Records</h4>
        <div class="grid grid-cols-2 gap-y-4 gap-x-2">
          <div>
            <p class="text-[9px] font-bold uppercase tracking-widest text-brand-primary mb-1">Name</p>
            <p class="text-sm font-black text-brand-secondary dark:text-white font-mono"><%= @employee.full_name %></p>
          </div>
          <div>
            <p class="text-[9px] font-bold uppercase tracking-widest text-brand-primary mb-1">Staff ID</p>
            <p class="text-sm font-black text-brand-secondary dark:text-white font-mono"><%= @employee.staff_id %></p>
          </div>
          <div>
            <p class="text-[9px] font-bold uppercase tracking-widest text-brand-primary mb-1">Department</p>
            <p class="text-sm font-bold text-brand-secondary dark:text-white"><%= @employee.department || "N/A" %></p>
          </div>
          <div class="col-span-2">
            <p class="text-[9px] font-bold uppercase tracking-widest text-brand-primary mb-1">Designation</p>
            <p class="text-sm font-bold text-brand-secondary dark:text-white uppercase tracking-tight"><%= @employee.position_title || "N/A" %></p>
          </div>
          <div>
            <p class="text-[9px] font-bold uppercase tracking-widest text-brand-primary mb-1">Leave Balance</p>
            <p class="text-sm font-bold text-brand-secondary dark:text-white"><%= @employee.leave_balance %> <span class="text-[10px] opacity-60">Days Left</span></p>
          </div>
          <div>
            <p class="text-[9px] font-bold uppercase tracking-widest text-brand-primary mb-1">Performance</p>
            <p class="text-sm font-bold text-brand-secondary dark:text-white"><%= @employee.performance_score || "N/A" %></p>
          </div>
        </div>
      </div>
    <% else %>
      <div class="flex flex-col items-center justify-center p-8 border-2 border-dashed border-brand-secondary/10 rounded-2xl bg-brand-secondary/5">
        <p class="text-[10px] font-bold uppercase tracking-widest text-brand-secondary/40 dark:text-brand-primary/40">No HR record linked to your account</p>
      </div>
    <% end %>
  </div>
</div>
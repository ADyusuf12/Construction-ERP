<div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 shadow rounded-xl p-6">
  <h2 class="text-lg font-semibold text-hamzis-brown dark:text-hamzis-copper mb-4">
    My Leave History
  </h2>
  <% if @leaves.any? %>
    <ul class="divide-y divide-gray-200 dark:divide-gray-700">
      <% @leaves.each do |leave| %>
        <li class="py-3 flex items-center justify-between">
          <div>
            <p class="font-medium text-hamzis-brown dark:text-hamzis-copper">
              <%= leave.start_date.strftime("%b %d") %> â€“ <%= leave.end_date.strftime("%b %d") %>
            </p>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Requested on <%= leave.created_at.strftime("%b %d, %Y") %>
            </p>
          </div>
          <% case leave.status %>
          <% when "pending" %>
            <span class="px-3 py-1 text-xs rounded-full bg-yellow-500 text-white font-semibold">
              Pending
            </span>
          <% when "approved" %>
            <span class="px-3 py-1 text-xs rounded-full bg-green-600 text-white font-semibold">
              Approved
            </span>
          <% when "rejected" %>
            <span class="px-3 py-1 text-xs rounded-full bg-red-600 text-white font-semibold">
              Rejected
            </span>
          <% when "cancelled" %>
            <span class="px-3 py-1 text-xs rounded-full bg-gray-400 text-white font-semibold">
              Cancelled
            </span>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-sm text-gray-500 dark:text-gray-400">
      You have no leave history.
    </p>
  <% end %>
</div>

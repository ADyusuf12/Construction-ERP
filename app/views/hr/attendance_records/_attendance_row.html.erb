<tr id="<%= dom_id(record) %>" class="<%= row_class %> group hover:bg-white/40 dark:hover:bg-hamzis-black/40 transition-all duration-300">
  <% if local_assigns[:show_employee] %>
    <td class="px-6 py-4">
      <span class="text-sm font-black text-hamzis-brown dark:text-white uppercase tracking-tight">
        <%= record.employee.full_name %>
      </span>
    </td>
  <% end %>
  <td class="px-6 py-4">
    <%= link_to record.project.name, project_path(record.project),
        class: "text-[10px] font-bold uppercase tracking-widest text-hamzis-copper hover:text-hamzis-brown transition" %>
  </td>
  <td class="px-6 py-4">
    <span class="text-[11px] font-mono font-bold text-hamzis-brown/50 dark:text-hamzis-copper/60">
      <%= record.date.strftime("%d.%m.%Y") %>
    </span>
  </td>
  <td class="px-6 py-4">
    <% status_style = case
       when record.status_present? then 'text-green-500 bg-green-500/10 border-green-500/20'
       when record.status_absent? then 'text-red-500 bg-red-500/10 border-red-500/20'
       when record.status_late? then 'text-yellow-500 bg-yellow-500/10 border-yellow-500/20'
       when record.status_on_leave? then 'text-blue-500 bg-blue-500/10 border-blue-500/20'
       else 'text-gray-500 bg-gray-500/10 border-gray-500/20'
       end
    %>
    <span class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded border text-[9px] font-black uppercase tracking-[0.15em] <%= status_style %>">
      <div class="w-1 h-1 rounded-full bg-current <%= 'animate-pulse' if record.status_present? %>"></div>
      <%= record.status.humanize %>
    </span>
  </td>
  <td class="px-6 py-4 text-center border-r border-hamzis-brown/5">
    <span class="text-xs font-mono font-bold text-hamzis-brown dark:text-hamzis-copper">
      <%= record.check_in_time&.strftime("%H:%M") || "—" %>
    </span>
  </td>
  <td class="px-6 py-4 text-center">
    <span class="text-xs font-mono font-bold text-hamzis-brown dark:text-hamzis-copper">
      <%= record.check_out_time&.strftime("%H:%M") || "—" %>
    </span>
  </td>
  <% if local_assigns[:show_actions] %>
    <td class="px-6 py-4">
      <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
        <%= link_to hr_attendance_record_path(record), class: "p-2 rounded-lg bg-hamzis-copper text-white hover:scale-110 transition shadow-lg", title: "View Record" do %>
          <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
        <% end %>
        <%= link_to edit_hr_attendance_record_path(record), class: "p-2 rounded-lg bg-hamzis-brown text-white hover:scale-110 transition shadow-lg", title: "Adjust Entry" do %>
          <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
        <% end %>
        <%= button_to hr_attendance_record_path(record), method: :delete, form: { data: { turbo_confirm: "Delete Presence Log?" } }, class: "p-2 rounded-lg bg-red-600/10 text-red-600 border border-red-600/20 hover:bg-red-600 hover:text-white transition shadow-sm", title: "Purge Record" do %>
          <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
        <% end %>
      </div>
    </td>
  <% end %>
</tr>

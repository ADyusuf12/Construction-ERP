<%= form_with(model: @attendance_record, local: true, class: "space-y-6 hr-form") do |f| %>
<%# Enhanced Red Error Block %>
<% if @attendance_record.errors.any? %>
<div class="p-4 mb-6 rounded-2xl bg-red-500/10 border border-red-500/30 text-red-600 dark:text-red-400 backdrop-blur-md">
    <div class="flex items-center gap-2 mb-2">
        <svg xmlns="http://www.w3.org" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        <h3 class="font-bold uppercase tracking-widest text-xs">Entry Blocked</h3>
    </div>
    <ul class="list-disc ml-6 text-xs space-y-1 opacity-90">
        <% @attendance_record.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- LEFT: Assignment Details -->
    <div class="lg:col-span-2 space-y-6">
        <div class="bg-brand-white/30 dark:bg-brand-black/30 border border-brand-secondary/20 rounded-2xl p-6 shadow-xl backdrop-blur-sm">
            <div class="flex items-center gap-2 mb-6">
                <div class="p-2 rounded-lg bg-brand-primary/10 text-brand-primary">
                    <svg xmlns="http://www.w3.org" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                </div>
                <h4 class="text-sm font-black uppercase tracking-widest text-brand-secondary dark:text-brand-primary">Deployment Context</h4>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                    <%= f.label :employee_id, "Employee Name", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
                    <%= f.collection_select :employee_id, Hr::Employee.all, :id, :full_name, { prompt: "Assign Employee..." },
                  class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary outline-none transition" %>
                </div>
                <div>
                    <%= f.label :project_id, "Project Site", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
                    <%= f.collection_select :project_id, Project.all, :id, :name, { prompt: "Select Site..." },
                  class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary outline-none transition" %>
                </div>
            </div>
            <div class="mt-6 pt-6 border-t border-brand-secondary/10">
                <div id="time-fields" class="grid grid-cols-1 sm:grid-cols-2 gap-6 transition-all duration-500">
                    <div>
                        <%= f.label :check_in_time, "Check In (00:00)", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
                        <%= f.time_field :check_in_time, class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary outline-none transition" %>
                    </div>
                    <div>
                        <%= f.label :check_out_time, "Check Out (00:00)", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
                        <%= f.time_field :check_out_time, class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary outline-none transition" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- RIGHT: Status & Validation -->
    <div class="lg:col-span-1 space-y-6">
        <div class="bg-brand-secondary/90 dark:bg-brand-primary/10 border border-brand-primary/30 rounded-2xl p-6 shadow-2xl sticky top-6">
            <h4 class="text-xs font-black uppercase tracking-[0.2em] text-brand-primary mb-6 border-b border-brand-primary/20 pb-4 text-center">Final Validation</h4>
            <div class="space-y-5">
                <div>
                    <%= f.label :date, "Record Date", class: "block text-[9px] font-bold uppercase tracking-[0.2em] text-brand-primary/70 mb-1" %>
                    <%= f.date_field :date, class: "w-full px-4 py-2 bg-black/20 border border-white/10 rounded-xl text-sm text-white focus:ring-1 focus:ring-brand-primary outline-none transition" %>
                </div>
                <div>
                    <%= f.label :status, "Operational Status", class: "block text-[9px] font-bold uppercase tracking-[0.2em] text-brand-primary/70 mb-1" %>
                    <%= f.select :status, Hr::AttendanceRecord.statuses.keys.map { |s| [s.titleize, s] }, { prompt: "Select Status" },
                  { class: "w-full px-4 py-2 bg-black/20 border border-white/10 rounded-xl text-sm text-white focus:ring-1 focus:ring-brand-primary outline-none transition",
                    onchange: "toggleTimeFields(this.value)" } %>
                </div>
                <div class="pt-4">
                    <%= f.submit (@attendance_record.persisted? ? "Confirm Update" : "Log Attendance"),
                  class: "w-full py-4 rounded-xl bg-brand-primary text-white font-black uppercase tracking-widest text-[11px] shadow-lg hover:bg-white hover:text-brand-secondary transition-all duration-500 active:scale-95 cursor-pointer" %>
                    <%= link_to "Discard Entry", hr_attendance_records_path,
                  class: "block w-full mt-4 text-center text-[10px] font-bold uppercase tracking-widest text-white/40 hover:text-red-400 transition" %>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>
<script nonce="<%= content_security_policy_nonce %>">
    function toggleTimeFields(status) {
        const timeFields = document.getElementById("time-fields");
        if (["present", "late"].includes(status)) {
            timeFields.classList.remove("opacity-20", "pointer-events-none", "grayscale");
        } else {
            timeFields.classList.add("opacity-20", "pointer-events-none", "grayscale");
        }
    }

    document.addEventListener("DOMContentLoaded", () => {
        const statusSelect = document.querySelector("select[name='attendance_record[status]']");
        if (statusSelect) toggleTimeFields(statusSelect.value);
    });
</script>
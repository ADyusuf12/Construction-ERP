<%= form_with(model: @attendance_record, local: true, class: "space-y-6 hr-form") do |f| %>
  <% if @attendance_record.errors.any? %>
    <div class="p-4 rounded bg-hamzis-copper text-hamzis-white">
      <h3 class="font-semibold"><%= pluralize(@attendance_record.errors.count, "error") %> prevented saving:</h3>
      <ul class="list-disc ml-6 mt-2 text-sm">
        <% @attendance_record.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border rounded-xl shadow-lg p-6 space-y-4">
    <!-- Employee -->
    <div>
      <%= f.label :employee_id, "Employee", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.collection_select :employee_id, Hr::Employee.all, :id, :full_name,
            { prompt: "Select Employee" },
            class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                    focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <!-- Project -->
    <div>
      <%= f.label :project_id, "Project", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.collection_select :project_id, Project.all, :id, :name,
            { prompt: "Select Project" },
            class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                    focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <!-- Date -->
    <div>
      <%= f.label :date, "Date", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.date_field :date,
            class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                    focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <!-- Status -->
    <div>
      <%= f.label :status, "Status", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.select :status, Hr::AttendanceRecord.statuses.keys.map { |s| [s.titleize, s] },
            { prompt: "Select Status" },
            class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                    focus:ring-hamzis-copper focus:border-hamzis-copper",
            onchange: "toggleTimeFields(this.value)" %>
    </div>
    <!-- Time (Check In / Check Out) -->
    <fieldset id="time-fields" class="space-y-2 hidden">
      <legend class="text-sm font-medium text-hamzis-brown dark:text-hamzis-copper">Time</legend>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <%= f.label :check_in_time, "Check In", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
          <%= f.time_field :check_in_time,
                class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                        focus:ring-hamzis-copper focus:border-hamzis-copper" %>
        </div>
        <div>
          <%= f.label :check_out_time, "Check Out", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
          <%= f.time_field :check_out_time,
                class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                        focus:ring-hamzis-copper focus:border-hamzis-copper" %>
        </div>
      </div>
    </fieldset>
    <!-- Actions -->
    <div class="flex flex-col sm:flex-row gap-3 mt-2">
      <%= f.submit (@attendance_record.persisted? ? "Update Attendance" : "Submit Attendance"),
            class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition-colors w-full sm:w-auto" %>
      <%= link_to "Cancel", hr_attendance_records_path,
            class: "px-4 py-2 rounded bg-hamzis-brown text-hamzis-white hover:bg-hamzis-copper transition w-full sm:w-auto" %>
    </div>
  </div>
<% end %>
<!-- Inline Script -->
<script nonce="<%= content_security_policy_nonce %>">
  function toggleTimeFields(status) {
    const timeFields = document.getElementById("time-fields");
    if (["present", "late"].includes(status)) {
      timeFields.classList.remove("hidden");
    } else {
      timeFields.classList.add("hidden");
    }
  }

  // Initialize on page load (important for edit forms)
  document.addEventListener("DOMContentLoaded", () => {
    const statusSelect = document.querySelector("select[name='attendance_record[status]']");
    if (statusSelect) toggleTimeFields(statusSelect.value);
  });
</script>

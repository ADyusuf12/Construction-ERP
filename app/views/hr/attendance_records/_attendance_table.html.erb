<div class="overflow-hidden bg-brand-white/30 dark:bg-brand-black/30 backdrop-blur-md border border-brand-secondary/20 rounded-2xl shadow-2xl p-6">
    <% if attendance_records.any? %>
    <div class="overflow-x-auto">
        <table class="min-w-full text-left border-separate border-spacing-0">
            <%= render "hr/attendance_records/attendance_table_header",
                   show_employee: local_assigns[:show_employee],
                   show_actions: local_assigns[:show_actions] %>
            <tbody class="divide-y divide-brand-secondary/10 dark:divide-brand-primary/10">
                <% attendance_records.each_with_index do |record, index| %>
                <%= render "hr/attendance_records/attendance_row",
                       record: record,
                       show_employee: local_assigns[:show_employee],
                       show_actions: local_assigns[:show_actions],
                       row_class: index.even? ? "bg-brand-secondary/5 dark:bg-brand-primary/5" : "" %>
                <% end %>
            </tbody>
        </table>
    </div>
    <% else %>
    <div class="text-center py-20">
        <h3 class="text-xl font-black text-brand-secondary dark:text-brand-primary uppercase tracking-tighter italic opacity-50">Zero Logs Recorded</h3>
        <p class="text-[10px] text-white/30 mt-2 uppercase tracking-widest italic">Awaiting site presence verification.</p>
    </div>
    <% end %>
</div>
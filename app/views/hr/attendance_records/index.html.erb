<% content_for :title, "Attendance Registry | Hamzis Systems" %>
<div class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4">
    <div>
        <h1 class="text-4xl font-black tracking-tighter text-brand-secondary dark:text-brand-primary uppercase">Attendance Registry</h1>
        <p class="text-sm text-brand-secondary/60 dark:text-brand-primary/60 italic">Operational resource tracking and site presence verification.</p>
    </div>
    <% if policy(Hr::AttendanceRecord.new).create? %>
    <%= link_to new_hr_attendance_record_path, class: "flex items-center gap-2 px-6 py-3 rounded-xl bg-brand-primary text-white font-black uppercase tracking-widest text-[11px] shadow-lg hover:bg-white hover:text-brand-secondary transition-all duration-500 active:scale-95 shadow-brand-primary/20" do %>
    <svg xmlns="http://www.w3.org" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
        <path d="M12 4v16m8-8H4" />
    </svg>
    Log Presence
    <% end %>
    <% end %>
</div>
<%# Summary Gauges %>
<div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-10">
    <% [
    { label: "Total Strength", count: @attendance_records.total_count, color: "copper" },
    { label: "Present", count: @attendance_records.status_present.total_count, color: "green-500" },
    { label: "Absent", count: @attendance_records.status_absent.total_count, color: "red-500" },
    { label: "Late / Delayed", count: @attendance_records.status_late.total_count, color: "yellow-500" }
  ].each do |stat| %>
    <div class="bg-brand-white/30 dark:bg-brand-black/30 border border-brand-secondary/10 rounded-2xl p-5 backdrop-blur-md shadow-xl relative overflow-hidden group">
        <div class="absolute top-0 left-0 w-1 h-full bg-hamzis-<%= stat[:color] %>"></div>
        <p class="text-[9px] font-black uppercase tracking-[0.2em] text-brand-secondary/50 dark:text-brand-primary/50 mb-1"><%= stat[:label] %></p>
        <p class="text-3xl font-black text-brand-secondary dark:text-white"><%= stat[:count] %></p>
    </div>
    <% end %>
</div>
<%# Filter Console %>
<div class="mb-6 bg-brand-secondary/5 dark:bg-brand-primary/5 p-4 rounded-2xl border border-brand-secondary/10">
    <%= form_with url: hr_attendance_records_path, method: :get, local: true, class: "flex flex-col md:flex-row items-center gap-4" do |f| %>
    <div class="flex-1 w-full">
        <%= f.select :status, Hr::AttendanceRecord.statuses.keys.map { |s| [s.titleize, s] }, {prompt: "Filter By Status"},
            class: "w-full px-4 py-2 bg-white/50 dark:bg-black/20 border border-brand-secondary/20 rounded-xl text-xs uppercase font-bold tracking-widest dark:text-brand-primary focus:ring-1 focus:ring-brand-primary outline-none transition" %>
    </div>
    <div class="flex-1 w-full">
        <%= f.date_field :date, class: "w-full px-4 py-2 bg-white/50 dark:bg-black/20 border border-brand-secondary/20 rounded-xl text-xs font-bold dark:text-brand-primary focus:ring-1 focus:ring-brand-primary outline-none transition" %>
    </div>
    <div class="flex gap-2 w-full md:w-auto">
        <%= f.submit "Query Registry", class: "flex-1 px-6 py-2 rounded-xl bg-brand-secondary text-white font-bold uppercase tracking-widest text-[10px] hover:bg-brand-primary transition cursor-pointer" %>
        <%= link_to "Reset", hr_attendance_records_path, class: "px-6 py-2 rounded-xl bg-brand-white/50 dark:bg-white/10 text-brand-secondary dark:text-white/40 font-bold uppercase tracking-widest text-[10px] hover:text-red-500 transition" %>
    </div>
    <% end %>
</div>
<%= render "hr/attendance_records/attendance_table", attendance_records: @attendance_records, show_employee: true, show_actions: true %>
<div class="mt-8"> <%= paginate @attendance_records %> </div>
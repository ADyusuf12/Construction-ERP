<% content_for :title, "Personal Attendance Dossier | Earmark Systems" %>
<div class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4">
  <div>
    <h1 class="text-4xl font-black tracking-tighter text-brand-secondary dark:text-brand-primary uppercase">My Presence Log</h1>
    <p class="text-sm text-brand-secondary/60 dark:text-brand-primary/60 italic">Personal operational history and site deployment record.</p>
  </div>
</div>
<%# Personal Performance Gauges %>
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
  <% [
    { label: "Total Recorded Cycles", count: @attendance_records.total_count, color: "copper" },
    { label: "Validated Presence", count: @attendance_records.status_present.total_count, color: "green-500" },
    { label: "Missed Days", count: @attendance_records.status_absent.total_count, color: "red-500" }
  ].each do |stat| %>
    <div class="bg-brand-white/30 dark:bg-brand-black/30 border border-brand-secondary/10 rounded-2xl p-6 backdrop-blur-md shadow-xl relative overflow-hidden group">
      <div class="absolute top-0 left-0 w-1 h-full bg-brand-<%= stat[:color] %>"></div>
      <p class="text-[9px] font-black uppercase tracking-[0.2em] text-brand-secondary/50 dark:text-brand-primary/50 mb-1"><%= stat[:label] %></p>
      <p class="text-3xl font-black text-brand-secondary dark:text-white"><%= stat[:count] %></p>
    </div>
  <% end %>
</div>
<%# Filter Console %>
<div class="mb-6 bg-brand-secondary/5 dark:bg-brand-primary/5 p-4 rounded-2xl border border-brand-secondary/10">
  <%= form_with url: my_attendance_hr_attendance_records_path, method: :get, local: true, class: "flex flex-col md:flex-row items-center gap-4" do |f| %>
    <div class="flex-1 w-full">
      <%= f.select :status, Hr::AttendanceRecord.statuses.keys.map { |s| [s.titleize, s] }, {prompt: "Filter By Status"},
            class: "w-full px-4 py-2 bg-white/50 dark:bg-black/20 border border-brand-secondary/20 rounded-xl text-xs uppercase font-bold tracking-widest dark:text-brand-primary focus:ring-1 focus:ring-brand-primary outline-none transition cursor-pointer" %>
    </div>
    <div class="flex-1 w-full">
      <%= f.date_field :date, class: "w-full px-4 py-2 bg-white/50 dark:bg-black/20 border border-brand-secondary/20 rounded-xl text-xs font-bold dark:text-brand-primary focus:ring-1 focus:ring-brand-primary outline-none transition" %>
    </div>
    <div class="flex gap-2 w-full md:w-auto">
      <%= f.submit "Query Logs", class: "flex-1 px-6 py-2 rounded-xl bg-brand-secondary text-white font-bold uppercase tracking-widest text-[10px] hover:bg-brand-primary transition cursor-pointer" %>
      <%= link_to "Clear", my_attendance_hr_attendance_records_path, class: "px-6 py-2 rounded-xl bg-brand-white/50 dark:bg-white/10 text-brand-secondary dark:text-white/40 font-bold uppercase tracking-widest text-[10px] hover:text-red-500 transition" %>
    </div>
  <% end %>
</div>
<%# Modular Attendance Table - Personalized Context %>
<%= render "hr/attendance_records/attendance_table",
           attendance_records: @attendance_records,
           show_employee: false,
           show_actions: false %>
<div class="mt-8 flex justify-center">
  <%= paginate @attendance_records, params: request.query_parameters %>
</div>
<% content_for :title, "Leave: #{@leave.employee.full_name} | Hamzis HR" %>

<div class="bg-gradient-to-br from-hamzis-white/40 via-hamzis-copper/5 to-hamzis-brown/5 dark:from-hamzis-black/40 dark:via-hamzis-brown/10 dark:to-hamzis-copper/10 border border-hamzis-brown/30 rounded-2xl shadow-2xl p-8 relative overflow-hidden animate-fade-in">

    <%# Status Badge %>
    <div class="absolute top-6 right-8">
        <div id="<%= dom_id(@leave, :status) %>">
            <%
        status_classes = case @leave.status
          when "approved" then "bg-emerald-500/10 text-emerald-600 border-emerald-500/20"
          when "rejected" then "bg-rose-500/10 text-rose-600 border-rose-500/20"
          else "bg-amber-500/10 text-amber-600 border-amber-500/20"
        end
      %>
            <span class="px-4 py-1.5 rounded-full border text-[10px] font-black uppercase tracking-[0.2em] <%= status_classes %> shadow-sm transition-all duration-500">
                <%= @leave.status.humanize %>
            </span>
        </div>
    </div>

    <%# Header %>
    <div class="mb-10">
        <div class="flex items-center gap-3 mb-3">
            <span class="px-2 py-0.5 rounded bg-hamzis-brown/10 border border-hamzis-brown/20 text-[9px] font-black uppercase tracking-[0.2em] text-hamzis-brown dark:text-hamzis-copper">
                Absence Authorization
            </span>
        </div>
        <h2 class="text-3xl font-black text-hamzis-brown dark:text-white uppercase tracking-tighter italic">
            <%= @leave.employee.full_name %>
        </h2>
        <p class="text-[10px] font-bold text-hamzis-brown/40 dark:text-white/40 uppercase tracking-widest mt-1">
            ID: #<%= @leave.employee.hamzis_id %> | <%= @leave.employee.user_email || "SYSTEM ACCESS ONLY" %>
        </p>
    </div>

    <%# Duration Grid %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
        <div class="bg-hamzis-white/40 dark:bg-hamzis-black/40 border border-hamzis-brown/10 rounded-2xl p-6 text-center">
            <p class="text-[9px] font-black text-hamzis-copper uppercase tracking-widest mb-2">Departure</p>
            <p class="text-xl font-black text-hamzis-brown dark:text-white font-mono uppercase tracking-tighter">
                <%= @leave.start_date.strftime("%d %b %Y") %>
            </p>
        </div>

        <div class="flex flex-col items-center justify-center">
            <div class="h-[1px] w-full bg-hamzis-brown/20 dark:bg-white/20 relative">
                <div class="absolute inset-0 flex items-center justify-center">
                    <span class="bg-hamzis-brown text-white dark:bg-hamzis-copper text-[10px] font-black px-4 py-1 rounded-full uppercase tracking-tighter italic shadow-lg">
                        <%= @leave.duration %> Operational Days
                    </span>
                </div>
            </div>
        </div>

        <div class="bg-hamzis-white/40 dark:bg-hamzis-black/40 border border-hamzis-brown/10 rounded-2xl p-6 text-center">
            <p class="text-[9px] font-black text-hamzis-copper uppercase tracking-widest mb-2">Expected Return</p>
            <p class="text-xl font-black text-hamzis-brown dark:text-white font-mono uppercase tracking-tighter">
                <%= @leave.end_date.strftime("%d %b %Y") %>
            </p>
        </div>
    </div>

    <%# Reason & Authority %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 pt-8 border-t border-hamzis-brown/10">
        <div class="space-y-4">
            <h4 class="text-[10px] font-black text-hamzis-copper uppercase tracking-widest italic">Reason for Absence</h4>
            <p class="text-sm text-hamzis-brown/70 dark:text-white/70 leading-relaxed italic border-l-2 border-hamzis-copper/20 pl-4">
                "<%= @leave.reason %>"
            </p>
        </div>

        <div class="space-y-4">
            <h4 class="text-[10px] font-black text-hamzis-copper uppercase tracking-widest italic">Authorization Authority</h4>
            <div class="bg-hamzis-brown/5 dark:bg-white/5 rounded-xl p-4 border border-hamzis-brown/10">
                <% if @leave.manager.present? %>
                <p class="text-sm font-bold text-hamzis-brown dark:text-white uppercase"><%= @leave.manager.full_name %></p>
                <p class="text-[10px] text-hamzis-brown/40 dark:text-white/40 uppercase tracking-widest"><%= @leave.manager.user_email %></p>
                <% else %>
                <p class="text-xs font-bold text-hamzis-brown/40 dark:text-white/40 italic uppercase">Pending Command Assignment</p>
                <% end %>
            </div>
        </div>
    </div>

    <%# Footer Actions %>
    <div class="mt-10 pt-6 border-t border-hamzis-brown/10 flex justify-between items-center">
        <%= link_to hr_leaves_path, class: "flex items-center gap-2 px-5 py-2.5 rounded-xl bg-hamzis-brown/10 text-hamzis-brown dark:text-white border border-hamzis-brown/20 text-[10px] font-black uppercase tracking-widest hover:bg-hamzis-brown hover:text-white transition-all shadow-sm" do %>
        ‚Üê Registry Logs
        <% end %>

        <div class="flex gap-3">
            <% if @leave.status_pending? && policy(@leave).destroy? %>
            <%= button_to "#",
            class: "px-5 py-2.5 rounded-xl bg-red-500/10 text-red-600 border border-red-500/20 hover:bg-red-600 hover:text-white transition-all cursor-pointer text-[10px] font-black uppercase tracking-widest",
            form: {
              "data-action" => "click->confirm-delete#open",
              "data-confirm-delete-title-param" => "Purge Leave Request?",
              "data-confirm-delete-message-param" => "This will permanently delete the absence request for #{@leave.employee.full_name}.",
              "data-confirm-delete-confirm-path-param" => hr_leave_path(@leave)
            } do %>
            Delete Request
            <% end %>
            <% end %>

            <% if policy(@leave).edit? %>
            <%= link_to "Edit Dossier", edit_hr_leave_path(@leave),
            class: "px-5 py-2.5 rounded-xl bg-hamzis-copper text-white text-[10px] font-black uppercase tracking-widest shadow-lg hover:bg-hamzis-black transition-all" %>
            <% end %>
        </div>
    </div>
</div>
<div class="overflow-hidden bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md border border-hamzis-brown/20 rounded-2xl shadow-2xl p-6">
  <% if leaves.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full text-left border-separate border-spacing-0">
        <%= render "hr/leaves/leave_table_header", show_employee: local_assigns[:show_employee] %>
        <tbody class="divide-y divide-hamzis-brown/10 dark:divide-hamzis-copper/10">
          <% leaves.each_with_index do |leave, index| %>
            <%= render "hr/leaves/leave_row",
                       leave: leave,
                       show_employee: local_assigns[:show_employee],
                       row_class: index.even? ? "bg-hamzis-brown/5 dark:bg-hamzis-copper/5" : "" %>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-20">
      <h3 class="text-xl font-black text-hamzis-brown dark:text-hamzis-copper uppercase tracking-tighter italic opacity-50">Zero Leave Protocols Found</h3>
      <p class="text-[10px] text-white/30 mt-2 uppercase tracking-widest italic">System awaiting leave authorization requests.</p>
    </div>
  <% end %>
</div>

<% content_for :title, "Personal Leave Dossier | Hamzis Systems" %>
<div class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4">
  <div>
    <h1 class="text-4xl font-black tracking-tighter text-hamzis-brown dark:text-hamzis-copper uppercase">My Leave Log</h1>
    <p class="text-sm text-hamzis-brown/60 dark:text-hamzis-copper/60 italic">Personal absence history and authorization status.</p>
  </div>
  <% if policy(Hr::Leave.new).create? %>
    <%= link_to new_hr_leave_path, class: "flex items-center gap-2 px-6 py-3 rounded-xl bg-hamzis-copper text-white font-black uppercase tracking-widest text-[11px] shadow-lg hover:bg-white hover:text-hamzis-brown transition-all duration-500 active:scale-95 shadow-hamzis-copper/20" do %>
      <svg xmlns="http://www.w3.org" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M12 4v16m8-8H4" /></svg>
      New Request
    <% end %>
  <% end %>
</div>
<%# Personal Leave Gauges %>
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
  <% [
    { label: "Total Submissions", count: @leaves.total_count, color: "copper" },
    { label: "Authorized", count: @leaves.status_approved.total_count, color: "green-500" },
    { label: "Denied", count: @leaves.status_rejected.total_count, color: "red-500" }
  ].each do |stat| %>
    <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 border border-hamzis-brown/10 rounded-2xl p-6 backdrop-blur-md shadow-xl relative overflow-hidden group">
      <div class="absolute top-0 left-0 w-1 h-full bg-hamzis-<%= stat[:color] %>"></div>
      <p class="text-[9px] font-black uppercase tracking-[0.2em] text-hamzis-brown/50 dark:text-hamzis-copper/50 mb-1"><%= stat[:label] %></p>
      <p class="text-3xl font-black text-hamzis-brown dark:text-white"><%= stat[:count] %></p>
    </div>
  <% end %>
</div>
<%# Modular Leave Table - Personnel Hidden for Personal Context %>
<%= render "hr/leaves/leave_table",
           leaves: @leaves,
           show_employee: false %>
<div class="mt-8 flex justify-center">
  <%= paginate @leaves if defined?(paginate) %>
</div>

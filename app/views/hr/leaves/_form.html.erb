<%= form_with(model: @leave, local: true, class: "space-y-4") do |form| %>
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6 space-y-4">
    <!-- Start Date -->
    <div>
      <%= form.label :start_date, "Start Date", class: "block font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= form.date_select :start_date, class: "w-full rounded border-gray-300 shadow-sm" %>
    </div>
    <!-- End Date -->
    <div>
      <%= form.label :end_date, "End Date", class: "block font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= form.date_select :end_date, class: "w-full rounded border-gray-300 shadow-sm" %>
    </div>
    <!-- Reason -->
    <div>
      <%= form.label :reason, "Reason", class: "block font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= form.text_area :reason, rows: 3, class: "w-full rounded border-gray-300 shadow-sm" %>
    </div>
    <!-- Actions -->
    <div class="flex gap-2">
      <%= form.submit "Submit Leave", class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition" %>
      <%= link_to "Cancel", my_leaves_hr_leaves_path,
          class: "px-4 py-2 rounded bg-hamzis-brown text-hamzis-white hover:bg-hamzis-copper transition" %>
    </div>
  </div>
<% end %>

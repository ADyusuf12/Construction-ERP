<%= form_with(model: @leave, local: true, class: "space-y-6 hr-form") do |f| %>
  <% if @leave.errors.any? %>
    <div class="p-4 rounded bg-hamzis-copper text-hamzis-white">
      <h3 class="font-semibold"><%= pluralize(@leave.errors.count, "error") %> prevented saving:</h3>
      <ul class="list-disc ml-6 mt-2 text-sm">
        <% @leave.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border rounded-xl shadow-lg p-6 space-y-4">
    <!-- Start Date -->
    <div>
      <%= f.label :start_date, "Start Date", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.date_field :start_date,
            class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                    focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <!-- End Date -->
    <div>
      <%= f.label :end_date, "End Date", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.date_field :end_date,
            class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                    focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <!-- Reason -->
    <div>
      <%= f.label :reason, "Reason", class: "block text-sm font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.text_area :reason, rows: 3,
            class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper
                    focus:ring-hamzis-copper focus:border-hamzis-copper" %>
    </div>
    <!-- Actions -->
    <div class="flex flex-col sm:flex-row gap-3 mt-2">
      <%= f.submit (@leave.persisted? ? "Update Leave" : "Submit Leave"),
            class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition-colors w-full sm:w-auto" %>
      <%= link_to "Cancel", my_leaves_hr_leaves_path,
            class: "px-4 py-2 rounded bg-hamzis-brown text-hamzis-white hover:bg-hamzis-copper transition w-full sm:w-auto" %>
    </div>
  </div>
<% end %>

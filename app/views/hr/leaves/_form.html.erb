<%= form_with(model: @leave, local: true, class: "space-y-6 hr-form") do |f| %>
  <%# Enhanced Red Error Block %>
  <% if @leave.errors.any? %>
    <div class="p-4 mb-6 rounded-2xl bg-red-500/10 border border-red-500/30 text-red-600 dark:text-red-400 backdrop-blur-md">
      <div class="flex items-center gap-2 mb-2">
        <svg xmlns="http://www.w3.org" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        <h3 class="font-bold uppercase tracking-widest text-xs">Submission Blocked</h3>
      </div>
      <ul class="list-disc ml-6 text-xs space-y-1 opacity-90">
        <% @leave.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- LEFT: Dates & Narrative -->
    <div class="lg:col-span-2 space-y-6">
      <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 border border-hamzis-brown/20 rounded-2xl p-6 shadow-xl backdrop-blur-sm">
        <div class="flex items-center gap-2 mb-6">
          <div class="p-2 rounded-lg bg-hamzis-copper/10 text-hamzis-copper">
            <svg xmlns="http://www.w3.org" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <h4 class="text-sm font-black uppercase tracking-widest text-hamzis-brown dark:text-hamzis-copper">Leave Duration</h4>
        </div>
        <div class="space-y-5">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <%= f.label :start_date, class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-hamzis-brown/70 dark:text-hamzis-copper/70" %>
              <%= f.date_field :start_date, class: "w-full px-4 py-2.5 border border-hamzis-brown/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-hamzis-copper focus:ring-2 focus:ring-hamzis-copper outline-none transition" %>
            </div>
            <div>
              <%= f.label :end_date, class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-hamzis-brown/70 dark:text-hamzis-copper/70" %>
              <%= f.date_field :end_date, class: "w-full px-4 py-2.5 border border-hamzis-brown/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-hamzis-copper focus:ring-2 focus:ring-hamzis-copper outline-none transition" %>
            </div>
          </div>
          <div>
            <%= f.label :reason, "Statement of Purpose", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-hamzis-brown/70 dark:text-hamzis-copper/70" %>
            <%= f.text_area :reason, rows: 5, placeholder: "Describe why you are requesting this leave...",
                  class: "w-full px-4 py-2.5 border border-hamzis-brown/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-hamzis-copper focus:ring-2 focus:ring-hamzis-copper outline-none transition" %>
          </div>
        </div>
      </div>
    </div>
    <!-- RIGHT: Manifest & Submit -->
    <div class="lg:col-span-1 space-y-6">
      <div class="bg-hamzis-brown/90 dark:bg-hamzis-copper/10 border border-hamzis-copper/30 rounded-2xl p-6 shadow-2xl sticky top-6">
        <h4 class="text-xs font-black uppercase tracking-[0.2em] text-hamzis-copper mb-6 border-b border-hamzis-copper/20 pb-4 text-center">Filing Info</h4>
        <div class="space-y-6">
          <%# Personal Balance Display %>
          <div class="p-4 rounded-xl bg-black/20 border border-white/10 text-center">
            <p class="text-[9px] font-bold uppercase tracking-[0.2em] text-hamzis-copper mb-1">Your Leave Credit</p>
            <p class="text-2xl font-black text-white">
              <%= current_user.employee&.leave_balance || 0 %> <span class="text-[10px] font-normal opacity-50">Days</span>
            </p>
          </div>
          <div class="pt-4">
            <%= f.submit (@leave.persisted? ? "Modify Filing" : "Submit Request"),
                  class: "w-full py-4 rounded-xl bg-hamzis-copper text-white font-black uppercase tracking-widest text-[11px] shadow-lg hover:bg-white hover:text-hamzis-brown transition-all duration-500 active:scale-95 cursor-pointer" %>
            <%= link_to "Abort Application", my_leaves_hr_leaves_path,
                  class: "block w-full mt-4 text-center text-[10px] font-bold uppercase tracking-widest text-white/50 hover:text-red-400 transition" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

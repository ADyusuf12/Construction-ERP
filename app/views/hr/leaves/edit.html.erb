<% content_for :title, "Edit Leave Request" %>
<h1 class="text-2xl font-bold text-hamzis-brown dark:text-hamzis-copper mb-4">
  Editing Leave — <%= @leave.start_date.strftime("%b %d, %Y") %> to <%= @leave.end_date.strftime("%b %d, %Y") %>
</h1>
<%= render "form", leave: @leave %>
<div class="mt-4 flex gap-2">
  <%= link_to "Show Leave", hr_leave_path(@leave),
      class: "px-3 py-1 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition" %>
  <%= link_to "← Back to Leaves", my_leaves_hr_leaves_path,
      class: "px-3 py-1 rounded bg-hamzis-brown text-hamzis-white hover:bg-hamzis-copper transition" %>
</div>

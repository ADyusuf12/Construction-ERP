<div class="bg-gradient-to-br from-hamzis-white/40 via-hamzis-copper/10 to-hamzis-brown/10
            dark:from-hamzis-black/40 dark:via-hamzis-brown/20 dark:to-hamzis-copper/20
            border border-hamzis-brown/30 rounded-2xl shadow-xl p-8 space-y-8">
  <!-- Header -->
  <h4 class="text-base font-semibold text-hamzis-brown dark:text-hamzis-copper flex items-center gap-2">
    <svg class="w-4 h-4 text-hamzis-copper" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M12 5l7 7-7 7"/>
    </svg>
    Personal Details
  </h4>
  <% if employee.personal_detail.present? %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-6 text-sm">
      <div><span class="font-medium">Name:</span> <%= employee.personal_detail.first_name %> <%= employee.personal_detail.last_name %></div>
      <div><span class="font-medium">Date of Birth:</span> <%= employee.personal_detail.dob %></div>
      <div><span class="font-medium">Gender:</span> <%= employee.personal_detail.gender.humanize %></div>
      <div><span class="font-medium">Phone:</span> <%= employee.personal_detail.phone_number %></div>
      <div class="md:col-span-2"><span class="font-medium">Address:</span> <%= employee.personal_detail.address %></div>
      <div><span class="font-medium">ID Type:</span> <%= employee.personal_detail.means_of_identification.humanize.upcase %></div>
      <div><span class="font-medium">ID Number:</span> <%= employee.personal_detail.id_number %></div>
      <div><span class="font-medium">Bank:</span> <%= employee.personal_detail.bank_name %></div>
      <div><span class="font-medium">Account Number:</span> <%= employee.personal_detail.account_number %></div>
      <div><span class="font-medium">Account Name:</span> <%= employee.personal_detail.account_name %></div>
      <div><span class="font-medium">Marital Status:</span> <%= employee.personal_detail.marital_status.humanize %></div>
    </div>
  <% else %>
    <p class="text-sm text-gray-500">No personal details recorded.</p>
  <% end %>
  <!-- Divider -->
  <div class="border-t border-hamzis-brown/20 dark:border-hamzis-copper/20 my-4"></div>
  <!-- Next of Kin Section -->
  <h4 class="text-base font-semibold text-hamzis-brown dark:text-hamzis-copper flex items-center gap-2">
    <svg class="w-4 h-4 text-hamzis-copper" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7l9 6 9-6-9-6-9 6z"/>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 17l9 6 9-6"/>
    </svg>
    Next of Kin
  </h4>
  <% if employee.next_of_kins.any? %>
    <div class="space-y-4">
      <% employee.next_of_kins.each do |nok| %>
        <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 border border-hamzis-brown/20 rounded-xl p-4 text-sm">
          <div><span class="font-medium">Name:</span> <%= nok.name %></div>
          <div><span class="font-medium">Relationship:</span> <%= nok.relationship %></div>
          <div><span class="font-medium">Phone:</span> <%= nok.phone_number %></div>
          <div><span class="font-medium">Address:</span> <%= nok.address %></div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-sm text-gray-500">No next of kin recorded.</p>
  <% end %>
</div>

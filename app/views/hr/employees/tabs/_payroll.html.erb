<div class="space-y-6">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="p-6 rounded-2xl bg-brand-secondary/5 border border-brand-secondary/10">
      <p class="text-[9px] font-black uppercase tracking-widest text-brand-secondary/40">Total Lifetime Earnings</p>
      <p class="text-2xl font-black text-brand-secondary dark:text-white">
        <%= number_to_currency(employee.salaries.status_paid.sum(:net_pay), unit: "₦") %>
      </p>
    </div>
    <div class="p-6 rounded-2xl bg-brand-secondary/5 border border-brand-secondary/10">
      <p class="text-[9px] font-black uppercase tracking-widest text-brand-secondary/40">Pending Disbursment</p>
      <p class="text-2xl font-black text-brand-primary">
        <%= number_to_currency(employee.salaries.status_pending.sum(:net_pay), unit: "₦") %>
      </p>
    </div>
    <div class="p-6 rounded-2xl bg-brand-secondary/5 border border-brand-secondary/10">
      <p class="text-[9px] font-black uppercase tracking-widest text-brand-secondary/40">Total Active Deductions</p>
      <p class="text-2xl font-black text-red-500">
        <%= number_to_currency(employee.deductions.sum(:amount), unit: "₦") %>
      </p>
    </div>
  </div>
  <div class="bg-brand-white/30 dark:bg-brand-black/30 backdrop-blur-md border border-brand-secondary/20 rounded-2xl overflow-hidden shadow-xl">
    <div class="px-6 py-4 border-b border-brand-secondary/10 bg-brand-secondary/5 flex justify-between items-center">
      <h3 class="text-xs font-black uppercase tracking-widest text-brand-secondary">Payment Ledger</h3>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full text-left border-collapse">
        <thead>
          <tr class="text-[10px] font-black uppercase tracking-widest text-brand-secondary/40 dark:text-brand-primary/40 border-b border-brand-secondary/10">
            <th class="px-6 py-4">Batch Period</th>
            <th class="px-6 py-4 text-center">Base</th>
            <th class="px-6 py-4 text-center">Allowances</th>
            <th class="px-6 py-4 text-center">Deductions</th>
            <th class="px-6 py-4 text-center">Net Pay</th>
            <th class="px-6 py-4 text-right">Status</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-brand-secondary/5">
          <% employee.salaries.order(created_at: :desc).each do |salary| %>
            <tr class="hover:bg-brand-primary/5 transition-colors group">
              <td class="px-6 py-4">
                <span class="text-xs font-bold text-brand-secondary dark:text-white uppercase">
                  <%= salary.batch.name %>
                </span>
              </td>
              <td class="px-6 py-4 text-center text-xs font-mono text-brand-secondary/60 italic">
                <%= number_to_currency(salary.base_pay, unit: "₦") %>
              </td>
              <td class="px-6 py-4 text-center text-xs font-mono text-green-600/70">
                +<%= number_to_currency(salary.allowances, unit: "₦") %>
              </td>
              <td class="px-6 py-4 text-center text-xs font-mono text-red-500/70">
                -<%= number_to_currency(salary.deductions_total, unit: "₦") %>
              </td>
              <td class="px-6 py-4 text-center">
                <span class="text-sm font-black text-brand-secondary dark:text-white">
                  <%= number_to_currency(salary.net_pay, unit: "₦") %>
                </span>
              </td>
              <td class="px-6 py-4 text-right">
                <span class="text-[9px] font-black uppercase px-2 py-1 rounded border <%= salary.status_paid? ? 'bg-green-500/10 text-green-500 border-green-500/20' : 'bg-yellow-500/10 text-yellow-500 border-yellow-500/20' %>">
                  <%= salary.status %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
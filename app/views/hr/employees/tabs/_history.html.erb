<div class="bg-gradient-to-br from-hamzis-white/40 via-hamzis-copper/10 to-hamzis-brown/10
            dark:from-hamzis-black/40 dark:via-hamzis-brown/20 dark:to-hamzis-copper/20
            border border-hamzis-brown/30 rounded-2xl shadow-xl p-8 space-y-8">
  <!-- Header -->
  <h4 class="text-base font-semibold text-hamzis-brown dark:text-hamzis-copper flex items-center gap-2">
    <svg class="w-5 h-5 text-hamzis-copper" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M12 8v4l3 3M12 2a10 10 0 100 20 10 10 0 000-20z"/>
    </svg>
    Employment History
  </h4>
  <!-- Leaves History -->
  <div class="space-y-4">
    <h5 class="text-sm font-semibold text-hamzis-brown dark:text-hamzis-copper">Leaves History</h5>
    <% if employee.leaves.any? %>
      <ul class="space-y-2 text-sm">
        <% employee.leaves.each do |leave| %>
          <li class="bg-hamzis-white/30 dark:bg-hamzis-black/30 border border-hamzis-brown/20 rounded-lg p-3">
            <span class="font-medium"><%= leave.start_date %> â†’ <%= leave.end_date %></span>
            <span class="ml-2 px-2 py-1 rounded text-xs
              <%= case leave.status
                  when "approved" then "bg-green-200 text-green-800"
                  when "rejected" then "bg-red-200 text-red-800"
                  else "bg-gray-200 text-gray-700"
                  end %>">
              <%= leave.status.humanize %>
            </span>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-sm text-gray-500">No leave history available.</p>
    <% end %>
  </div>
</div>

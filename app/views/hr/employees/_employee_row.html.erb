<tr id="<%= dom_id(employee) %>" class="<%= row_class %> hover:bg-hamzis-white/40 dark:hover:bg-hamzis-black/40 transition">
  <!-- Hamzis ID -->
  <td class="px-4 py-3 font-semibold"><%= employee.hamzis_id %></td>
  <!-- Department -->
  <td class="px-4 py-3"><%= employee.department %></td>
  <!-- Position -->
  <td class="px-4 py-3"><%= employee.position_title %></td>
  <!-- Hire Date -->
  <td class="px-4 py-3"><%= employee.hire_date&.strftime("%b %d, %Y") %></td>
  <!-- Status -->
  <td class="px-4 py-3">
    <span class="px-3 py-1 rounded-full text-xs font-medium
      <%= employee.status_active? ? 'bg-green-100 text-green-700' :
          employee.status_on_leave? ? 'bg-yellow-100 text-yellow-700' :
          'bg-red-100 text-red-700' %>">
      <%= employee.status.humanize %>
    </span>
  </td>
  <!-- Actions -->
  <td class="px-4 py-3 flex gap-2">
    <%= link_to "View", hr_employee_path(employee),
      class: "px-3 py-1 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition text-xs" %>
    <%= link_to "Edit", edit_hr_employee_path(employee),
      class: "px-3 py-1 rounded bg-hamzis-brown text-hamzis-white hover:bg-hamzis-copper transition text-xs" %>
  </td>
</tr>

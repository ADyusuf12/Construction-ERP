<tr id="<%= dom_id(employee) %>" class="border-b border-hamzis-brown/20 hover:bg-hamzis-white/40 dark:hover:bg-hamzis-black/40 transition">
  <!-- Hamzis ID -->
  <td class="px-4 py-2 font-semibold"><%= employee.hamzis_id %></td>
  <!-- Department -->
  <td class="px-4 py-2"><%= employee.department %></td>
  <!-- Position -->
  <td class="px-4 py-2"><%= employee.position_title %></td>
  <!-- Hire Date -->
  <td class="px-4 py-2"><%= employee.hire_date.strftime("%b %d, %Y") if employee.hire_date.present? %></td>
  <!-- Status -->
  <td class="px-4 py-2">
    <span class="px-2 py-1 rounded
      <%= employee.status_active? ? 'bg-green-600 text-white' :
          employee.status_on_leave? ? 'bg-yellow-500 text-white' :
          'bg-red-600 text-white' %>">
      <%= employee.status.humanize %>
    </span>
  </td>
  <!-- Actions -->
  <td class="px-4 py-2 flex gap-2">
    <%= link_to "View", hr_employee_path(employee),
      class: "px-3 py-1 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition" %>
    <%= link_to "Edit", edit_hr_employee_path(employee),
      class: "px-3 py-1 rounded bg-hamzis-brown text-hamzis-white hover:bg-hamzis-copper transition" %>
  </td>
</tr>

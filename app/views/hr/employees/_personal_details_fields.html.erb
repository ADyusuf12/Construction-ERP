<div class="bg-brand-white/30 dark:bg-brand-black/30 border border-brand-secondary/20 rounded-2xl p-6 shadow-xl backdrop-blur-sm">
  <div class="flex items-center gap-2 mb-6">
    <div class="p-2 rounded-lg bg-brand-primary/10 text-brand-primary">
      <svg xmlns="http://www.w3.org" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
    </div>
    <h4 class="text-sm font-black uppercase tracking-widest text-brand-secondary dark:text-brand-primary">Personal Details</h4>
  </div>
  <%= f.fields_for :personal_detail do |pd| %>
    <div class="space-y-5">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <%= pd.label :first_name, class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
          <%= pd.text_field :first_name, class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm text-gray-900 dark:text-brand-primary focus:ring-2 focus:ring-brand-primary transition outline-none" %>
        </div>
        <div>
          <%= pd.label :last_name, class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
          <%= pd.text_field :last_name, class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm text-gray-900 dark:text-brand-primary focus:ring-2 focus:ring-brand-primary transition outline-none" %>
        </div>
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= pd.label :dob, "Date of Birth", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
          <%= pd.date_field :dob, class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary transition outline-none" %>
        </div>
        <div>
          <%= pd.label :gender, class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
          <%= pd.select :gender,
      options_for_select(Hr::PersonalDetail.genders.keys.map { |g| [g.humanize, g] }, pd.object.gender),
      { include_blank: "Select Gender" },
      class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary transition outline-none"
  %>
        </div>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <%= pd.label :phone_number, class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
          <%= pd.telephone_field :phone_number, class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm text-gray-900 dark:text-brand-primary focus:ring-2 focus:ring-brand-primary transition outline-none" %>
        </div>
        <div>
          <%= pd.label :marital_status, class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
          <%= pd.select :marital_status,
      options_for_select(Hr::PersonalDetail.marital_statuses.keys.map { |m| [m.humanize, m] }, pd.object.marital_status),
      { include_blank: "Select Status" },
      class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary transition outline-none"
  %>
        </div>
      </div>
      <div>
        <%= pd.label :address, class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
        <%= pd.text_area :address, rows: 2, class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm text-gray-900 dark:text-brand-primary focus:ring-2 focus:ring-brand-primary transition outline-none" %>
      </div>
      <div class="pt-4 border-t border-brand-secondary/10">
        <p class="text-[9px] font-black uppercase tracking-[0.2em] text-brand-primary mb-4">Identification & Banking</p>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
          <div>
            <%= pd.label :means_of_identification, "ID Type", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
            <%= pd.select :means_of_identification,
      options_for_select(Hr::PersonalDetail.means_of_identifications.keys.map { |i| [i.humanize, i] }, pd.object.means_of_identification),
      { include_blank: "Select ID Type" },
      class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary transition outline-none"
  %>
          </div>
          <div>
            <%= pd.label :id_number, "ID Number", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
            <%= pd.text_field :id_number, class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm text-gray-900 dark:text-brand-primary focus:ring-2 focus:ring-brand-primary transition outline-none" %>
          </div>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
          <div>
            <%= pd.label :bank_name, class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
            <%= pd.text_field :bank_name, class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm text-gray-900 dark:text-brand-primary focus:ring-2 focus:ring-brand-primary transition outline-none" %>
          </div>
          <div>
            <%= pd.label :account_number, class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
            <%= pd.text_field :account_number, class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm text-gray-900 dark:text-brand-primary focus:ring-2 focus:ring-brand-primary transition outline-none" %>
          </div>
        </div>
        <div>
          <%= pd.label :account_name, class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
          <%= pd.text_field :account_name, class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm text-gray-900 dark:text-brand-primary focus:ring-2 focus:ring-brand-primary transition outline-none" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
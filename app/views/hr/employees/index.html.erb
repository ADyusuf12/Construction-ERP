<% content_for :title, "Employees" %>
<h2 class="text-2xl font-bold mb-6">All Employees</h2>
<!-- Dashboard Summary -->
<div class="grid md:grid-cols-4 gap-6 mb-8">
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6 text-center">
    <p class="text-sm font-medium text-hamzis-brown dark:text-hamzis-copper">Total Employees</p>
    <p class="text-2xl font-bold"><%= @employees.count %></p>
  </div>
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6 text-center">
    <p class="text-sm font-medium text-hamzis-brown dark:text-hamzis-copper">Active</p>
    <p class="text-2xl font-bold"><%= @employees.status_active.count %></p>
  </div>
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6 text-center">
    <p class="text-sm font-medium text-hamzis-brown dark:text-hamzis-copper">On Leave</p>
    <p class="text-2xl font-bold"><%= @employees.status_on_leave.count %></p>
  </div>
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border border-hamzis-brown/20 rounded-xl shadow-lg p-6 text-center">
    <p class="text-sm font-medium text-hamzis-brown dark:text-hamzis-copper">Terminated</p>
    <p class="text-2xl font-bold"><%= @employees.status_terminated.count %></p>
  </div>
</div>
<!-- New Employee Button -->
<div class="mb-6 flex justify-end">
  <%= link_to "âž• New Employee", new_hr_employee_path,
      class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition" %>
</div>
<!-- Filters row (simple server-side search) -->
<div class="mb-4 flex items-center gap-4">
  <%= form_with url: hr_employees_path, method: :get, local: true, class: "flex gap-2" do |f| %>
    <%= f.text_field :q, value: params[:q], placeholder: "Search by Hamzis ID",
          class: "px-3 py-2 rounded border border-hamzis-brown/20 bg-transparent text-sm w-80" %>
    <%= f.submit "Search", class: "px-3 py-2 rounded bg-hamzis-copper text-white hover:bg-hamzis-black transition text-sm" %>
  <% end %>
  <%= link_to "Reset", hr_employees_path, class: "px-3 py-2 rounded bg-gray-300 text-gray-900 hover:bg-gray-400 transition text-sm" %>
</div>
<!-- Employee Table -->
<%= render "hr/employees/employee_table", employees: @employees %>

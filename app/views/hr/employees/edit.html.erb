<% content_for :title, "Update Personnel | Hamzis Systems" %>
<div class="mb-8">
  <nav class="flex items-center gap-2 text-[10px] font-bold uppercase tracking-widest text-hamzis-brown/50 dark:text-hamzis-copper/50 mb-2">
    <%= link_to "HR Management", hr_employees_path, class: "hover:text-hamzis-copper transition-colors" %>
    <svg xmlns="http://www.w3.org" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7" />
    </svg>
    <%= link_to @employee.full_name, hr_employee_path(@employee), class: "hover:text-hamzis-copper transition-colors" %>
    <svg xmlns="http://www.w3.org" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7" />
    </svg>
    <span class="text-hamzis-copper">Profile Modification</span>
  </nav>
  <div class="flex items-center gap-3">
    <div class="p-3 rounded-2xl bg-hamzis-brown text-white shadow-lg shadow-hamzis-brown/20 dark:bg-hamzis-copper/20 dark:text-hamzis-copper">
      <svg xmlns="http://www.w3.org" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
    </div>
    <div>
      <h1 class="text-3xl font-black tracking-tighter text-hamzis-brown dark:text-hamzis-copper truncate max-w-md">
        <%= @employee.full_name %>
      </h1>
      <p class="text-sm text-hamzis-brown/60 dark:text-hamzis-copper/60">Update employment status, personal records, or next-of-kin details.</p>
    </div>
  </div>
</div>
<%= render "form" %>

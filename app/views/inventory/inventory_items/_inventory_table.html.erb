<div class="overflow-hidden bg-brand-white/30 dark:bg-brand-black/30 backdrop-blur-md border border-brand-secondary/20 rounded-2xl shadow-2xl">
    <% if inventory_items.any? %>
    <div class="overflow-x-auto">
        <table class="min-w-full text-left border-separate border-spacing-0">
            <thead>
                <tr class="bg-brand-secondary/90 dark:bg-brand-primary/10">
                    <% ["SKU / Designation", "Stock Level", "Valuation (Unit)", "Actions"].each do |head| %>
                    <th class="px-6 py-4 text-[10px] font-black uppercase tracking-[0.2em] text-brand-primary border-b border-brand-primary/20">
                        <%= head %>
                    </th>
                    <% end %>
                </tr>
            </thead>
            <tbody class="divide-y divide-brand-secondary/10 dark:divide-brand-primary/10">
                <% inventory_items.each_with_index do |item, index| %>
                <%= render "inventory/inventory_items/inventory_row", item: item %>
                <% end %>
            </tbody>
        </table>
    </div>
    <% else %>
    <div class="text-center py-20 bg-black/5">
        <h3 class="text-xl font-black text-brand-secondary dark:text-brand-primary uppercase tracking-tighter italic">Logistics Ledger Empty</h3>
        <p class="text-sm text-brand-secondary/50 dark:text-brand-primary/50 italic mt-1">No items currently registered in the inventory network.</p>
    </div>
    <% end %>
</div>
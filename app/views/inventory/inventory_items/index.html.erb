<% content_for :title, "Inventory Control | Hamzis Systems" %>
<div class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4">
    <div>
        <h1 class="text-4xl font-black tracking-tighter text-brand-secondary dark:text-brand-primary uppercase">Asset Registry</h1>
        <p class="text-sm text-brand-secondary/60 dark:text-brand-primary/60 italic">Centralized logistics oversight for site materials and machinery.</p>
    </div>
    <% if policy([:inventory, InventoryItem.new]).create? %>
    <%= link_to new_inventory_inventory_item_path, class: "flex items-center gap-2 px-6 py-3 rounded-xl bg-brand-primary text-white font-black uppercase tracking-widest text-[11px] shadow-lg hover:bg-white hover:text-brand-secondary transition-all duration-500 active:scale-95" do %>
    <svg xmlns="http://www.w3.org" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M12 4v16m8-8H4" />
    </svg>
    Log New Asset
    <% end %>
    <% end %>
</div>
<%= render "inventory/inventory_items/summary", inventory_items: @inventory_items %>
<!-- Strategic Search -->
<div class="mb-6 flex flex-col md:flex-row items-center gap-4 bg-brand-secondary/5 dark:bg-brand-primary/5 p-4 rounded-2xl border border-brand-secondary/10">
    <%= form_with url: inventory_inventory_items_path, method: :get, local: true, class: "flex-1 flex gap-2 w-full" do |f| %>
    <div class="relative flex-1">
        <svg xmlns="http://www.w3.org" class="absolute left-4 top-1/2 -translate-y-1/2 h-4 w-4 text-brand-secondary/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <%= f.text_field :q, value: params[:q], placeholder: "Query by Item Name or SKU Designation...",
            class: "w-full pl-11 pr-4 py-2.5 rounded-xl border border-brand-secondary/20 bg-white/50 dark:bg-black/20 text-sm focus:ring-2 focus:ring-brand-primary outline-none transition" %>
    </div>
    <%= f.submit "Query", class: "px-6 py-2.5 rounded-xl bg-brand-secondary text-white font-bold uppercase tracking-widest text-[10px] hover:bg-brand-primary transition cursor-pointer" %>
    <% end %>
    <%= link_to "Reset Filters", inventory_inventory_items_path, class: "text-[10px] font-bold uppercase tracking-widest text-brand-secondary/40 hover:text-brand-primary transition" %>
</div>
<%= render "inventory/inventory_items/inventory_table", inventory_items: @inventory_items %>
<% content_for :title, "Add Catalog Item | Hamzis Systems" %>
<div class="mb-8">
    <nav class="flex items-center gap-2 text-[10px] font-bold uppercase tracking-widest text-brand-secondary/50 dark:text-brand-primary/50 mb-2">
        <%= link_to "Inventory Catalog", inventory_inventory_items_path, class: "hover:text-brand-primary transition-colors" %>
        <svg xmlns="http://www.w3.org" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-brand-primary">New Stock Item</span>
    </nav>
    <div class="flex items-center gap-3">
        <div class="p-3 rounded-2xl bg-brand-primary text-white shadow-lg shadow-brand-primary/20">
            <svg xmlns="http://www.w3.org" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
        </div>
        <div>
            <h1 class="text-3xl font-black tracking-tighter text-brand-secondary dark:text-brand-primary">Catalog Entry</h1>
            <p class="text-sm text-brand-secondary/60 dark:text-brand-primary/60">Define a new material or equipment for global tracking.</p>
        </div>
    </div>
</div>
<%= render "form", inventory_item: @inventory_item %>
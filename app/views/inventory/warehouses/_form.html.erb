<%= form_with(model: [:inventory, @warehouse], local: true, class: "space-y-6 hr-form") do |f| %>
<div class="max-w-2xl bg-brand-white/30 dark:bg-brand-black/30 border border-brand-secondary/20 rounded-2xl p-8 shadow-xl backdrop-blur-sm">
    <%# Header with Icon %>
    <div class="flex items-center gap-3 mb-8">
        <div class="p-3 rounded-2xl bg-brand-primary/10 text-brand-primary">
            <svg xmlns="http://www.w3.org" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
        </div>
        <div>
            <h4 class="text-sm font-black uppercase tracking-widest text-brand-secondary dark:text-brand-primary">Storage Facility</h4>
            <p class="text-[10px] text-brand-secondary/50 dark:text-brand-primary/50 uppercase tracking-tighter">Define physical inventory nodes</p>
        </div>
    </div>
    <div class="space-y-5">
        <%# Name & Code Grid %>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="sm:col-span-2">
                <%= f.label :name, "Warehouse Designation", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
                <%= f.text_field :name, placeholder: "e.g. Central Distribution Hub",
                class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary transition outline-none" %>
            </div>
            <div class="sm:col-span-1">
                <%= f.label :code, "Facility Code", class: "block text-[10px] font-bold uppercase tracking-wider mb-1 text-brand-secondary/70 dark:text-brand-primary/70" %>
                <%= f.text_field :code, placeholder: "WH-01",
                class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm font-mono dark:text-brand-primary focus:ring-2 focus:ring-brand-primary outline-none transition" %>
            </div>
        </div>
        <%# Address %>
        <div>
            <div class="flex items-center gap-2 mb-1">
                <svg xmlns="http://www.w3.org" class="h-3 w-3 text-brand-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <%= f.label :address, "Physical Location", class: "block text-[10px] font-bold uppercase tracking-wider text-brand-secondary/70 dark:text-brand-primary/70" %>
            </div>
            <%= f.text_area :address, rows: 3, placeholder: "Street address, City, State...",
              class: "w-full px-4 py-2.5 border border-brand-secondary/20 rounded-xl bg-white/50 dark:bg-black/20 text-sm dark:text-brand-primary focus:ring-2 focus:ring-brand-primary transition outline-none" %>
        </div>
        <%# Actions %>
        <div class="flex flex-col sm:flex-row gap-3 pt-6 border-t border-brand-secondary/10">
            <%= f.submit (@warehouse.persisted? ? "Update Facility" : "Register Facility"),
              class: "px-8 py-3 rounded-xl bg-brand-primary text-white hover:bg-brand-black transform transition-all active:scale-95 font-bold uppercase tracking-widest text-[10px] shadow-lg cursor-pointer" %>
            <%= link_to "Cancel", inventory_warehouses_path,
              class: "px-8 py-3 rounded-xl bg-brand-secondary/10 text-brand-secondary dark:text-brand-primary border border-brand-secondary/20 hover:bg-brand-primary hover:text-white transition-all text-center text-[10px] font-bold uppercase tracking-widest" %>
        </div>
    </div>
</div>
<% end %>
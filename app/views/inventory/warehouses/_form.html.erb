<%= form_with(model: [ :inventory, @warehouse ], local: true, class: "space-y-4") do |f| %>
  <div class="bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md
              border rounded-xl shadow-lg p-6 space-y-4 max-w-2xl">
    <!-- Name -->
    <div>
      <%= f.label :name, "Warehouse Name", class: "block font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.text_field :name, class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper" %>
    </div>
    <!-- Code -->
    <div>
      <%= f.label :code, "Code (optional)", class: "block font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.text_field :code, class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper" %>
    </div>
    <!-- Address -->
    <div>
      <%= f.label :address, "Address (optional)", class: "block font-medium mb-1 text-hamzis-brown dark:text-hamzis-copper" %>
      <%= f.text_area :address, rows: 3, class: "w-full px-3 py-2 border rounded bg-transparent text-gray-900 dark:text-hamzis-copper" %>
    </div>
    <!-- Actions -->
    <div class="flex gap-2">
      <%= f.submit (@warehouse.persisted? ? "Update Warehouse" : "Create Warehouse"),
            class: "px-4 py-2 rounded bg-hamzis-copper text-hamzis-white hover:bg-hamzis-black transition" %>
      <%= link_to "Cancel", inventory_warehouses_path,
            class: "px-4 py-2 rounded bg-hamzis-brown text-hamzis-white hover:bg-hamzis-copper transition" %>
    </div>
  </div>
<% end %>

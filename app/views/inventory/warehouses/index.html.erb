<% content_for :title, "Asset Repositories | Hamzis Systems" %>
<div class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4">
  <div>
    <h1 class="text-4xl font-black tracking-tighter text-hamzis-brown dark:text-hamzis-copper uppercase">Warehouse Registry</h1>
    <p class="text-sm text-hamzis-brown/60 dark:text-hamzis-copper/60 italic">Strategic asset storage and logistics hub management.</p>
  </div>
  <% if policy([ :inventory, Warehouse.new ]).create? %>
    <%= link_to new_inventory_warehouse_path, class: "flex items-center gap-2 px-6 py-3 rounded-xl bg-hamzis-copper text-white font-black uppercase tracking-widest text-[11px] shadow-lg hover:bg-white hover:text-hamzis-brown transition-all duration-500 active:scale-95 shadow-hamzis-copper/20" do %>
      <svg xmlns="http://www.w3.org" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M12 4v16m8-8H4" /></svg>
      New Warehouse
    <% end %>
  <% end %>
</div>
<div class="overflow-hidden bg-hamzis-white/30 dark:bg-hamzis-black/30 backdrop-blur-md border border-hamzis-brown/20 rounded-2xl shadow-2xl p-6">
  <% if @warehouses.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full text-left border-separate border-spacing-0">
        <thead>
          <tr class="bg-hamzis-brown/90 dark:bg-hamzis-copper/10 text-hamzis-copper uppercase text-[10px] font-black tracking-[0.2em]">
            <th class="px-6 py-4 border-b border-hamzis-copper/20 rounded-tl-xl">Facility Name</th>
            <th class="px-6 py-4 border-b border-hamzis-copper/20">Serial Code</th>
            <th class="px-6 py-4 border-b border-hamzis-copper/20">Geographic Location</th>
            <th class="px-6 py-4 border-b border-hamzis-copper/20 text-right rounded-tr-xl">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-hamzis-brown/10 dark:divide-hamzis-copper/10">
          <% @warehouses.each_with_index do |warehouse, index| %>
            <tr class="<%= index.even? ? 'bg-hamzis-brown/5 dark:bg-hamzis-copper/5' : '' %> group hover:bg-white/40 dark:hover:bg-hamzis-black/40 transition-all duration-300">
              <td class="px-6 py-4">
                <span class="text-sm font-black text-hamzis-brown dark:text-white uppercase tracking-tight">
                  <%= warehouse.name %>
                </span>
              </td>
              <td class="px-6 py-4">
                <span class="text-xs font-mono font-bold text-hamzis-copper bg-hamzis-copper/5 px-2 py-1 rounded border border-hamzis-copper/20">
                  <%= warehouse.code.presence || "N/A-000" %>
                </span>
              </td>
              <td class="px-6 py-4">
                <span class="text-[10px] font-bold uppercase tracking-widest text-hamzis-brown/60 dark:text-hamzis-copper/60 italic">
                  <%= warehouse.address.presence || "Undisclosed Location" %>
                </span>
              </td>
              <td class="px-6 py-4">
                <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                  <%= link_to inventory_warehouse_path(warehouse), class: "p-2 rounded-lg bg-hamzis-copper text-white hover:scale-110 transition shadow-lg", title: "Open Repository" do %>
                    <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
                  <% end %>
                  <% if policy([ :inventory, warehouse ]).update? %>
                    <%= link_to edit_inventory_warehouse_path(warehouse), class: "p-2 rounded-lg bg-hamzis-brown text-white hover:scale-110 transition shadow-lg", title: "Calibrate Details" do %>
                      <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-20">
      <h3 class="text-xl font-black text-hamzis-brown dark:text-hamzis-copper uppercase tracking-tighter italic opacity-50">Zero Storage Facilities</h3>
      <p class="text-[10px] text-white/30 mt-2 uppercase tracking-widest italic">Asset deployment requires repository provisioning.</p>
    </div>
  <% end %>
</div>

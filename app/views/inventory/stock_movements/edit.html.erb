<% content_for :title, "Edit Logistics | Hamzis Systems" %>
<div class="mb-8">
    <nav class="flex items-center gap-2 text-[10px] font-bold uppercase tracking-widest text-brand-secondary/50 dark:text-brand-primary/50 mb-2">
        <%= link_to "Inventory", inventory_inventory_items_path, class: "hover:text-brand-primary transition-colors" %>
        <svg xmlns="http://www.w3.org" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7" />
        </svg>
        <%= link_to @inventory_item.name, inventory_inventory_item_path(@inventory_item), class: "hover:text-brand-primary transition-colors" %>
        <svg xmlns="http://www.w3.org" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-brand-primary text-xs">Manifest Modification</span>
    </nav>
    <div class="flex items-center gap-3">
        <div class="p-3 rounded-2xl bg-brand-secondary text-white shadow-lg dark:bg-brand-primary/20 dark:text-brand-primary">
            <svg xmlns="http://www.w3.org" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
        </div>
        <div>
            <h1 class="text-3xl font-black tracking-tighter text-brand-secondary dark:text-brand-primary">Edit Manifest</h1>
            <p class="text-sm text-brand-secondary/60 dark:text-brand-primary/60">Adjusting audit records for <%= @inventory_item.name %></p>
        </div>
    </div>
</div>
<%= render "form", stock_movement: @stock_movement, inventory_item: @inventory_item %>
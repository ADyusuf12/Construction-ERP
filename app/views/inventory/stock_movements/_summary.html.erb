<div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-10">
    <% [
    { label: "Inbound Flow", count: summary[:inbound], color: "blue-500" },
    { label: "Outbound Flow", count: summary[:outbound], color: "brand-primary" },
    { label: "Site Deliveries", count: summary[:site_delivery], color: "green-500" },
    { label: "Adjustments", count: summary[:adjustment], color: "yellow-500" }
  ].each do |stat| %>
    <div class="bg-brand-white/30 dark:bg-brand-black/30 border border-brand-secondary/10 rounded-2xl p-5 backdrop-blur-md shadow-xl relative overflow-hidden group">
        <div class="absolute top-0 left-0 w-1 h-full bg-<%= stat[:color] %>"></div>
        <p class="text-[9px] font-black uppercase tracking-[0.2em] text-brand-secondary/50 dark:text-brand-primary/50 mb-1"><%= stat[:label] %></p>
        <p class="text-3xl font-black text-brand-secondary dark:text-white transition-all"><%= stat[:count] %></p>
    </div>
    <% end %>
</div>
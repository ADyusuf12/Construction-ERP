<div class="overflow-x-auto">
    <% if stock_movements.any? %>
    <table class="min-w-full text-left border-separate border-spacing-0">
        <%= render "inventory/stock_movements/table_header" %>
        <tbody class="divide-y divide-brand-secondary/10 dark:divide-brand-primary/10">
            <% stock_movements.each_with_index do |m, index| %>
            <%= render "inventory/stock_movements/row",
                     movement: m,
                     row_class: index.even? ? "bg-brand-secondary/5 dark:bg-brand-primary/5" : "" %>
            <% end %>
        </tbody>
    </table>
    <% else %>
    <div class="text-center py-20">
        <p class="text-[10px] font-black uppercase tracking-[0.2em] text-brand-secondary/40">Manifest Empty</p>
        <p class="text-xs text-brand-secondary/30 italic mt-1">No logistical movements recorded in this cycle.</p>
    </div>
    <% end %>
</div>
<tr id="<%= dom_id(movement) %>" class="<%= row_class %> group hover:bg-white/40 dark:hover:bg-brand-black/40 transition-all duration-300 <%= 'opacity-40 grayscale' if movement.cancelled? %>">
  <!-- Timestamp -->
  <td class="px-6 py-4 font-mono text-[10px] font-bold text-brand-secondary dark:text-white">
    <%= l(movement.created_at, format: :short) %>
  </td>
  <!-- Type / Status -->
  <td class="px-6 py-4">
    <div class="flex flex-col gap-1">
      <span class="text-[10px] font-black uppercase tracking-widest text-brand-secondary dark:text-brand-primary">
        <%= movement.movement_type.humanize %>
      </span>
      <%
        status_style = if movement.cancelled?
          'text-red-500 bg-red-500/10 border-red-500/20'
        elsif movement.applied_at.present?
          'text-green-500 bg-green-500/10 border-green-500/20'
        else
          'text-blue-400 bg-blue-500/10 border-blue-500/20'
        end
      %>
      <span class="inline-flex items-center self-start px-2 py-0.5 rounded border text-[8px] font-black uppercase tracking-widest <%= status_style %>">
        <%= movement.cancelled? ? 'Cancelled' : (movement.applied_at.present? ? 'Applied' : 'Pending') %>
      </span>
    </div>
  </td>
  <!-- Item -->
  <td class="px-6 py-4 font-black text-brand-secondary dark:text-white uppercase tracking-tight text-xs">
    <%= movement.inventory_item&.name || "—" %>
  </td>
  <!-- Qty -->
  <td class="px-6 py-4 text-center">
    <span class="text-sm font-black text-brand-secondary dark:text-white"><%= movement.quantity %></span>
    <span class="text-[9px] font-bold text-brand-secondary/40 uppercase ml-0.5"><%= movement.inventory_item&.unit %></span>
  </td>
  <!-- Project -->
  <td class="px-6 py-4">
    <span class="text-[10px] font-bold uppercase tracking-widest text-brand-primary">
      <%= movement.project&.name || "N/A" %>
    </span>
  </td>
  <!-- Warehouse Node -->
  <td class="px-6 py-4">
    <div class="text-[9px] font-bold text-brand-secondary/60 dark:text-brand-primary/60 uppercase leading-tight">
      <% if movement.source_warehouse.present? %>
        <span class="text-[8px] opacity-50">Origin:</span> <%= movement.source_warehouse.name %>
      <% elsif movement.destination_warehouse.present? %>
        <span class="text-[8px] opacity-50">Target:</span> <%= movement.destination_warehouse.name %>
      <% else %>
        —
      <% end %>
    </div>
  </td>
  <!-- Personnel -->
  <td class="px-6 py-4">
    <span class="text-[10px] font-bold text-brand-secondary/50 uppercase tracking-tight">
      <%= movement.employee&.full_name || "System" %>
    </span>
  </td>
  <!-- Actions -->
  <td class="px-6 py-4">
    <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
      <%= link_to inventory_inventory_item_stock_movement_path(movement.inventory_item, movement), class: "p-2 rounded-lg bg-brand-primary text-white hover:scale-110 transition shadow-lg", title: "View Entry" do %>
        <svg xmlns="http://www.w3.org" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
          <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
      <% end %>
      <% if policy([:inventory, movement]).destroy? && !movement.cancelled? %>
        <button type="button"
                    class="p-2 rounded-lg bg-red-500/10 text-red-600 border border-red-500/20 hover:bg-red-600 hover:text-white transition-all cursor-pointer"
                    title="Cancel Movement"
                    data-action="click->confirm-modal#open"
          data-confirm-modal-variant-param="danger"
          data-confirm-modal-title-param="Cancel Stock Movement?"
          data-confirm-modal-message-param="This action will cancel the stock movement of <%= movement.quantity %> <%= movement.inventory_item&.unit %> for <%= movement.inventory_item&.name %>. Are you sure you want to proceed?"
          data-confirm-modal-confirm-path-param="<%= cancel_inventory_inventory_item_stock_movement_path(movement.inventory_item, movement) %>"
          data-confirm-modal-confirm-method-param="patch">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      <% end %>
    </div>
  </td>
</tr>
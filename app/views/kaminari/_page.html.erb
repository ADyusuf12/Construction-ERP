<% if page.current? %>
  <span class="flex items-center justify-center min-w-[36px] h-9 rounded-xl bg-brand-primary text-white font-black text-[11px] shadow-lg shadow-brand-primary/30 ring-2 ring-brand-primary/20 transition-all">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, remote: remote, rel: page.rel,
      class: "flex items-center justify-center min-w-[36px] h-9 rounded-xl text-brand-secondary/40 dark:text-brand-primary/40 font-black text-[11px] hover:bg-brand-secondary hover:text-white dark:hover:bg-brand-primary dark:hover:text-white transition-all active:scale-90" %>
<% end %>